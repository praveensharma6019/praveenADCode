                <div class="pl-4 form-section">
                    <form id="ContactUsFormAirport" autocomplete="off">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input class="form-control" type="text" value="" maxlength="255" placeholder="Name" name="Fullname" id="Fullname">
                                    <small></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input class="form-control" type="text" value="" maxlength="255" placeholder="Email" name="Email" id="Email">
                                    <small></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <select id="ContactType" name="ContactType" class="form-control sub" data-sc-tracking="True" required="Select Subject is required.">
                                        <option label="" value="" selected="selected">Subject</option>
                                        @foreach (Item subitem in CategoryList.GetChildren())
                                        {
                                            <option value="@Html.Sitecore().Field("Value",subitem)">@Html.Sitecore().Field("CatName", subitem)</option>
                                        }
                                    </select>
                                    <small></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input class="form-control" type="text" value="" maxlength="255" placeholder="Contact Number" name="ContactNo" id="ContactNo">
                                    <small></small>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <textarea id="Message" name="Message" class="form-control" rows="4" maxlength="512" placeholder="Message"></textarea>
                                    <small></small>
                                </div>
                            </div>
                            <div class="col-md-12 test1">
                                <div class="form-group captcha">
                                    <!-- Captcha code here -->
                                </div>
                            </div>
                            <input type="hidden" name="IpAddress" id="IpAddress" value="@encryptedClientIPString">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input value="Submit" type="submit" data-sitekey="6LdoDj4hAAAAAD7gqiPJEsAy96GJBkiNRu9qohiz" data-callback='onSubmit' data-action='submit' class="btn btn-green" id="ContactUsButton">
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

