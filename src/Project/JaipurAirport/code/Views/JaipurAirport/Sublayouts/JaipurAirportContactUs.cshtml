    string clientIP = Request.UserHostAddress;
    string encryptedClientIPString = CustomExtension.GetAndStoreEncryptedIPInCookies(clientIP);

    // Set the cookie
    HttpCookie cookie = new HttpCookie("EncryptedClientIP", encryptedClientIPString);

    // Optionally, you can set additional properties for the cookie, such as expiration and path
    cookie.Expires = DateTime.Now.AddHours(1);

    // Add the cookie to the response
    Response.Cookies.Add(cookie);
}

