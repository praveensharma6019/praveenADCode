@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model RenderingModel
@{

}

<div class="contentSection myAccountPage" style="margin-bottom:-2rem;">
    <!-- Banner -->
    <div class="mainBanner myAccountBanner">
        <div class="bannerImg"></div>

        <div class="bannerCnt">
            <div class="container">
                <div class="row align-items-start">
                    <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
                        <div class="accServicesOuter">
                            <div class="breadcrumbBar">
                                <ul>
                                    <li class=""><a href="#">Home</a></li>
                                </ul>
                            </div>
                            <h2 class="txt-orange">My Account</h2>
                            <p>With the 'My Account' feature you can:</p>
                            <div class="accountServices nohover">
                                @Html.Sitecore().Placeholder("Navigation-Control")
    
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-5 col-xl-4 ml-auto d-none d-md-block">
                        @Html.Sitecore().Placeholder("login-Control")
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- /Banner -->
    <!-- Account Box for mobile users -->
    <section class="section bg-pattern-light d-block d-md-none">
        <div class="container">
            <div class="row">
                <div class="col-12 col-sm-12">
                    @Html.Sitecore().Placeholder("login-mobile-Control")

                </div>
            </div>
        </div>
    </section>
    <!-- /Account Box for mobile users -->
</div>
