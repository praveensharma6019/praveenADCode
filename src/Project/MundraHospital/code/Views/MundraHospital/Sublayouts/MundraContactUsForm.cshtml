
@using Sitecore.Data.Items;
@{
    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var models = Sitecore.Context.Database.GetItem(datasource);
}

<section class="bg-gray py-5">
    <div class="container">
        <h4 class="heading pl-4 mb-4">Write to us</h4>
        <div class="contact-form">
            <form class="px-4 py-4" id="contact_form" name="contact_form">
                <input type="hidden" id="cFormType" value="Contact-Us">
                <input type="hidden" id="PageInfo" value="/contact-us">
                <input type="hidden" id="utm_source" value="">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <input type="text" class="form-control" id="cname" placeholder="Name">
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <input type="email" class="form-control" id="cmailid" placeholder="Email">
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <select class="form-control" id="cmessageType" placeholder="Select Subject">
                                @if (models != null)
                                {
                                    foreach (Item item in models.GetChildren())
                                    {
                                        <option value="@Html.Sitecore().Field("SubjectName",item)">@Html.Sitecore().Field("SubjectName",item)</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <input type="number" class="form-control" id="ccontactno" placeholder="Contact Number">
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <textarea class="form-control" rows="3" id="cmessage" placeholder="Message"></textarea>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <div id="recaptcha1">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3 text-right">
                        <p><button type="submit" id="btnContactUsSubmit" class="btn btn-primary">Submit</button></p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>


