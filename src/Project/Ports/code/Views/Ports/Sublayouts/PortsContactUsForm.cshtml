<section class="bg-gray py-5">
    <div class="container">
        <h4 class="heading pl-4 mb-4">Write to us</h4>
        <div class="contact-form">
            <form class="px-4 py-4">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Name">
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="Email">
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <select class="form-control" id="">
                                <option>Subject of Message</option>

                            </select>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <textarea class="form-control" rows="3" placeholder="Message"></textarea>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <img src="https://via.placeholder.com/300X50" class="img-fluid w-100 h-100">
                    </div>
                    <div class="col-md-2 mb-3">
                        <p class=" w-100 h-100"><button type="submit" class="btn btn-primary w-100 h-100">Submit</button></p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
