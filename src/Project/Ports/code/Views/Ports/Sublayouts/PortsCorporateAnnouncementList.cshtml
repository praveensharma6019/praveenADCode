@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model RenderingModel
@{
    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var parent = Sitecore.Context.Database.GetItem(datasource);
    var i = 0;
    var Items = parent.Children.Where(x => x.Fields["IsVisible"].Value =="1").OrderByDescending(x => x.Fields["Date"].Value);

}

<div class="bg-white p-4 mt-5 tab-scroll">

    @foreach (var child in Items)
    {

        <div class="corporate-ann-block mb-4">
            <p><span>@Html.Sitecore().Field("Date", child, new { format = "MMM dd, yyyy" })</span></p>
            @Html.Sitecore().Field("Body", child)
        </div>
    }

   
</div>
<div class="bg-white p-4">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
    </nav>
</div>