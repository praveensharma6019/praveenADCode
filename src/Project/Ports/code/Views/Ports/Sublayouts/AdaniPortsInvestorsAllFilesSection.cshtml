@using Sitecore.Mvc.Presentation
@using Sitecore
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Foundation.Dictionary.Repositories
@using Sitecore.Foundation.Dictionary.Extensions
@using System.Text.RegularExpressions
@using Sitecore.Data
@using Sitecore.Data.Items
@using Sitecore.Data.Fields
@using Sitecore.Mvc.Configuration
@using Sitecore.Mvc


@{
    
	var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    Item model = Sitecore.Context.Database.GetItem(datasource);
}


<section class="py-5  position-relative d-block">
<div class="container">
<div class="row">
<div class="col-lg-12">
<h2 class="heading pl-4 mb-4">Financials of Subsidiary Companies</h2>
<div class="p-4 bg-white">
<div class="owl-carousel owl-theme single-carousel">
<div class="item">
<div class="row">
	@foreach (Item item in model.GetChildren())
    {		
			<div class="col-4">
				<a href="/investors/Financials-of-Subsidiary-Companies?FincYear=@item.Name" target="_blank">@item.Name</a>
			</div>
	}
</div>
</div>
</div>
</div>
</div>
</div>
</div>
</section>