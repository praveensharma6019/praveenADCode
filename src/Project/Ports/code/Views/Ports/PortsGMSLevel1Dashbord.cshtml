
@using Sitecore.Mvc.Configuration
@using Sitecore.Mvc
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@model Sitecore.Ports.Website.Models.PortsGmsLevel1Dashbord
@using Sitecore.Ports.Website.Models
@{

    var currentDate = DateTime.Now;
    var AddGrievance = Sitecore.Context.Database.GetItem(PortsGMSTemplates.Grievance.GrievanceBookingOnBehalf);
    var Reply = Sitecore.Context.Database.GetItem(PortsGMSTemplates.Grievance.GrievanceLevel1Reply);

    var item = Sitecore.Context.Database.GetItem(PortsGMSTemplates.Grievance.GrievanceLevel1Dashbord);
    var Homelink = item.Url();
}
<section class="breadcrumb-sub-layout bg-white  pt-5 pb-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <ul class="breadcrumb-sublayout-ul">
                    <li>Home</li>
                    <li>Level-1 Dashboard</li>
                </ul>
            </div>
            <div class="col-lg-6 text-right">
                <p class="user_logout"><a href="/Grievance/Logout"><span class="fa fa-sign-out mr-2"></span>Logout</a></p>
            </div>
        </div>
    </div>
</section>
<section class="pb-5 bg-white">
    <div class="container">
        @if (Session["SuccessMsg1"] != null)
        {
            <div class="alert-success mb-4 p-2">@Session["SuccessMsg1"]</div>
            Session["SuccessMsg1"] = null;
        }
        @if (Session["ErrorMsg1"] != null)
        {
            <div class="alert-danger mb-4 p-2">@Session["ErrorMsg1"]</div>
            Session["ErrorMsg1"] = null;
        }
        <div class="form_panel bg-l-gray p-4 box-shadow">
            @*<h3 class="heading mb-4 pl-3">
                    Dashboard<span class="float-lg-right pt-3 pt-lg-0"><a href="@AddGrievance.Url()" class="btn btn-info">Add Grievance On Behalf</a></span>
                </h3>*@
            @using (Html.BeginRouteForm(MvcSettings.SitecoreRouteName, FormMethod.Post, new { @class = "form-level1", id = "form-level1" }))
            {
                <div class="row">

                    <div class="col-lg-3 col-md-6">
                        <div class="form-group">
                            <label>From</label>
                            <input type="date" name="FromDate" value="@Model.FromDate" class="form-control" required id="ContentPlaceHolder1_date" placeholder="DD/MM/YYYY">
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="form-group">
                            <label>To</label>
                            <input type="date" name="ToDate" value="@Model.ToDate" class="form-control" required id="ContentPlaceHolder1_date" placeholder="DD/MM/YYYY">
                        </div>
                    </div>
                    <div class="col-lg-12 mb-3 text-right">
                        <button type="submit" class="btn btn-secondary">Search</button>
                        <input name="submit" type="submit" id="reset" class="btn btn-dark" value="Reset" />
                        @*<button type="submit" class="btn btn-secondary">Search</button>*@
                        @*<a href="@Homelink" class="btn btn-dark">Reset</a>*@
                    </div>
                </div>
            }
            @if (Model.AllBookings.Count > 0)
            {
                <div class="">
                    <div class="">
                        <table id="bookings" class="table table-bordered table-hover dt-responsive border">
                            <thead>
                                <tr>
                                    <th>Submit On</th>
                                    <th>Grievance Status</th>
                                    <th>Grievance No.</th>
                                    <th>Name</th>
                                    <th>Company Name</th>
                                    <th>Contact No</th>
                                    <th>Email</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var bData in Model.AllBookings)
                                {

                                    <tr>
                                        <td>@bData.Created_Date</td>
                                        <td>@bData.Status</td>
                                        <td style="text-transform:uppercase;"><a href="@Reply.Url()?id=@bData.Id">@bData.Id</a></td>
                                        <td>@bData.Name</td>
                                        <td>@bData.Company</td>
                                        <td>@bData.Mobile</td>
                                        <td>@bData.Email</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <div class="alert-danger mb-4 p-2">No Grievance Found!</div>
            }

        </div>
    </div>
</section>
