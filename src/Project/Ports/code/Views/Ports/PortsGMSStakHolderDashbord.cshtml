
@using Sitecore.Mvc.Configuration
@using Sitecore.Mvc
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@model Sitecore.Ports.Website.Models.PortsGmsStakHolderDashbord
@using Sitecore.Ports.Website.Models
@{

    var currentDate = DateTime.Now;
    var AddGrievance = Sitecore.Context.Database.GetItem(PortsGMSTemplates.Grievance.GrievanceBooking);
    var ViewGrievance = Sitecore.Context.Database.GetItem(PortsGMSTemplates.Grievance.GrievanceStakeHolderGrievanceView);

}
<section class="breadcrumb-sub-layout bg-white  pt-5 pb-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <ul class="breadcrumb-sublayout-ul">
                    <li><a href="/Home">Home</a></li>
                    <li>Dashboard</li>
                </ul>
            </div>
            <div class="col-lg-6 text-right">
                <p class="user_logout"><a href="/Grievance/Logout"><span class="fa fa-sign-out mr-2"></span>Logout</a></p>
            </div>
        </div>
    </div>
</section>
<section class="pb-5 bg-white">
    <div class="container">
        <div class="form_panel bg-l-gray p-4 box-shadow">
            <h3 class="heading mb-4 pl-3">
                Dashboard<span class="float-lg-right pt-3 pt-lg-0"><a href="@AddGrievance.Url()" class="btn btn-info">Add Grievance</a></span>
            </h3>

            @using (Html.BeginRouteForm(MvcSettings.SitecoreRouteName, FormMethod.Post, new { @class = "form-stakholder", id = "form-stakholder" }))
            {
                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label>Grievance Status</label>
                            <select class="form-control" name="BookingStatus" id="BookingStatus">
                                <option value="">Select Grievance Status</option>
                                <option value="@PortsGMSTemplates.GMSFlags.BookingOpen" @{string sel = Model.BookingStatus == PortsGMSTemplates.GMSFlags.BookingOpen ? "Selected" : "";} @sel>@PortsGMSTemplates.GMSFlags.BookingOpen</option>
                                <option value="@PortsGMSTemplates.GMSFlags.BookingClosed" @{string sel1 = Model.BookingStatus == PortsGMSTemplates.GMSFlags.BookingClosed ? "Selected" : "";} @sel1>@PortsGMSTemplates.GMSFlags.BookingClosed</option>
                                <option value="@PortsGMSTemplates.GMSFlags.BookingDraft" @{string sel2 = Model.BookingStatus == PortsGMSTemplates.GMSFlags.BookingDraft ? "Selected" : "";} @sel2>@PortsGMSTemplates.GMSFlags.BookingDraft</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="form-group">
                            <label>From</label>
                            <input type="date" name="FromDate" value="@Model.FromDate" class="form-control" required id="ContentPlaceHolder1_date" placeholder="DD/MM/YYYY">
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="form-group">
                            <label>To</label>
                            <input type="date" name="ToDate" value="@Model.ToDate" class="form-control" required id="ContentPlaceHolder1_date" placeholder="DD/MM/YYYY">
                        </div>
                    </div>
                    <div class="col-lg-12 mb-5 text-right">
                        <button type="submit" value="Search" class="btn btn-secondary">Search</button>
                        @*<button type="button" value="Reset" class="btn btn-dark reset">Reset</button>*@
                        <input name="submit" type="submit" id="reset" class="btn btn-dark" value="Reset" />
                    </div>
                </div>
            }
            @if (Model.AllBookings.Count > 0)
            {
                <div class="">
                    <div class="">
                        <table id="bookings" class="table table-bordered table-hover dt-responsive border">
                            <thead>
                                <tr>
                                    <th>Submit On</th>
                                    <th>Status</th>
                                    <th>Grievance No.</th>
                                    <th>Nature</th>
                                    <th>Location</th>
                                    <th>Subject</th>
                                    <th>Name</th>
                                    <th>Company Name</th>
                                    <th>Contact No</th>
                                    <th>Email</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var bData in Model.AllBookings)
                                {

                                    <tr>
                                        <td>@bData.Created_Date</td>
                                        <td>@bData.Status</td>
                                        <td><a href="@ViewGrievance.Url()?id=@bData.Id">@bData.Id</a></td>
                                        <td>@bData.Nature</td>
                                        <td>@bData.Location</td>
                                        <td>@bData.Subject</td>
                                        <td>@bData.Name</td>
                                        <td>@bData.Company</td>
                                        <td>@bData.Mobile</td>
                                        <td>@bData.Email</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <div class="alert-danger mb-4 p-2">No Bookings Found!</div>
            }

        </div>
    </div>
</section>
