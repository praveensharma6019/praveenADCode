@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions

@using Sitecore.Mvc.Configuration
@using Sitecore.Mvc
@model Sitecore.Ports.Website.Models.PortsGMSLoginModel

<section class="section-login">
    <div class="bg-images"><img src="https://www.adaniports.com/-/media/Project/Ports/PortsAndTerminals/PortImage/Mundra-Port/MundraBanner03/Integrated-Transformation-APSEZ-Mundra-1.jpeg?h=657&la=en&w=1280&hash=22F5BBC1443E7B5B1B4FAABDA2231EA9"></div>
    <div class="container">

        <div class="form_panel">
            @using (Html.BeginRouteForm(MvcSettings.SitecoreRouteName, FormMethod.Post, new { @class = "form-signin", id = "PortsGmsLoginForm" }))
            {
                @Html.AntiForgeryToken()
                @Html.AddUniqueFormId()
                @Html.ValidationSummary(true)
                <div class="">
                    <div class="box-login">
                        @if (Session["SuccessMsg"] != null)
                        {
                            <div class="alert-success mb-4 p-2">@Session["SuccessMsg"]</div>
                            Session["SuccessMsg"] = null;
                        }
                        @if (Session["ErrorMsg"] != null)
                        {
                            <div class="alert-danger mb-4 p-2">@Session["ErrorMsg"]</div>
                            Session["ErrorMsg"] = null;
                        }
                        <h1>Login</h1>
                        <h2>Please Login to Continue</h2>

                        <div class="form-group">
                            <input type="text" class="form-control" name="Email" id="Email" aria-describedby="User ID/Mobile Number" onfocusout="SendLoginOtpEmail(event,this);" autocomplete="off" placeholder="Enter Email">
                            <small id="mail-login-msg" class="form-text text-muted"></small>

                        </div>
                        <p class="seperater">OR</p>
                        <div class="form-group">
                            <input type="text" class="form-control" name="Mobile" id="mobile-login" aria-describedby="User ID/Mobile Number" onfocusout="SendLoginOtpMobile(event,this);" autocomplete="off" placeholder="Enter Mobile No.">
                            <small id="mo-login-msg" class="form-text text-muted"></small>
                        </div>
                        <div class="form-group">
                            <input type="text" name="OTP" class="form-control" id="OTP" placeholder="Enter OTP">
                            <input type="hidden" name="InCompleteGrievance" value="@Session["InCompleteGrievance"]" />
                            <input type="hidden" name="Gcptchares" class="g-cptcha-res" />
                        </div>
                        <div class="row mb-4">
                            <div class="col-sm-12 text-right ml-auto">
                                <p class="user-registration">Not registed Yet? <a href="/GrievanceRegistration">Register</a><p>
                            </div>
                        </div>
                        <div class="text-right">
                            <button class="btn btn-gradient" type="button" id="portsRegisterbtn" data-sitekey="6Lfwlk8mAAAAADm4UhICQR0KxNZKWC_3TwNpDlEm"
                                    data-callback='onSubmit' data-action='submit'>
                                <span>Login</span>
                            </button>
                        </div>

                    </div>
                </div>
            }
        </div>


</section>