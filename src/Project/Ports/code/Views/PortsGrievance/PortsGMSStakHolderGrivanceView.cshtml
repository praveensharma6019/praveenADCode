@{
    var Home = Sitecore.Context.Database.GetItem("{11DA71B0-CCA3-4C7C-A77A-53A15DE042C6}");
	var Logout = Sitecore.Context.Database.GetItem("{47B87494-30B8-4AA7-AE92-C9BC02116B90}");
    var StakeholderGrievanceReview = Sitecore.Context.Database.GetItem("{DD113836-248D-4809-8377-5CACF40F2ED9}");
    var Address = Sitecore.Context.Database.GetItem("{268B4CDB-A7DD-4FE0-9CAE-9DA38AD02EE1}");
    var Areyousatisfiedwiththeresponse = Sitecore.Context.Database.GetItem("{759CC695-3BD5-4102-A8F7-C906118CC362}");
    var Close = Sitecore.Context.Database.GetItem("{E79E3995-48C8-4249-8A6C-53F45B94BAA2}");
    var DOB = Sitecore.Context.Database.GetItem("{6570C8A6-D690-4880-B56D-C8C049F8CB1C}");
    var Email = Sitecore.Context.Database.GetItem("{3CE3368F-CD4C-404D-A702-6EBE307A26ED}");
    var FinalComment = Sitecore.Context.Database.GetItem("{4AA1064E-8094-42F3-999B-8ACB41131BB9}");
    var ForStakeHolder = Sitecore.Context.Database.GetItem("{34FF1236-5C56-46B7-95F0-875EE97F01C4}");
    var Gender = Sitecore.Context.Database.GetItem("{0AB2FB56-B9AD-44F4-AD7C-D3D5257AC3D5}");
    var GrievanceBrief = Sitecore.Context.Database.GetItem("{CF352B1C-2C42-4804-BF8A-23A812002594}");
    var GrievanceDetails = Sitecore.Context.Database.GetItem("{1E560E9C-0F63-4FBA-A50A-5AA3F82B4E95}");
    var GrievanceID = Sitecore.Context.Database.GetItem("{4D08AD45-6870-41CF-8B7F-C255238A4D9C}");
    var Location = Sitecore.Context.Database.GetItem("{ED2C31A9-6E19-4662-B829-A0B9074B258D}");
    var LocationDepartment = Sitecore.Context.Database.GetItem("{FD14F065-7790-49CA-B3B3-F69620CA950F}");
    var Mobile = Sitecore.Context.Database.GetItem("{0784625B-3F1D-4569-A231-687A4E07DBAE}");
    var Name = Sitecore.Context.Database.GetItem("{8E489AED-71BD-4B84-AA77-95F11D92636A}");
    var Remarks = Sitecore.Context.Database.GetItem("{0CA0616F-94C3-4D2D-AC43-8FD4843E8ADB}");
    var StakeholderDetails = Sitecore.Context.Database.GetItem("{541638EB-36E3-4FDB-96F7-5347F308BA94}");
    var StakeholderRemarks = Sitecore.Context.Database.GetItem("{AB1BC128-02C1-433C-BCEF-88478D6ACB17}");
    var Subject = Sitecore.Context.Database.GetItem("{D058BE29-EF74-4EBB-96C8-FE6C4A1CB000}");
    var WhoImpacted = Sitecore.Context.Database.GetItem("{F05CA11E-47D7-496A-A8F4-053F4C7C2274}");
    var item = Sitecore.Context.Database.GetItem(PortsGMSTemplates.Grievance.GrievanceStakHolderDashbord);
    var link = item.Url();

}

<section class="breadcrumb-sub-layout bg-white  pt-5 pb-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <ul class="breadcrumb-sublayout-ul">
                    <li><a href="/grievance/stakholder">@Home["Title"]</a></li>
                    <li>@StakeholderGrievanceReview["Title"]</li>
                </ul>
            </div>
            <div class="col-lg-6 text-right">
                <p class="user_logout"><a href="/Grievance/Logout"><span class="fa fa-sign-out mr-2"></span>@Logout["Title"]</a></p>
            </div>
        </div>
    </div>
</section>
<section class="pb-5 bg-white">
    <div class="container">
        <form action="" enctype="multipart/form-data" id="PortsGMSStakHolderGrivanceView" method="post">
            <div class="form_panel bg-l-gray p-4 box-shadow">
                <h3 class="heading mb-4 pl-3">@StakeholderDetails["Title"]</h3>
                <div class="row">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label for="">@Name["Title"]</label>
                            <input type="text" class="form-control" value="@Model.Name" name="Name" placeholder="" readonly>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <div class="form-group">
                            <label for="">@Address["Title"]</label>
                            <input type="text" class="form-control" value="@Model.Address" name="Address" placeholder="" readonly>
                        </div>
                    </div>
                    <div class="col-lg-3 d-none">
                        <div class="form-group">
                            <label for="">@DOB["Title"]</label>
                            <input type="text" class="form-control" name="DOB" value="@Model.DOB" placeholder="" readonly>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label for="">@Email["Title"]</label>
                            <input type="text" class="form-control" name="Email" value="@Model.Email" placeholder="" readonly>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label for="">@Mobile["Title"]</label>
                            <input type="text" class="form-control" name="Mobile" value="@Model.Mobile" placeholder="" readonly>
                        </div>
                    </div>

                </div>
                <hr>
                <h3 class="heading mb-4 pl-3">@GrievanceDetails["Title"]</h3>
                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <label for="">@GrievanceID["Title"]</label>
                        <div class="form-group">
                            <input style="text-transform:uppercase;" type="text" class="form-control" name="Id" id="Id" value="@Model.Id" placeholder="" readonly>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <label for="">@Location["Title"]</label>
                        <div class="form-group">
                            <input type="text" class="form-control" name="Location" value="@Model.Location" placeholder="" readonly>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 d-none">
                        <label for="">@LocationDepartment["Title"]</label>
                        <div class="form-group">
                            <input type="text" class="form-control" name="Department" value="@Model.Department" placeholder="" readonly>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-6">
                        <label for="">@Subject["Title"]</label>
                        <div class="form-group">
                            <input type="text" class="form-control" name="Subject" minl value="@Model.Subject" minlength="10" placeholder="" readonly>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 d-none">
                        <label for="">@WhoImpacted["Title"]</label>
                        <div class="form-group">
                            <input type="text" class="form-control" name="WhoImpacted" value="@Model.WhoImpacted" placeholder="" readonly>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-6">
                        <label for="">@GrievanceBrief["Title"]</label>
                        <div class="form-group">
                            @*<input type="text" class="form-control" name="Brief" id="Brief" value="@Model.Brief" placeholder="" readonly>*@
                            <textarea class="" name="Brief" rows="3" cols="115" minlength="50" readonly style="background-color: #deeaf5;">@Model.Brief</textarea>
                        </div>
                    </div>
                    @foreach (var stakeholder in Model.StakeholderFinalComment)
                    {
                        <div class="col-lg-12">
                            <label for="">Level-0 Final Comment(@stakeholder.UserName) [@stakeholder.Created_Date]</label>
                            <div class="form-group">
                                <textarea class="" name="Level0Comment" rows="3" cols="115" minlength="50" readonly style="background-color: #deeaf5;">@stakeholder.FinalComment</textarea>
                            </div>
                        </div>
                    }
                </div>
                <div class="col-lg-12">
                    <hr>
                </div>

                <hr>
                <div class="" id="Stakeholder" @(ViewBag.SubmitToStakeholderRecordCount == 0 ? "style=display:none" : string.Empty)>
                    <h3 class="heading mb-4 pl-3">@ForStakeHolder["Title"]</h3>
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-check">
                                <input type="checkbox" name="chkResponse" required class="form-check-input" id="chkResponse" value="@Model.ChkResponse">
                                <label class="form-check-label" for="">
                                    @Areyousatisfiedwiththeresponse["Title"]
                                </label>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <div class="form-group">
                                <label for="">
                                    @Remarks["Title"]
                                    <span class="required">*</span>
                                </label>
                                <br>
                                <textarea class="" required name="StakeholderRemarks" id="StakeholderRemarks" rows="3" cols="75"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 mt-3 text-right">
                        <input id="submitStackholderReview" class="btn btn-gradient" type="button" value="Submit" />
                        <a href="@link" class="btn btn-dark">@Close["Title"]</a>
                    </div>
                </div>

                @if (Model.Status == PortsGMSTemplates.GMSFlags.BookingReOpen || Model.Status == PortsGMSTemplates.GMSFlags.BookingClosed)
                {
                    <div class="col-lg-12 col-md-6" style=" margin-left: -10px; ">
                        <label for="">@StakeholderRemarks["Title"]</label>
                        <div class="form-group">
                            @*<input type="text" class="form-control" name="Brief" id="Brief" value="@Model.Brief" placeholder="" readonly>*@
                            <textarea class="" name="Remarks" rows="3" cols="115" minlength="50" readonly style="background-color: #deeaf5;">@Model.StakeholderRemarks</textarea>
                        </div>
                    </div>
                }
            </div>
        </form>
    </div>

</section>
