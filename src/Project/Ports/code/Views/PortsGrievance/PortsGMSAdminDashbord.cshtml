<section class="breadcrumb-sub-layout bg-white  pt-5 pb-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <ul class="breadcrumb-sublayout-ul">
                    <li><a href="@Homelink">@Home["Title"]</a></li>
                    <li>@Dashboard["Title"]</li>
                </ul>
            </div>
            <div class="col-lg-6 text-right">
                <p class="user_logout"><a href="/Grievance/Logout"><span class="fa fa-sign-out mr-2"></span>@Logout["Title"]</a></p>
            </div>
        </div>
    </div>
</section>
<section class="pb-5 bg-white">
    <div class="container">
        <div class="form_panel bg-l-gray p-4 box-shadow">
            <h3 class="heading mb-4 pl-3">
                @Dashboard["Title"]<span class="float-lg-right pt-3 pt-lg-0">
                    @*<a class="btn btn-dark">Matrix</a>
                        <a class="btn btn-secondary">Reallocate</a>*@
                    <a href="@manageUser.Url()" class="btn btn-info">@UserManagement["Title"]</a>
                </span>
            </h3>
            @using (Html.BeginRouteForm(MvcSettings.SitecoreRouteName, FormMethod.Post, new { @class = "form-admin", id = "form-admin" }))
            {
                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label>@GrievanceStatus["Title"]</label>
                            <select class="form-control" name="Status" id="Status">
                                <option value="all">All</option>
                                @*<option value="@PortsGMSTemplates.GrievanceStatus.Level3" @status1>@PortsGMSTemplates.GrievanceStatus.Level3</option>
                                    <option value="@PortsGMSTemplates.GrievanceStatus.Level2" @status1>@PortsGMSTemplates.GrievanceStatus.Level2</option>
                                    <option value="@PortsGMSTemplates.GrievanceStatus.Level1" @status1>@PortsGMSTemplates.GrievanceStatus.Level1</option>*@

                                <option value="@PortsGMSTemplates.GMSFlags.BookingOpen" @{string sel = Model.Status == PortsGMSTemplates.GMSFlags.BookingOpen ? "Selected" : "";} @sel>@PortsGMSTemplates.GMSFlags.BookingOpen</option>
                                <option value="@PortsGMSTemplates.GMSFlags.BookingClosed" @{string sel1 = Model.Status == PortsGMSTemplates.GMSFlags.BookingClosed ? "Selected" : "";} @sel1>@PortsGMSTemplates.GMSFlags.BookingClosed</option>
                                <option value="@PortsGMSTemplates.GMSFlags.Response" @{string sel2 = Model.Status == PortsGMSTemplates.GMSFlags.Response ? "Selected" : "";} @sel2>@PortsGMSTemplates.GMSFlags.Response</option>
                                <option value="@PortsGMSTemplates.GMSFlags.BookingOnBehalf" @{string sel3 = Model.Status == PortsGMSTemplates.GMSFlags.BookingOnBehalf ? "Selected" : "";} @sel3>@PortsGMSTemplates.GMSFlags.BookingOnBehalf</option>
                                <option value="@PortsGMSTemplates.GMSFlags.BookingReOpen" @{string sel4 = Model.Status == PortsGMSTemplates.GMSFlags.BookingReOpen ? "Selected" : "";} @sel4>@PortsGMSTemplates.GMSFlags.BookingReOpen</option>
                                @*<option value="@PortsGMSTemplates.GMSFlags.BookingReOpen" @{string sel5 = Model.Status == PortsGMSTemplates.GMSFlags.BookingReOpen ? "Selected" : "";} @sel5>@PortsGMSTemplates.GMSFlags.BookingReOpen</option>*@

                            </select>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="form-group">
                            <label>@From["Title"]</label>
                            <input type="date" name="FromDate" value="@Model.FromDate" class="form-control" required id="ContentPlaceHolder1_date" placeholder="DD/MM/YYYY">
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="form-group">
                            <label>@To["Title"]</label>
                            <input type="date" name="ToDate" value="@Model.ToDate" class="form-control" required id="ContentPlaceHolder1_date" placeholder="DD/MM/YYYY">
                        </div>
                    </div>
                    <div class="col-lg-12 mb-3 text-right">
                        <button type="submit" class="btn btn-secondary">@Search["Title"]</button>
                        @*<button type="button" class="btn btn-dark reset">Reset</button>*@
                        <input name="submit" type="submit" id="reset" class="btn btn-dark" value="@Reset["Title"]" />
                        @*<a href="@Homelink1" class="btn btn-dark">Reset</a>*@
                    </div>
                </div>
            }
            @if (Model.AllBookings.Count > 0)
            {
                <div class="">
                    <div class="table-responsive">
                        <table id="bookings" class="table table-bordered table-hover dt-responsive border">
                            <thead>
                                <tr>
                                    <th>@SubmitOn["Title"]</th>
                                    <th>@GrievanceStatus["Title"]</th>
                                    <th>@GrievanceNo["Title"]</th>
                                    <th>@Name["Title"]</th>
                                    <th>@CompanyName["Title"]</th>
                                    <th>@ContactNo["Title"]</th>
                                    <th>@Email["Title"]</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var bData in Model.AllBookings.OrderByDescending(p => p.Created_Date).ToList())
                                {

                                    <tr>
                                        <td>
                                            @bData.Created_Date
                                        </td>
                                        <td>@bData.Status</td>
                                        <td>@bData.Id</td>
                                        <td>@bData.Name</td>
                                        <td>@bData.Company</td>
                                        <td>@bData.Mobile</td>
                                        <td>@bData.Email</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <div class="alert-danger mb-4 p-2">@NoBookingsFound["Title"]</div>
            }

        </div>
    </div>
</section>