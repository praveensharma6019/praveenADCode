    <div class="grid-100 mobile-grid-100 tablet-grid-100">

        <div class="grid-50 mobile-grid-50 tablet-grid-50">
            <input class="btn btn-primary" type="button" id="btnEnquirySubmit" value="Submit" />  <input class="btn btn-secondary" type="reset" />
        </div>
