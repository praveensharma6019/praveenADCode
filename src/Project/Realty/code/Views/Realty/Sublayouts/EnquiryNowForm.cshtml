@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Realty.Website
@using Sitecore.Mvc.Configuration
@model Sitecore.Realty.Website.Model.EnquiryModel

@{
    var id = Sitecore.Context.Database.GetItem(Templates.ThankYouPage.ID).Url();
    string RedirectUrl = Request.Url.Scheme + "://" + Request.Url.Host;
    var pagename = Sitecore.Links.LinkManager.GetItemUrl(Sitecore.Context.Item);


}


<form id="enquiry_form1" name="enquiry_form1" action="https://webto.salesforce.com/servlet/servlet.WebToLead?encoding=UTF-8" method="POST" class="form1" style="padding: 1% 3%;">
    @*<input type=hidden name="oid" value="00D28000000eQCv">*@
    <input type=hidden name="retURL" id="retURL" value="@RedirectUrl">
    <input type=hidden name="lead_source" value="5 - Web to Lead">
    @*<input type="hidden" name="00N2800000DM81x" value="1">*@
    <input type="hidden" id="FormType" value="enquiry" />
    <input type="hidden" id="PageInfo" value="@pagename" />
    <input type="hidden" id="utm_source" value="" />
    <div class="grid-100">
        <div class="grid-35">
            <P style="font-family: 'futura_md_btmedium'!important;">First Name: <i class="required txt-bold">*</i></P>
        </div>
        <div class="grid-65">
            <input class="form-control" type="text" name="first_name" id="firstname" required="required">

        </div>
    </div>
    <br>
    <div class="grid-100">
        <div class="grid-35">
            <p style="font-family: 'futura_md_btmedium'!important;">Last Name: <i class="required txt-bold">*</i></p>
        </div>
        <div class="grid-65">
            <input class="form-control" type="text" name="last_name" id="lastname" required="required">
        </div>
    </div>
    <br>
    <div class="grid-100">
        <div class="grid-35">
            <p style="font-family: 'futura_md_btmedium'!important;">Email: <i class="required txt-bold">*</i></p>
        </div>
        <div class="grid-65">
            <input class="form-control" type="email" name="email" id="enuiry-email" required="required">
        </div>
    </div><br>
    <div class="grid-100">
        <div class="grid-35">
            <p style="font-family: 'futura_md_btmedium'!important;">Mobile: <i class="required txt-bold">*</i></p>
        </div>
        <div class="grid-65">
            <input class="form-control" type="number" name="mobile" id="enuiry-mobile" required="required">
        </div>
    </div><br>
    <div class="grid-100">
        <div class="grid-35">
            <p style="font-family: 'futura_md_btmedium'!important;">Budget(In Rs.): <i class="required txt-bold">*</i></p>
        </div>
        <div class="grid-65">
            <input class="form-control" type="number" name="00N28000007ZbWU" id="budget" required="required">
        </div>
    </div><br>
    <div class="grid-100">
        <div class="grid-35">
            <p style="font-family: 'futura_md_btmedium'!important;">Country: <i class="required txt-bold">*</i></p>
        </div>
        <div class="grid-65">
            @Html.DropDownList("country_code", new List<SelectListItem>
            {
               new SelectListItem{Value="AU",Text="Australia"},
               new SelectListItem{Value="CA",Text="Canada"},
               new SelectListItem{Value="BR",Text="Brazil"},
               new SelectListItem{Value="CN",Text="China"},
               new SelectListItem{Value="DE",Text="Germany"},
               new SelectListItem{Value="GB",Text="United Kingdom"},
               new SelectListItem{Value="IE",Text="Ireland"},
               new SelectListItem{Value="IN",Text="India"},
               new SelectListItem{Value="IT",Text="Italy"},
               new SelectListItem{Value="MX",Text="Mexico"},
               new SelectListItem{Value="US",Text="United States"},
            }, "Select Country",new {id="drpcountry", @class = "form-control" })
        </div>
    </div><br>
    <div class="grid-100">
        <div class="grid-35">
            <p style="font-family: 'futura_md_btmedium'!important;">State / Province: <i class="required txt-bold">*</i></p>
        </div>
        <div class="grid-65">
            @Html.DropDownList("state_code", new List<SelectListItem> { }, "Select State", new { id = "state", @class = "form-control" })
        </div>
    </div><br>
    <div class="grid-100">
        <div class="grid-35">
            <p style="font-family: 'futura_md_btmedium'!important;">Remarks: <i class="required txt-bold">*</i></p>
        </div>
        <div class="grid-65">
            <textarea class="form-control" name="00N28000007ZbWx" rows="2" cols="50" id="remarks"></textarea>
        </div>
    </div><br>
    <div class="grid-100">
        <div class="grid-35">
