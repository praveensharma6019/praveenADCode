@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Mvc.Configuration
@model  Sitecore.Realty.Website.Model.PropertyCollection

@if (Model != null && !string.IsNullOrEmpty(Model.TransactionId) && Model.PaymentStatus.ToUpper() == "SUCCESS")
{
    <div class="pageContent">
        <div class="container">
            <div class="panel dvContents" id="dvContents">
                <h5 class="pt-3">Thanks for your payment</h5>
                <p>Please find below details for your payment reference</p>
                <br />
                <h5 class="txt-orange">Your Billing Details</h5>
                <div class="py-3"></div>
                <div class="form-group row">
                    <label for="" class="col-sm-4 col-md-3 col-form-label">@Html.Sitecore().Dictionary("/sitecore/content/Realty/Global/Dictionary/BookNow/BookingPayment/TransactionNumber", "Transaction Number")</label>
                    <div class="col-sm-8 col-lg-6">
                        <input type="text" readonly="" class="form-control-plaintext" id="" value="@Model.TransactionId">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="" class="col-sm-4 col-md-3 col-form-label">@Html.Sitecore().Dictionary("/sitecore/content/Realty/Global/Dictionary/BookNow/BookingPayment/OrderNumber", "Order Number")</label>
                    <div class="col-sm-8 col-lg-6">
                        <input type="text" readonly="" class="form-control-plaintext" id="" value="@Model.OrderId">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="" class="col-sm-4 col-md-3 col-form-label">@Html.Sitecore().Dictionary("/sitecore/content/Realty/Global/Dictionary/BookNow/BookingPayment/AccountNumber", "Customer Name")</label>
                    <div class="col-sm-8 col-lg-6">
                        <input type="text" readonly="" class="form-control-plaintext" id="" value="@Model.FullName">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="" class="col-sm-4 col-md-3 col-form-label">@Html.Sitecore().Dictionary("/sitecore/content/Realty/Global/Dictionary/BookNow/BookingPayment/Amount", "Amount")</label>
                    <div class="col-sm-8 col-lg-6">
                        <input type="text" readonly="" class="form-control-plaintext" id="" value="@Model.PaymentAmount">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="" class="col-sm-4 col-md-3 col-form-label">@Html.Sitecore().Dictionary("/sitecore/content/Realty/Global/Dictionary/BookNow/BookingPayment/Transaction Date Label", "Transaction Date")</label>
                    <div class="col-sm-8 col-lg-6">
                        <input type="text" readonly="" class="form-control-plaintext" id="" value="@Model.TransactionDate">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="" class="col-sm-4 col-md-3 col-form-label">@Html.Sitecore().Dictionary("/sitecore/content/Realty/Global/Dictionary/BookNow/BookingPayment/PaymentStatus", "Payment Status")</label>
                    <div class="col-sm-8 col-lg-6">
                        <input type="text" readonly="" class="form-control-plaintext" id="" value="@Html.Sitecore().Dictionary("/sitecore/content/Realty/Global/Dictionary/BookNow/BookingPayment/PaymentSuccessText", "SUCCESS")">
                    </div>
                </div>


            </div>
            <div class="">
                <div class="form-group row">
                    <div class="col-sm-8 col-lg-6">                        
                        <input type="button" class="btn btn-primary" value="@Html.Sitecore().Dictionary("/Realty/ViewandPayBookingAmount/prin", "Print this page")" onclick="PrintDiv()" />
                    </div>
                </div>
            </div>

        </div>
    </div>

}
else if(Model != null && Model.PaymentStatus.ToUpper() != "SUCCESS")
{
    Response.Redirect("~/PaymentGateway/Payment-Failed");
}
else
{
    <div class="pageContent">
        <div class="container">
            <div class="panel">
                <h5 class="pt-3">Thanks for your payment</h5>
                <br />
                <h5 class="txt-orange">There is some technically difficulty. Please contact customer care for more information</h5>
            </div>
        </div>
    </div>
}


<script type="text/javascript">
    function PrintDiv() {
    var divContents = document.getElementById("dvContents").innerHTML;
    var printWindow = window.open('', '', 'height=600,width=800');
    printWindow.document.write('<html><head><link href="/styles/Electricity/bootstrap.min.css" rel="stylesheet" /><link href="/styles/Electricity/adani-electricity.css" rel="stylesheet" /><title>Adani Realty Payment Receipt</title>');
    printWindow.document.write('</head><body >');
    printWindow.document.write(divContents);
    printWindow.document.write('</body></html>');
    printWindow.document.close();
    printWindow.focus();
    setTimeout( function () {
        printWindow.print();
        printWindow.close();
    }, 2000);
}
</script>