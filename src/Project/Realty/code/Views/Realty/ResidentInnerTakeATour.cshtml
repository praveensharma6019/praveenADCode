@using Sitecore.Data.Fields
@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Resources.Media
@using Sitecore.Realty.Website
@using Sitecore.Foundation.Alerts
@using Sitecore.Foundation.Alerts.Extensions
@model Sitecore.Mvc.Presentation.RenderingModel

@if (!Model?.Item?.IsDerived(Templates.ResidentTopProperty.ID) ?? true)
{
    @Html.PageEditorError(AlertTexts.InvalidDataSourceTemplate(Templates.ResidentTopProperty.ID), AlertTexts.InvalidDataSourceTemplateFriendlyMessage, Model.Item?.ID, Model.Rendering.Item?.ID)
    return;
}

@{
    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var model = Sitecore.Context.Database.GetItem(datasource);
}
<section class="section bg-white">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h3 class="sectionHeading txtleft">
                    @Html.Sitecore().Field(Templates.ResidentTopProperty.Fields.Title, model)
                </h3>
                <p class="txt-md">
                    @Html.Sitecore().Field(Templates.ResidentTopProperty.Fields.Description, model)
                </p>
            </div>
            <div class="col-sm-6">
                <a href="video-01" data-toggle="modal" data-target="#pro1">
                    @Html.Sitecore().Field(Templates.ResidentTopProperty.Fields.VideoThumb, model, new { @class = "img-fluid h-cursor" })
                </a>
                <!-- The Modal -->
                <div class="modal video media-video" id="pro1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <!-- Modal Header -->
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <!-- Modal body -->
                            <div class="modal-body">
                                <iframe width="100%" height="480" src=@Html.Sitecore().Field(Templates.ResidentTopProperty.Fields.VideoLink,model) frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                            </div>
                        </div>
                    </div>
                </div>
                <!--End-->
            </div>
        </div>
    </div>
</section>