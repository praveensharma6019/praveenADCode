@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Resources.Media
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using System.Globalization;
@model RenderingModel
@{
   var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var model = Sitecore.Context.Database.GetItem(datasource);
	
	var MediaUrl=""; 
    var MediaAlt=""; 
	var Linkurl = "#";
	 
	Sitecore.Data.Fields.LinkField linkfield = ((Sitecore.Data.Fields.LinkField)model.Fields["LinkUrl"]); 
	if(linkfield != null) 
	{ 
		Linkurl = linkfield.GetFriendlyUrl();
	} 
	
	Sitecore.Data.Fields.ImageField MediaImage = ((Sitecore.Data.Fields.ImageField)model.Fields["ImageSource"]);
	if (MediaImage != null && MediaImage.MediaItem != null) 
	{ 
	    MediaUrl = Sitecore.Resources.Media.MediaManager.GetMediaUrl(MediaImage.MediaItem);
		MediaAlt = MediaImage.Alt;
	}		 
}

	<section class="ManagmentCorner">
      <div class="container">
        <div class="LeftTittle">
          <div class="Rectangle"></div>
          <img src="@MediaUrl" class="CEO-IMG" alt="@MediaAlt"/>
        </div>

        <div class="RightTittle">
          <h5 class="MangmentHeading">@Html.Sitecore().Field("Heading",model)</h5>
          @Html.Sitecore().Field("Description",model)
          <a href="@Linkurl" class="KnowMoreBtn">@Html.Sitecore().Field("LinkText",model)</a>
        </div>
      </div>
    </section>
