@using Sitecore.Mvc.Presentation
@using Sitecore
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Foundation.Dictionary.Repositories
@using Sitecore.Foundation.Dictionary.Extensions

@{
    var count = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var items = Sitecore.Context.Database.GetItem(count);
    string pagename = Path.GetFileName(Request.Url.AbsolutePath);

	// var Sustainabilitydatasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.Parameters["SustainabilityInner"];
   // var SustainabilityInner = Sitecore.Context.Database.GetItem(Sustainabilitydatasource);

	
var i = 1;

var j = 1;
}



<section class="bg-gray py-5">
    <div class="container">
        <h2 class="heading pl-4 mb-3">Towards Sustainable Development</h2>
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    @foreach (var item in items.Children.ToArray())
                    {
                        if (i == 1)
                        {
                            <div class="col-lg-12 sus-main padd-box">
                                <a href="@item.Url()">
                                    <div class="bg-images">
                                        @Html.Sitecore().ImageField("Image", item, 0, 0)

                                    </div>
                                    <div class="sustainability-block p-5">
                                        <h3>  @Html.Sitecore().Field("Title", item)</h3>
                                        <p>@Html.Sitecore().Field("Summary", item)</p>

                                    </div>
                                </a>
                            </div>
                        }
                        else if (i == 2 || i == 3)
                        { <div class="col-lg-6 sus-main padd-box">
                                <a href="@item.Url()">
                                    <div class="bg-images">
                                        @Html.Sitecore().ImageField("Image", item, 0, 0)

                                    </div>
                                    <div class="sustainability-block p-5">
                                        <h3>  @Html.Sitecore().Field("Title", item)</h3>
                                        <p>@Html.Sitecore().Field("Summary", item)</p>
                                    </div>
                                </a>
                            </div>}
                        i++;
                    }

                </div>
            </div>
            @Html.Sitecore().Placeholder("sustainability-report")
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    @foreach (var item in items.Children.ToArray())
                    {
                        if (j > 3)
                        {<div class="col-lg-4 sus-main padd-box">
                                <a href="@item.Url()">
                                    <div class="bg-images">
                                        @Html.Sitecore().ImageField("Image", item, 0, 0)

                                    </div>
                                    <div class="sustainability-block p-5">
                                        <h3>  @Html.Sitecore().Field("Title", item)</h3>
                                        <p>@Html.Sitecore().Field("Summary", item)</p>
                                    </div>
                                </a>
                            </div>
                        }
                        j++;
                    }

                </div>
            </div>
        </div>
    </div>
    </div>
</section>
