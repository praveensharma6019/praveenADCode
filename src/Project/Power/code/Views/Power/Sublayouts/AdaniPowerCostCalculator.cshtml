                    <button type="Hidden" class="btn btn-primary" id="btnreset" value="Reset" onClick="window.location.reload()" style="@disp height:77px">Calculate Again !!!</button>

                </div>
            </div>

            <div class="carbon_calculater--result" id="CalculatedValue" style="@disp">
