@model Project.Mining.Website.Models.WhoWeAreModel
@{
    var _linkurl = "";
    var _linktarget = string.Empty;
    var _linktext = string.Empty;
    
}
@if (Model != null)
{
<section class="about-us position-relative section-padding main-skeleton skeleton">
    <div class="container">
        <div class="section-info section-align">
            <h4 class="content-center-left hide-text">@Model.SubHeading</h4>
            <h1 class="content-center-left "><span class="hide-text">@Model.Heading</span></h1>

            <p class="para-margin show-mob mob-para hide-text"> @Html.Raw(Model.Description)</p>
            <p class="para-margin show-large hide-text"> @Html.Raw(Model.Description)</p>
        </div>

        <a class="read-link show-mob read-more hide-text">@Model.CTAText</a>
        <div class="about-info">
            @if (Model.WhoWeAreCards != null)
            {
                foreach (var child in Model.WhoWeAreCards)
                {
                    <div class="info-first">
                        <figure>
                            @if (child.Icon != null)
                            {
                                <img src="@child.Icon.Src" class="animate-gif" alt="@child.Icon.Alt">
                                <img src="@child.AnimationImage.Src" class="img-static" alt="@child.AnimationImage.Alt">
                            }
                        </figure>
                        <div class="info-text">
                            <h3 class="hide-text">@child.Heading</h3>
                            <p class="hide-text">@child.ShortDescription</p>
                        </div>
                    </div>
                }
            }
        </div>
        @if (Model.CTALink != null)
        {
            _linkurl = Model.CTALink.Url;
            _linktarget = Model.CTALink.Target;
            _linktext = Model.CTALink.Text;
            <div class = "abt-btn">
                <a href="@_linkurl" id="about-btn" class="section-btn-exp-2 analytics-tags hide-text" target="@_linktarget">@_linktext
            
            <meta name="Event" content="@Model.Event">
            <meta name="Category" content="@Model.Category">
            <meta name="Banner_Category" content="@Model.Banner_Category">
            <meta name="Sub_category" content="@Model.Sub_category">
            <meta name="Label" content="@Model.Label">
            <meta name="Index" content="@Model.Index">
            </a>
            </div>
        }

    </div>
</section>
}