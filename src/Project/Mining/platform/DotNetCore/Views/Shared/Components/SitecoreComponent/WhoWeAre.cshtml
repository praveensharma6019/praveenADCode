@model Project.MiningRenderingHost.Website.Models.WhoWeAre
@{
    var _linkurl = "";
    var _linktarget = string.Empty;
    var _linktext = string.Empty;
    var serverUrl = "https://sitecorecm.uat.adanirealty.com";
}
@if (Model != null)
{
    <section class="about-us position-relative section-padding">
        <div class="container">
            <div class="section-info section-align">
                <h4>@Model.SubHeading</h4>
                <h3><span>@Model.Heading</span></h3>
                @Html.Raw(Model.Description)
            </div>
            <div class="about-info-1">
                @if (Model.WhoWeAreCards != null)
                {
                    foreach (var child in Model.WhoWeAreCards)
                    {
                        <div class="info-first-1">
                            <figure>
                                @if (child.Icon != null)
                                {
                                    <img src="@serverUrl@child.Icon.Src" alt="@child.Icon.Alt">
                                }
                            </figure>
                            <div class="info-text-1">
                                <h3>@child.Heading</h3>
                                <p class="d-sm-block d-none">@child.ShortDescription</p>
                            </div>
                        </div>
                    }
                }
            </div>
            @if (Model.CtaLink != null)
            {
                _linkurl = Model.CtaLink.URL;
                _linktarget = Model.CtaLink.Target;
                _linktext = Model.CtaLink.Text;

            }

            @if (!string.IsNullOrEmpty(_linkurl))
            {
                <a href="@_linkurl" class="section-btn-exp" target="@_linktarget">@_linktext
                    <meta name="Category" content="@Model.Category">
                    <meta name="Sub_category" content="@Model.Sub_category">
                    <meta property="Page_type" content="@Model.Page_type">
                    <meta property="Label" content="@Model.Label">
                    <meta property="Index" content="@Model.Index">
                </a>
            }
        </div>
    </section>
}