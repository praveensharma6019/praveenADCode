@using Sitecore
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@model Sitecore.Mvc.Presentation.RenderingModel
@{
    /**/

    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var model = Sitecore.Context.Database.GetItem(datasource);

    var Title = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.Parameters.Where(x => x.Key == "Title").FirstOrDefault().Value;

}

@if (model != null)
{


    <section class="bg-white pt-5 content-header">
	<div class="container-fluid">
		<!-- <h2>@Title</h2> -->
        <div class="row">
	
		    <div class="col-lg-4">
            @*<h2>For Our Passenger</h2>*@
			<h2>@Title</h2>
            <p>“Your one-stop guide to travelling from IXE Airport </p>
			</div>
            @foreach (var element in model.GetChildren().ToList())
            {
			<div class="col-lg-4 col-md-6 mt-5">
				<div class="airport-section__carousel">
                <div class="item">
                    <a href="@element.Url()">
                        @Html.Sitecore().ImageField("Image", element, 0, 0, "")
                        <p>@Html.Sitecore().Field("Title", element)</p>
                    </a>
                </div>
				</div>
				</div>
            }
        </div>
	</div>
</section>

}