@using Sitecore
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@model Sitecore.Mvc.Presentation.RenderingModel
@{
	var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var model = Sitecore.Context.Database.GetItem(datasource);
}
<h2 class="section-title">
        @Html.Sitecore().Field("Title", model)
      </h2>
	  <div class="section-wrapper">
	  @foreach (var child in model.Children.ToList())
	  {
		Sitecore.Data.Fields.ImageField imgField = ((Sitecore.Data.Fields.ImageField)child.Fields["Image"]);
        string imgurl = Sitecore.Resources.Media.MediaManager.GetMediaUrl(imgField.MediaItem);
        <div class="card-box">
          <img src="@imgurl" alt="On the Day of Travel">
          <small>@Html.Sitecore().Field("Title", child)</small>
          <h4>@Html.Sitecore().Field("Body", child)</h4>
        </div>
	  }
	</div>