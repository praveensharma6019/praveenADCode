@using Sitecore
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@model Sitecore.Mvc.Presentation.RenderingModel
@{
    /**/

    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var model = Sitecore.Context.Database.GetItem(datasource);
	string CurrentURLs = Request.RawUrl;
}

@if(CurrentURLs.Contains("/mangaluru-airport"))
{
model = Sitecore.Context.Database.GetItem("{B3F69F50-9993-4D5F-9BF8-150F5E2ED6CF}");
}


<div class="container">
    <div class="row footerPanel2 pb-4">


        @foreach (var item in model.GetChildren().ToList())
        {
            var subItemModel = Sitecore.Context.Database.GetItem(item.ID);
            var childCount = subItemModel.GetChildren().Count();

            <div class="col-md-4 col-lg-2 order-2 ft-submenu ml-md-auto col-6 d-lg-block d-none">
                <h5>
                    @Html.Sitecore().BeginField("Link", item, new { haschildren = true })
                    @Html.Sitecore().Field("NavigationTitle", item)
                    @Html.Sitecore().EndField()
                </h5>
                @if (childCount > 0)
                {
                    <ul>

                        @foreach (var subItem in subItemModel.GetChildren().ToList())
                        {
                            <li class="">
                                @Html.Sitecore().BeginField("Link", subItem, new { haschildren = true })
                                @Html.Sitecore().Field("NavigationTitle", subItem)
                                @Html.Sitecore().EndField()
                            </li>
                        }
                    </ul>

                }
            </div>

        }

        <div class="col-lg-5 ft-logo order-lg-4 order-1 text-center text-lg-left">
            <img src="-/media/EDEB0E192FB0482A87B6D53B412E8BF0.ashx" class="img-fluid">
            <p class="mt-3 txt-black text-center text-lg-left">Mangaluru International Airport<span class="d-block">Bajpe Main Rd, Kenjar HC, Karnataka 574142</span></p>
            <!-- <p class="mt-1 txt-black text-center text-lg-left"><b>Tel</b> : 1800 000 00000</p> -->
            <ul class="ft-social">
                <li><a href="https://www.facebook.com/MLRairport/  " target="_blank" title="" data-toggle="tooltip" data-placement="top" data-original-title="Twitter"><img src="/images/MangaloreAirport/icon_ftr_fb.png" class="img-fluid"></a></li>
                @*<li><a href="https://www.youtube.com/user/AdaniOnline" target="_blank" title="" data-toggle="tooltip" data-placement="top" data-original-title="Twitter"><img src="/images/MangaloreAirport/icon_ftr_youtube.png" class="img-fluid"></a></li>*@
                <li><a href="https://www.instagram.com/mlrairport/ " target="_blank" title="" data-toggle="tooltip" data-placement="top" data-original-title="Instagram"><img src="/images/MangaloreAirport/Insta.png" class="img-fluid"></a></li>
                <li><a href="https://www.linkedin.com/company/adaniairports/" target="_blank" title="" data-toggle="tooltip" data-placement="top" data-original-title="Twitter"><img src="/images/MangaloreAirport/linkedin_icon.png" class="img-fluid"></a></li>
				<li><a href="https://twitter.com/mlrairport" target="_blank" title="" data-toggle="tooltip" data-placement="top" data-original-title="Twitter"><img src="/images/MangaloreAirport/icon_ftr_twitter.png" class="img-fluid"></a></li>




            </ul>
            <p class="txt-black text-center text-lg-left"><a href="https://goo.gl/maps/byk9aHFKG1F6UEsw8" target="_blank"><img src="-/media/8CC0CF7002C4426896F034C7E552CED5.ashx" class="img-fluid mr-2">Find Us On Google Maps</a></p>
            <p class="sitemap-link bg-gradient d-block d-lg-none mt-3 p-2">Sitemap<i class="fa fa-angle-down"></i></p>
        </div>


    </div>
</div>
