@using Sitecore.Mvc.Presentation
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Mvc
@using Sitecore.Data.Items;
@using Sitecore.Data.Fields;
@model RenderingModel
@{

    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    Item models = Sitecore.Context.Database.GetItem(datasource);

    Item rootItem = Sitecore.Context.Database.GetItem(Sitecore.Context.Site.RootPath);
}


<div class="overlay-top 11"></div>
<div class="navPanel fixed-top">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-8 border-right text-center">
                <a class="navbar-brand" href="/">
                    @if (rootItem != null)
                    {
                        @Html.Sitecore().ImageField("Logo", rootItem)
                    }
                </a>
            </div>
            <div class="col-sm-9 col-4">
                <div class="row nav-bg-white mainmenu">
                    <div class="col-sm-12 col-md-11">
                        <div class="d-block d-lg-none topNavBtn">
                            <button type="button" id="topNavCollapse" class="btn btn-menu">
                                <i class="fas fa-bars"></i>
                            </button>
                        </div>
                        <nav class="navbar navbar-expand-lg ml-5">
                            <div>

                                <div class="collapse navbar-collapse" id="navbar">
                                    <ul class="navbar-nav mr-auto">
                                        @if (models != null)
                                        {
                                            if (models.GetChildren() != null)
                                            {
                                                foreach (Item item in models.GetChildren())
                                                {
                                                    Sitecore.Data.Fields.LinkField linkvalue = item.Fields["Link"];
                                                    var link = linkvalue.GetFriendlyUrl();

                                                    CheckboxField checkboxField = item.Fields["IsExternalLink"];
                                                    <li class="nav-item dropdown">
                                                        @if (checkboxField != null && checkboxField.Checked)
                                                        {
                                                            <a class="nav-link" href="@link" target="_blank" id="navbarDropdown">
                                                                @Html.Sitecore().Field("NavigationTitle", item)
                                                            </a>
                                                        }
                                                        else
                                                        {
                                                            <a class="nav-link" href="@link" id="navbarDropdown">
                                                                @Html.Sitecore().Field("NavigationTitle", item)
                                                            </a>
                                                        }



                                                        @if (item.HasChildren)
                                                        {
                                                            <div class="dropdown-menu megamenu" aria-labelledby="dropdown01">
                                                                <div class="container-fluid">
                                                                    <h5><a href="@link">Explore @Html.Sitecore().Field("NavigationTitle", item)</a></h5>
                                                                    <hr />
                                                                    <div class="row">
                                                                        @foreach (Item items in item.GetChildren())
                                                                        {
                                                                            Sitecore.Data.Fields.LinkField itemslinkvalue = items.Fields["Link"];
                                                                            var itemslink = itemslinkvalue.GetFriendlyUrl();
                                                                            if (itemslink != null)
                                                                            {
                                                                                CheckboxField checkbox = items.Fields["IsExternalLink"];
                                                                                if (checkbox != null && checkbox.Checked)
                                                                                {
                                                                                    <div class="col-md-6">
                                                                                        <a class="dropdown-item" href="@itemslink" target="_blank">
                                                                                            @Html.Sitecore().Field("NavigationTitle", items)
                                                                                        </a>

                                                                                    </div>
                                                                                }
                                                                                else
                                                                                {
                                                                                    <div class="col-md-6">
                                                                                        <a class="dropdown-item" href="@itemslink">
                                                                                            @Html.Sitecore().Field("NavigationTitle", items)
                                                                                        </a>

                                                                                    </div>
                                                                                }

                                                                            }
                                                                            else
                                                                            {
                                                                                <div class="col-md-6">
                                                                                    <a class="dropdown-item" href="#">
                                                                                        @Html.Sitecore().Field("NavigationTitle", items)
                                                                                    </a>

                                                                                </div>
                                                                            }

                                                                        }

                                                                    </div>
                                                                </div>
                                                            </div>


                                                        }

                                                    </li>

                                                }

                                            }

                                        }



                                    </ul>
                                </div>
                            </div>
                        </nav>

                        <div class="ml-5" id="topMenu">
                            <div id="dismiss" class="d-block d-lg-none"><i class="fas fa-times-circle"></i></div>
                            <div class="clearfix"></div>

                            <!-- link menu code-->


                            <ul class="topMenu d-lg-none d-block m-menu">
                                @if (models != null)
                                {
                                    if (models.GetChildren() != null)
                                    {
                                        foreach (Item item in models.GetChildren())
                                        {
                                            Sitecore.Data.Fields.LinkField linkvalue = item.Fields["Link"];
                                            var link = linkvalue.GetFriendlyUrl();


                                            CheckboxField checkboxField = item.Fields["IsExternalLink"];
                                            <li class="dropdown">
                                                @if (checkboxField != null && checkboxField.Checked)
                                                {
                                                    <a href="@link" target="_blank">
                                                        @Html.Sitecore().Field("NavigationTitle", item)
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a href="@link">
                                                        @Html.Sitecore().Field("NavigationTitle", item)
                                                    </a>
                                                }


                                                @if (item.HasChildren)
                                                {
                                                    <div class="dropdown-menu megamenu" aria-labelledby="dropdown01">
                                                        <div class="container-fluid">
                                                            <h5><a href="@link">Explore @Html.Sitecore().Field("NavigationTitle", item)</a></h5>
                                                            <hr />
                                                            <div class="row">
                                                                @foreach (Item items in item.GetChildren())
                                                                {
                                                                    Sitecore.Data.Fields.LinkField itemslinkvalue = items.Fields["Link"];
                                                                    var itemslink = itemslinkvalue.GetFriendlyUrl();
                                                                    if (itemslink != null)
                                                                    {
                                                                        CheckboxField checkbox = items.Fields["IsExternalLink"];
                                                                        if (checkbox != null && checkbox.Checked)
                                                                        {

                                                                            <div class="col-lg-6">
                                                                                <a class="dropdown-item" href="@itemslink" target="_blank">@Html.Sitecore().Field("NavigationTitle", items)</a>

                                                                            </div>
                                                                        }
                                                                        else
                                                                        {
                                                                            <div class="col-lg-6">
                                                                                <a class="dropdown-item" href="@itemslink">@Html.Sitecore().Field("NavigationTitle", items)</a>

                                                                            </div>
                                                                        }


                                                                    }
                                                                    else
                                                                    {
                                                                        <div class="col-md-6">
                                                                            <a class="dropdown-item" href="#">
                                                                                @Html.Sitecore().Field("NavigationTitle", items)
                                                                            </a>

                                                                        </div>
                                                                    }
                                                                }


                                                            </div>
                                                        </div>
                                                    </div>
                                                }

                                            </li>
                                        }

                                    }

                                }
                            </ul>

                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>