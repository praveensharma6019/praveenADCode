@using Sitecore.Mvc
@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Mvc.Configuration
@using Sitecore.Data.Items;
@using Sitecore.Data.Fields;
@model Sitecore.Mvc.Presentation.RenderingModel

@{
    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    Item contextItem = Sitecore.Context.Database.GetItem(datasource);

}
<form class="px-4 py-4" id="contact_form" name="contact_form">
    <input type="hidden" id="cFormType" value="Contact-Us">
    <input type="hidden" id="PageInfo" value="/contact-us">
    <input type="hidden" id="utm_source" value="">
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="form-group">
                <input type="text" class="form-control" id="cname" placeholder="Name">
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="form-group">
                <input type="email" class="form-control" id="cmailid" placeholder="Email">
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="form-group">
                @if (contextItem != null)
                {
                    <select class="form-control" id="cmessageType">
                        <option value="">Subject of Message</option>
                        @if (contextItem.HasChildren)
                        {
                            foreach (Item subject in contextItem.GetChildren())
                            {
                                var subjectName = Html.Sitecore().Field("SubjectName", subject);
                                <option value="@subjectName">@subjectName</option>

                            }
                        }

                    </select>
                }

            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="form-group">
                <input type="number" class="form-control" id="ccontactno" placeholder="Contact Number">
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="form-group">
                <textarea class="form-control" rows="3" id="cmessage" placeholder="Message"></textarea>
            </div>
        </div>
        @*<div class="col-md-4 mb-3">

            <div id="recaptcha1"></div>

        </div>*@
        <div class="col-md-12 mb-3 text-right">
            <p><button type="submit" id="btnContactUsSubmit" class="btn btn-primary">Submit</button></p>
        </div>
    </div>
</form>
