@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Foundation.Dictionary.Repositories
@using Sitecore.Mvc.Presentation
@using System.Text.RegularExpressions
@using Sitecore.Data.Items;
@using Sitecore.Data.Fields;
@model RenderingModel
@{
    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    Item element = Sitecore.Context.Database.GetItem(datasource);

}
@if (element != null)
{
    if (element.HasChildren)
    {
        foreach (Item item in element.GetChildren())
        {
            Sitecore.Data.Fields.Field field = item.Fields["Type"];
            Sitecore.Data.Fields.Field colorField = item.Fields["BGColor"];
            String color = colorField.ToString();


                        <section class="py-5 @color">
                            <div class="container">
                                @if (field.ToString() == "imgLeft")
                                {

                                    <div class="row">
                                        <div class="col-lg-6">
                                            @Html.Sitecore().Field("Image", Model.PageItem, new { @class = "img-fluid" })
                                        </div>
                                        <div class="col-lg-6 mb-3">
                                            <h2 class="border-l pl-3 txt-lg mb-3">@Html.Sitecore().Field("Title", item)</h2>
                                            <p class="pl-4 ">@Html.Sitecore().Field("Body", item)</p>
                                        </div>
                                    </div>
                                }
                                else if (field.ToString() == "imgRight")
                                {
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <h2 class="border-l pl-3 txt-lg mb-3">@Html.Sitecore().Field("Title", item)</h2>
                                            <p class="pl-4 ">@Html.Sitecore().Field("Body", item)</p>

                                        </div>
                                        <div class="col-lg-6 mb-3">
                                            @Html.Sitecore().Field("Image", Model.PageItem, new { @class = "img-fluid" })
                                        </div>
                                    </div>

                                }
                                else
                                {
                                    <div class="col-lg-12 mb-3">
                                        <h2 class="border-l pl-3 txt-lg mb-3">@Html.Sitecore().Field("Title", item)</h2>
                                        <p class="pl-4 ">@Html.Sitecore().Field("Body", item)</p>
                                    </div>

                                }
                            </div>
                        </section>





        }
    }
}