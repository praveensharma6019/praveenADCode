@using Sitecore.Data.Fields
@using Sitecore.Data.Items
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@{
    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;    
    var contextItem = Sitecore.Context.Item;
}
@if (!String.IsNullOrEmpty(datasource))
{
    var element = Sitecore.Context.Database.GetItem(datasource);
    <section class="py-5">
        <div class="container">
            <div class="row">
                @if (!String.IsNullOrEmpty(Html.Sitecore().ImageField("Image", element).ToString()))
                {
                    <div class="col-lg-6">
                        @if (!String.IsNullOrEmpty(Html.Sitecore().Field("Title", element).ToString()))
                        {
                            <h2 class="heading">@Html.Sitecore().Field("Title", element)</h2>
                        }
                        @if (!String.IsNullOrEmpty(Html.Sitecore().Field("Summary", element).ToString()))
                        {
                            <p class="mb-3">@Html.Sitecore().Field("Summary", element)</p>
                        }
                    </div>
                    <div class="col-lg-6 mb-3">
                        @Html.Sitecore().ImageField("Image", element, 0, 0, "img-fluid w-100")
                    </div>
                }
                else
                {
                    <div class="col-lg-12">
                        @if (!String.IsNullOrEmpty(Html.Sitecore().Field("Title", element).ToString()))
                        {
                            <h2 class="heading">@Html.Sitecore().Field("Title", element)</h2>
                        }
                        @if (!String.IsNullOrEmpty(Html.Sitecore().Field("Summary", element).ToString()))
                        {
                            <p class="mb-3">@Html.Sitecore().Field("Summary", element)</p>
                        }
                    </div>
                }
            </div>
            @Html.Sitecore().Field("Body", element)
        </div>
    </section>
}
else
{
    <section class="py-5">
        <div class="container">
            <div class="row">
                @if (!String.IsNullOrEmpty(Html.Sitecore().ImageField("MainImage", contextItem).ToString()))
                {
                    <div class="col-lg-6">
                        @if (!String.IsNullOrEmpty(Html.Sitecore().Field("Heading", contextItem).ToString()))
                        {
                            <h2 class="heading">@Html.Sitecore().Field("Heading", contextItem)</h2>
                        }
                        @if (!String.IsNullOrEmpty(Html.Sitecore().Field("Summary", contextItem).ToString()))
                        {
                            <p class="mb-3">@Html.Sitecore().Field("Summary", contextItem)</p>
                        }
                    </div>
                    <div class="col-lg-6 mb-3">
                        @Html.Sitecore().ImageField("MainImage", contextItem, 0, 0, "img-fluid w-100")
                    </div>
                }
                else
                {
                    <div class="col-lg-12">
                        @if (!String.IsNullOrEmpty(Html.Sitecore().Field("Heading", contextItem).ToString()))
                        {
                            <h2 class="heading">@Html.Sitecore().Field("Heading", contextItem)</h2>
                        }
                        @if (!String.IsNullOrEmpty(Html.Sitecore().Field("Summary", contextItem).ToString()))
                        {
                            <p class="mb-3">@Html.Sitecore().Field("Summary", contextItem)</p>
                        }
                    </div>
                }
            </div>
            @Html.Sitecore().Field("Description", contextItem)
        </div>
    </section>
}

