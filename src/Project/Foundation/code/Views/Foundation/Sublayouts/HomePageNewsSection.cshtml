@using Sitecore.Data.Fields
@using Sitecore.Data.Items
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Collections
@{

    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var element = Sitecore.Context.Database.GetItem(datasource);
    var sortedYear = element.GetChildren().OrderByDescending(x => x.Fields["Text"].Value);
    var i = 0;
}
<section class="newsupdate py-5">
    <div class="bg-images" data-aos="fade-right" data-aos-duration="3000"><img src="images/Foundation/bg-newsupdate.png"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="newsupdate-heading" data-aos="fade-right" data-aos-duration="2000">
                    <h3>News<span class="d-block">& Update</span></h3>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="row">
                    @if (element != null)
                    {
                        foreach (Item year in sortedYear)
                        {
                            var sortedItem = year.GetChildren().OrderByDescending(x => x.Fields["Date"].Value);
                            foreach (Item item in sortedItem)
                            {
                                LinkField link = (LinkField)item.Fields["LinkUrl"];
                                var imageLinkUrl = link.GetFriendlyUrl();
                                if (string.IsNullOrEmpty(imageLinkUrl))
                                {
                                    <div class="col-lg-6 col-md-6 my-3">
                                        <a href="@link" target="_blank">
                                            <div class="newsupdate-listing" data-aos="fade-up" data-aos-duration="1000">
                                                <p>@Html.Sitecore().Field("Title", item)</p>
                                                <p><span>@Html.Sitecore().Field("Date", item, new { format = "MMM dd yyyy" })  | @Html.Sitecore().Field("Author", item)</span></p>
                                            </div>
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <div class="col-lg-6 col-md-6 my-3">
                                        <a href="@imageLinkUrl" target="_blank">
                                            <div class="newsupdate-listing" data-aos="fade-up" data-aos-duration="1000">
                                                <p>@Html.Sitecore().Field("Title", item)</p>
                                                <p><span>@Html.Sitecore().Field("Date", item, new { format = "MMM dd yyyy" })  | @Html.Sitecore().Field("Author", item)</span></p>
                                            </div>
                                        </a>
                                    </div>
                                }

                                i++;
                                if (i == 4)
                                {
                                    break;
                                }
                            }
                            if (i == 4)
                            {
                                break;
                            }
                        }
                    }
                    @{
                        var url = Sitecore.Links.LinkManager.GetItemUrl(element).ToLower();
                    }
                    <div class="col-lg-12 mt-4">
                        <p class="readmore"><a href="@url">Read more</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>