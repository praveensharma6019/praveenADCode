@using Sitecore.Data.Fields
@using Sitecore.Data.Items
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@{

    var contextItem = Sitecore.Context.Item;
}

<section class="pb-5 bg-gray">
    <div class="container">
        <div class="row">
            <div class="col-md-3 mb-3">
                @Html.Sitecore().ImageField("MainImage", contextItem, 0, 0, "fluid")

            </div>
            <div class="col-md-9">
                <div class="border-left pl-3 mb-3">
                    <h1>@Html.Sitecore().Field("Heading", contextItem)</h1>
                    <p>@Html.Sitecore().Field("Designation", contextItem)</p>
                </div>
                <section class="bg-gray py-5 about-apsez loadmore-content">
                    <div class="container">
                        @Html.Sitecore().Field("Description", contextItem)

                    </div>
                </section>

            </div>
        </div>
    </div>
</section>
