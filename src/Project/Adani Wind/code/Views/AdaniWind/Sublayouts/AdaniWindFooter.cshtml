@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Resources.Media
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using System.Globalization;
@model RenderingModel
@{
   var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var model = Sitecore.Context.Database.GetItem(datasource);
	var Linkurl="#";
}  

<footer class="footer ninTh">
        <img class="seventh-img ImageNinth" src="-/media/969B14732F7346E4B5655421952FFD8F" alt="">
        <div class="overlay-footer">
            <div class="container" style="margin-top: 5rem;">
                    <div class="row ninth-row">
						<div class="col-md-3 col-12">
                        @Html.Sitecore().Placeholder("footer-social-links")
                        </div>
							@foreach(var parent in model.GetChildren().ToList())
							{ 
								var footerClass =  model.Fields["MainClass"]?.Value;
								<div class="col-md-2 col-6">
									<ul class="@footerClass">
										@foreach(var child in parent.GetChildren().ToList())
										{
											Sitecore.Data.Fields.LinkField linkfield = ((Sitecore.Data.Fields.LinkField)child.Fields["LinkUrl"]); 
												if(linkfield != null) 
												{ 
													Linkurl = linkfield.GetFriendlyUrl();
												} 
											<li><a href="@Linkurl">@child.Fields["LinkText"]</a></li>
										}
									</ul>
								</div>
							}
                </div>
            </div>
        </div>
    </footer>

    