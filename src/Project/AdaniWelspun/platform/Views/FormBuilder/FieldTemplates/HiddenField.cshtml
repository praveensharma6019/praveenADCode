@using Sitecore.ExperienceForms.Mvc.Html
@model Adani.BAU.AdaniWelspunSXA.Project.FormValidator.FormFields.HiddenField



<input id="@Html.IdFor(m => Model.Value)" name="@Html.NameFor(m => Model.Value)" class="@Model.CssClass" type="hidden" value="@Model.Value" />



<script>
  
    var hiddenField = document.getElementById(@Html.Raw("\"" + Html.IdFor(m => Model.Value) + "\""));
    var parent = hiddenField.parentNode;
    if (parent.classList.contains("sc-formdesign-fieldcontainer")) {
        var textDiv = document.createElement("div");
        textDiv.innerHTML = "(Hidden Field)";
        parent.appendChild(textDiv);
    }
</script>
