<section class="bg-white py-4">
    <div class="container">
	<h2 class="heading pl-4 mb-4">Capabilities</h2>
        <div class="owl-carousel capabilities">
            @foreach (var item in elements.Children.ToList())
            {
                <div class="item">
                    <div class="row">
                        <div class="col-lg-6 my-4">
                            @Html.Sitecore().ImageField("MediaImage", item, 0, 0, "img-fluid")


                        </div>
                        <div class="col-lg-6 my-4">
                            @Html.Sitecore().Field("MediaDescription", item)
                        </div>
                    </div>
                </div>
            }
        </div>
        
        @Html.Sitecore().Placeholder("Equipments")

    </div>
