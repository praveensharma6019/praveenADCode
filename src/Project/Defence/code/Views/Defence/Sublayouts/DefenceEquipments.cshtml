    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var elements = Sitecore.Context.Database.GetItem(datasource);

    var i = 1;
    var j = 1;
    var k = 1;
    var z = 1;
}
<div class="explore-navtabs">
    <ul class="nav nav-tabs">
        @foreach (var items in elements.Children.ToList())
        {
            if (i == 1)
            {
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#cap-@j">@items.DisplayName</a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#cap-@j">@items.DisplayName</a>
                </li>
            }
            i++;
            j++;
        }
    </ul>
    <div class="tab-content bg-gray">
        @foreach (var itemss in elements.Children.ToList())
        {
            if (k == 1)
            {
                <div class="tab-pane container  fadeInUp active p-4" id="cap-@z">
                    <div class="row">
                        <div class="col-lg-8 mb-3">
                            <h3 class="txt-md mb-3">
                                @Html.Sitecore().Field("Title", itemss)
                            </h3>
                            @Html.Sitecore().Field("Body", itemss)
                        </div>
                        <div class="col-lg-4">
                           
                                @Html.Sitecore().ImageField("Image", itemss, 0, 0, "img-fluid")

                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="tab-pane container fadeInUp p-4" id="cap-@z">
                    <div class="row">
                        <div class="col-lg-8 mb-3">
                            <h3 class="txt-md mb-3">
                                @Html.Sitecore().Field("Title", itemss)
                            </h3>
                            @Html.Sitecore().Field("Body", itemss)
                        </div>
                        <div class="col-lg-4">

                            @Html.Sitecore().ImageField("Image", itemss, 0, 0, "img-fluid")


                        </div>
                    </div>
                </div>
            }
            z++;
            k++;
        }

    </div>
</div>