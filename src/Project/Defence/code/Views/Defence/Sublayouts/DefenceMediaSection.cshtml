    <div class="container">
        <div class="row">
            <div class="col-lg-4  mb-2">
                @Html.Sitecore().Placeholder("Media-Coverage")
            </div>
            <div class="col-lg-4 mb-2">
                @Html.Sitecore().Placeholder("Media-Release")
            </div>
            <div class="col-lg-4  mb-2">
                <div class="box-block p-4 w-100 h-auto">
                    <h3 class="section-heading">Media Contacts</h3>
                  
                    <p class="">
					
                       
