                var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
                var elements = Sitecore.Context.Database.GetItem(datasource);

                var i = 1;
				 var j = 1;

}

<section class="bg-white py-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 my-4">
                <h2 class="heading pl-4 mb-4">@Html.Sitecore().Field("Title", elements)</h2>
                @Html.Sitecore().Field("Body", elements)
                <ul class="ul-products">
                    @foreach (var item in elements.Children.ToList())
                    {

 if (i == 1)
                        {
                        var ProductId = @item.DisplayName.ToString();

                        <li class="ul-products-btn active" id="@ProductId">@Html.Sitecore().Field("MediaTitle", item)</li>
						}
						else
                        {
						 var ProductId = @item.DisplayName.ToString();

                        <li class="ul-products-btn" id="@ProductId">@Html.Sitecore().Field("MediaTitle", item)</li>
						}
						i++;
                    }
                </ul>
            </div>
            <div class="col-lg-6 my-4">
                <div id="product-parent">
                    @foreach (var items in elements.Children.ToList())
                    {
                        if (j == 1)
                        {
						
                            var ProductIds = @items.DisplayName.ToString();

                            <div class="@ProductIds active @i">
                                @Html.Sitecore().ImageField("MediaImage", items, 0, 0, "img-fluid")
                            </div>
                        }
                        else
                        {
                            var ProductIdss = @items.DisplayName.ToString();
                            <div class="@ProductIdss @i" style="display:none;">
                                @Html.Sitecore().ImageField("MediaImage", items, 0, 0, "img-fluid")
                            </div>
                        }
                        j++;

                    }
                </div>
            </div>

        </div>
    </div>
</section>