@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@model RenderingModel
@{
    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var elements = Sitecore.Context.Database.GetItem(datasource);
    var banner = elements.Children;

    var ContentPath = Sitecore.Context.Item.Paths.ContentPath.Replace("/Defence/", "");
    var path = ContentPath.Replace("/Defence/", "");
    string[] pathArr = path.Split('/');
    var navPath = "/";
    var paramid = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.Parameters.Where(x => x.Key == "cssclass").FirstOrDefault().Value;
    if (string.IsNullOrEmpty(paramid))
    {
        paramid = "breadcrumb-sub-layout bg-gray py-5";
    }
    var i = 0;
    var pageName = "";

    // Sitecore.Data.Fields.LinkField linkField = elements.Fields["MediaVideoLink"];
    //  var url = linkField.Url;
    var url = "#";
}
<section class="breadcrumb-slider">
    <div class="breadcrumb-sl-inner">

        <div class="container">
            <ul>


                @for (i = 0; i < pathArr.Count() - 1; i++)
                {
                    navPath = navPath + pathArr[i];
                    pageName = pathArr[i].Replace("-", " ").Substring(0, 1).ToUpper() + "" + pathArr[i].Replace("-", " ").Substring(1).ToLower();

                    <li><a href="@navPath">@pageName</a></li>
                    navPath = navPath + "/";
                }
            </ul>
            <h1 style=" text-transform: capitalize; ">@pathArr[pathArr.Count() - 1].Replace("-", " ")</h1>

        </div>
    </div>


    <div class="owl-carousel" id="about-banner">
        @foreach (var item in banner.ToList())
        {
            <div class="item">
                <div class="slider-content">
                    @Html.Sitecore().ImageField("MediaThumbnail", item, 0, 0, "image-fluid")
                    <div>
                        <div class="container">
                            @Html.Sitecore().Field("MediaDescription", item)
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</section>


