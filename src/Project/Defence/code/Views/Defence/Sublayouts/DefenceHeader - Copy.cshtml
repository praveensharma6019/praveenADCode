@using Sitecore.Mvc.Presentation
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Mvc
@using Sitecore.Data.Items;
@using Sitecore.Data.Fields;
@model RenderingModel
@{

    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    Item models = Sitecore.Context.Database.GetItem(datasource);

    var SiteLogo = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.Parameters["SiteLogo"];
}


<div class="overlay-top"></div>
<div class="navPanel fixed-top">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-8 border-right text-center">
                <a class="navbar-brand" href="/"><img src="@SiteLogo" alt="Adani Defence" class="img-fluid"></a>
            </div>
            <div class="col-sm-9 col-4">
                <div class="row nav-bg-white mainmenu">
                    <div class="col-sm-12 col-md-12 text-right px-lg-0">
                        <button type="button" id="topNavCollapse" class="btn btn-menu d-lg-none">
							<!--<i class="fas fa-align-justify"></i>-->
							<i class="fas fa-bars"></i>
						</button>
                        <nav class="navbar navbar-expand-lg pl-lg-5">
                            <div class="">

                                <div class="collapse navbar-collapse" id="navbar">
                                    <ul class="navbar-nav mr-auto">
                                        
                                            @if (models != null)
                                            {
                                                if (models.GetChildren() != null)
                                                {
                                                    foreach (Item item in models.GetChildren())
                                                    {
                                                        Sitecore.Data.Fields.LinkField itemslinkvalues = item.Fields["Link"];
                                                        var itemslinks = itemslinkvalues.GetFriendlyUrl();
                                                        CheckboxField isCheck = (CheckboxField)item.Fields["IsExternalLink"];
                                                        <li class="nav-item dropdown">
                                                            @if (!string.IsNullOrWhiteSpace(itemslinks))
                                                            {
                                                                if (isCheck.Checked)
                                                                {
                                                                    <a class="nav-link" href="@itemslinks" id="navbarDropdown" target="_blank">@item.Fields["NavigationTitle"]</a>
                                                                }
                                                                else
                                                                {
                                                                    <a class="nav-link" href="@itemslinks" id="navbarDropdown">@item.Fields["NavigationTitle"]</a>
                                                                }
                                                            }
                                                            


                                                            @if (item.HasChildren)
                                                            {
                                                                <div class="dropdown-menu megamenu" aria-labelledby="dropdown01">
                                                                    <div class="container-fluid">
                                                                       
                                                                            <h5><a href="@itemslinks">Explore @Html.Sitecore().Field("NavigationTitle", item)</a></h5>
                                                                        
                                                                    
                                                                        <hr />
                                                                        <div class="row">
                                                                            @foreach (Item items in item.GetChildren())
                                                                            {
                                                                                Sitecore.Data.Fields.LinkField itemslinkvalue = items.Fields["Link"];
                                                                                var itemslink = itemslinkvalue.GetFriendlyUrl();
                                                                                if (itemslink != null)
                                                                                {
                                                                                    CheckboxField checkbox = items.Fields["IsExternalLink"];
                                                                                    if (checkbox.Checked)
                                                                                    {

                                                                                        <div class="col-md-6">
                                                                                            <a class="dropdown-item" href="@itemslink" target="_blank">
                                                                                                @Html.Sitecore().Field("NavigationTitle", items)
                                                                                            </a>

                                                                                        </div>
                                                                                    }
                                                                                    else
                                                                                    {
                                                                                        <div class="col-md-6">
                                                                                            <a class="dropdown-item" href="@itemslink">
                                                                                                @Html.Sitecore().Field("NavigationTitle", items)
                                                                                            </a>

                                                                                        </div>
                                                                                    }

                                                                                }
                                                                                else
                                                                                {
                                                                                    <div class="col-md-6">
                                                                                        <a class="dropdown-item" href="#">
                                                                                            @Html.Sitecore().Field("NavigationTitle", items)
                                                                                        </a>

                                                                                    </div>
                                                                                }

                                                                            }

                                                                        </div>
                                                                    </div>
                                                                </div>


                                                            }

                                                        </li>

                                                    }

                                                }

                                            }



                                        </ul>
                                </div>
                            </div>
                        </nav>

                        <div class="ml-5" id="topMenu">
                            <div id="dismiss" class="d-block d-lg-none"><i class="fas fa-times-circle"></i></div>
                            <div class="clearfix"></div>

                            <!-- link menu code-->


                            <ul class="topMenu d-lg-none d-block m-menu">
                                @if (models != null)
                                {
                                    if (models.GetChildren() != null)
                                    {
                                        foreach (Item item in models.GetChildren())
                                        {

                                            Sitecore.Data.Fields.LinkField itemslinkvalues = item.Fields["Link"];
                                            var itemslinks = itemslinkvalues.GetFriendlyUrl();
                                            CheckboxField isCheck = (CheckboxField)item.Fields["IsExternalLink"];
                                            if (item.HasChildren)
                                            {
                                                <li class="nav-item dropdown">
                                                    @if (!string.IsNullOrWhiteSpace(itemslinks))
                                                    {
                                                        if (isCheck.Checked)
                                                        {
                                                            <a class="nav-link" id="navbarDropdown" href="@itemslinks" target="_blank">
                                                                @Html.Sitecore().Field("NavigationTitle", item)
                                                            </a>
                                                        }
                                                        else
                                                        {
                                                            <a class="nav-link" id="navbarDropdown" href="@itemslinks">@item.Fields["NavigationTitle"]</a>
                                                        }
                                                    }



                                                    <div class="dropdown-menu megamenu" aria-labelledby="dropdown01">
                                                        <div class="container-fluid">

                                                            <h5><a href="@itemslinks">Explore @Html.Sitecore().Field("NavigationTitle", item)</a></h5>


                                                            <hr />
                                                            <div class="row">
                                                                @foreach (Item items in item.GetChildren())
                                                                {
                                                                    Sitecore.Data.Fields.LinkField itemslinkvalue = items.Fields["Link"];
                                                                    var itemslink = itemslinkvalue.GetFriendlyUrl();
                                                                    if (itemslink != null)
                                                                    {
                                                                        CheckboxField checkbox = items.Fields["IsExternalLink"];
                                                                        if (checkbox.Checked)
                                                                        {
                                                                            <div class="col-lg-6">
                                                                                <a class="dropdown-item" href="@itemslink" target="_blank">
                                                                                    @Html.Sitecore().Field("NavigationTitle", items)
                                                                                </a>

                                                                            </div>
                                                                        }
                                                                        else
                                                                        {
                                                                            <div class="col-lg-6">
                                                                                <a class="dropdown-item" href="@itemslink">
                                                                                    @Html.Sitecore().Field("NavigationTitle", items)
                                                                                </a>

                                                                            </div>
                                                                        }

                                                                    }
                                                                    else
                                                                    {
                                                                        <div class="col-lg-6">
                                                                            <a class="dropdown-item" href="#">
                                                                                @Html.Sitecore().Field("NavigationTitle", items)
                                                                            </a>

                                                                        </div>
                                                                    }
                                                                }


                                                            </div>
                                                        </div>
                                                    </div>


                                                </li>
                                            }
                                            else
                                            {
                                                <li class="nav-item">
                                                    @if (!string.IsNullOrWhiteSpace(itemslinks))
                                                    {
                                                        if (isCheck.Checked)
                                                        {
                                                            <a href="@itemslinks" target="_blank">
                                                                @Html.Sitecore().Field("NavigationTitle", item)
                                                            </a>
                                                        }
                                                        else
                                                        {
                                                            <a class="nav-link dropdown-toggle" href="@itemslinks">@item.Fields["NavigationTitle"]</a>
                                                        }
                                                    }




                                                </li>
                                            }
                                        }

                                    }

                                }
                            </ul>

                        </div>

                    </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
