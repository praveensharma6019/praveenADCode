	<div class="container">
    <div class="row">
        <div class="col-lg-4 col-6 my-3 order-2 order-lg-1">
            @foreach (Item item in About.GetChildren())
            {
				Sitecore.Data.Fields.LinkField linkFields = item.Fields["Link"];
                var link = linkFields.GetFriendlyUrl();
                <h5><a href="@link">@Html.Sitecore().Field("NavigationTitle", item)</a></h5>
