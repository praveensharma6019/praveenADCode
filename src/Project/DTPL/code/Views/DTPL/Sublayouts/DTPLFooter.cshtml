        <div class="col-lg-4 col-6 my-3 order-3 order-lg-2">
            @foreach (Item item in Downloads.GetChildren())
            {
				Sitecore.Data.Fields.LinkField linkFields = item.Fields["Link"];
                var link1 = linkFields.GetFriendlyUrl();
                <h5><a href="@link1">@Html.Sitecore().Field("NavigationTitle", item)</a></h5>
                @*<h5><a href="">Careers</a></h5>
                <h5><a href="">Contact Us</a></h5>*@
            }
            </div>
        <div class="col-lg-4 text-lg-right text-center  my-3 order-1 order-lg-3">
            <img src="-/media/78236AD391954EDA9CEF32E33617CDC0.ashx" class="img-fluid" />
        </div>
    </div>
</div>
</footer>
<div class="bottom_copyright">
    <div class="container">
        <div class="row">
            <div class="col-md-3 my-md-3 my-2 order-2 order-md-1 text-md-left text-center">
                <p>© 2022</p>
            </div>
            <div class="col-md-9  my-md-3 my-2 text-md-right text-center order-1 order-md-2">
                <ul class="ft-policy-links">
                    @foreach (Item item in PrivacyPolicy.GetChildren())
                    {
						Sitecore.Data.Fields.LinkField linkFields = item.Fields["Link"];
						var link2 = linkFields.GetFriendlyUrl();
                        <li><a href="@link2">@Html.Sitecore().Field("NavigationTitle", item)</a></li>
                        
                    }
                    </ul>
            </div>
        </div>
    </div>
</div>

