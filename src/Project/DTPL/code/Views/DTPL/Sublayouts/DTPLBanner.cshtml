@using Sitecore
@using Sitecore.Data.Items
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@model Sitecore.Mvc.Presentation.RenderingModel
@{
    /**/

    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var model = Sitecore.Context.Database.GetItem(datasource);


}


<section class="hero_banner_container">
    <div class="owl-carousel hero-banner">
        @foreach (Item item in model.GetChildren())
            {
                Sitecore.Data.Fields.ImageField imgField = ((Sitecore.Data.Fields.ImageField)item.Fields["MediaImage"]);

                string imgurl = Sitecore.Resources.Media.MediaManager.GetMediaUrl(imgField.MediaItem);
		<div class="item">
            
                <picture>
					<source srcset="@imgurl" media="(min-width:540px)">
                    <source srcset="@imgurl" media="(min-width:0)">
                    <img srcset="" src="@imgurl" alt="Adani Total">

                </picture>
                <div class="banner-content">
                    <div class="container">
                        <div>
                            <h1>@Html.Sitecore().Field("MediaDescription", item)</h1>
                        </div>
                    </div>
                </div>
            
        </div>
		}
    </div>
</section>