@using Sitecore.Data.Fields
@using Sitecore.Data.Items
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@{

    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var element = Sitecore.Context.Database.GetItem(datasource);
}

<section class="bg-gray pb-5 pt-2 position-relative">
    <div class="container">
        @if (element != null)
        {
            <h2 class="heading">@Html.Sitecore().Field("Heading", element)</h2>
            <div data-aos="fade-up" data-aos-duration="3000">
                <div class="owl-carousel owl-theme" id="other-ventures">
                    @if (element.GetChildren() != null)
                    {
                        foreach (Item item in element.GetChildren())
                        {
                            var url = item.Fields["Link"];


                            <div class="item">
                                <a href="@url" target="_blank">@Html.Sitecore().ImageField("Image", item, 0, 0, "image-fluid")</a>
                                @if (!string.IsNullOrWhiteSpace(item.Fields["NavigationTitle"].Value))
                                {
                                    <h5><a href="@url" target="_blank">@Html.Sitecore().Field("NavigationTitle", item)</a></h5>
                                }
                            </div>

                        }
                    }
                </div>
            </div>
        }
        </div>
    </section>