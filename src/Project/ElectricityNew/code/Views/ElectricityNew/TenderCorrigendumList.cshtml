<div class="container section-container ">
    <div class="row">
        <div class="col s12 tenders-detail">
            @*<div class="tender-header">
                @if (!string.IsNullOrEmpty(ViewBag.TenderDetail))
                {
                    <div class="tender-main-header">
                        <h2>@ViewBag.TenderDetail</h2>
                    </div>
                }
            </div>*@
            <div class="tender-header">
                <div class="tender-main-header">
                    <h2>Corrigendum Listing</h2>
                    <div class="header-links">
                        <a href="/tenderlogin" class="link-btn">Login</a>
                    </div>
                </div>
                <div class="tender-name">
                    <h5>Tender Name:</h5>
                    @if (!string.IsNullOrEmpty(ViewBag.TenderDetail))
                    {
                        <p>@ViewBag.TenderDetail</p>
                    }
                </div>
            </div>
            <!-- Tenders -->
            <div class="customer_detail_wrapper customer_detail_list hide-on-med-and-down">
                <table class="customer_detail_list-details" id="tenderCorrigendumList">
                    <thead class="">
                        <tr>
                            <th style="width: 25%;">Corrigendum Date</th>
                            <th style="width: 33%;">Corrigendum Title</th>
                            <th style="width: 10%;">Document</th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var itemdata in Model.OrderByDescending(d => d.Date))
                            {
                                <tr>
                                    <td><div class="table-cell"><label>@itemdata.Date.ToString("dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture)</label></div></td>
                                    <td><div class="table-cell"><label>@itemdata.Title</label></div></td>
                                    <td>
                                        <div class="table-cell">
                                            <label>
                                                @foreach (var item in itemdata.TenderDocument)
                                                {

                                                    var myFilePath = item.DocumentPath;
                                                    string ext = Path.GetExtension(myFilePath);

                                                    if (ext.ToLower() == ".pdf")
                                                    {
                                                        <a href="@item.DocumentPath" target="_blank">@item.FileName</a>
                                                    }
                                                    else
                                                    {
                                                        <a href="@item.DocumentPath" download="">@item.FileName</a>
                                                    }

                                                }
                                            </label>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td>
                                    No records found.
                                </td>
                            </tr>

                        }

                    </tbody>
                </table>
                @*<div class="card-footer">
                        <a href="@TenderListURL.Url()" class="btn btn-primary">@Html.Sitecore().Dictionary("Electricity/Tender/Back To List Text", "Back To Tender List")</a>
                    </div>*@
            </div>
        </div>
    </div>
</div>