@using Sitecore.Data.Fields
@using Sitecore.Feature.Media
@using Sitecore.Feature.Media.Repositories
@using Sitecore.Foundation.Website.Helper
@{
var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
var element = Sitecore.Context.Item;
}	
<div class="wrapper-body">
   @if(element != null)
   {
   var BannerImageUrl = Helper.ImageUrl("BackgroundImage", element);
   var BannerImage1 = Helper.ImageUrl("Thumbnail", element);
   var BannerImage2 = Helper.ImageUrl("BannerImage", element);
   <div class="row">
      <div class="col-lg-12 mb-4">
         <div class="box_shadow">
            <div class="owl-carousel offers_carousel">
               <div class="item">
                  <img src="@BannerImageUrl">
                  <h1>Integrate, Accelerate & Transform with Our Supply Chain Finance</h1>
               </div>
            </div>
         </div>
      </div>
      <div class="col-12">
         <div class="bg-white p-4 box_shadow box_supply-chain">
            <h2 class="text-center">Advantages of Supply Chain Finance</h2>
            <div class="row">
               <div class="col-lg-4 my-4">
                  <h3><img src="-/media/6F4F34B37C224690865AF26713B0F484.ashx" class="mr-2">Supplier / Vendor</h3>
                  <ul>
                     <li>Early payment reduced financial dependence on the buyer</li>
                     <li>Reduces the cost of capital by leveraging buyer's credit rating</li>
                     <li>Increases certainty of cash flows</li>
                     <li>Provides post-shipment; WIP financing</li>
                     
                  </ul>
               </div>
               <div class="col-lg-4 my-4">
                  <h3><img src="-/media/EA39ED288DCD4447980A2BA9C042CA4D.ashx" class="mr-2">Anchor / Manufacturer</h3>
                  <ul>
                     <li>Minimizes investment in working capital</li>
                     <li>Reduces cost of goods sold (COGS)</li>
                     <li>Reduces total cost of borrowing</li>
                     <li>Automation reduces administration cost</li>
                     <li>Increases cash flow</li>
                  </ul>
               </div>
               <div class="col-lg-4 my-4">
                  <h3><img src="-/media/EDBBA6F2F31D49B583D3075B4758C672.ashx" class="mr-2">Dealer</h3>
                  <ul>
                     <li>Provides much needed working capital for purchase of inventory</li>
                     <li>Lower cost of funds than other working capital products</li>
                     <li>Increases sense of financial discipline due to short duration</li>
                     
                  </ul>
               </div>
            </div>
         </div>
      </div>
      <div class="col-12">
         <div class="sub_blocks">
            <div class="bg-images"><img src="https://www.adanicapital.in/-/media/Project/AdaniCapital/Farm-Equipments/Tractor-Loan/Rectangle-4-copy-2.webp"></div>
            <div class="row">
               <div class="col-lg-6 my-lg-0 my-4">
                  <div class="finance_main finance_main-green">
                     <a href="/Supply-Chain-Finance/Dealer-and-Distributer-Finance" target="_blank">
                        <div class="finance_main--thumb">
                           <img srcset="" src="@BannerImage1" alt="Dealer Banner">
                        </div>
                        <div class="finance_main--desc">
                           <h3>Dealer and Distributed Finance</h3>
                           <p>Distributors and dealers form an important link in the supply chain network</p>
                           <div>Read More</div>
                        </div>
                     </a>
                  </div>
               </div>
               <div class="col-lg-6 my-lg-0 my-4">
                  <div class="finance_main finance_main-green">
                     <a href="/Supply-Chain-Finance/Vendor-Finance" target="_blank">
                        <div class="finance_main--thumb">
                           <img srcset="" src="@BannerImage2" alt="Vendor Banner">
                        </div>
                        <div class="finance_main--desc">
                           <h3>Vendor Finance</h3>
                           <p>Vendors are criticals elements of any supply chain framework since they provide raw materials and services to the manufacturer.</p>
                           <div>Read More</div>
                        </div>
                     </a>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
   }
</div>