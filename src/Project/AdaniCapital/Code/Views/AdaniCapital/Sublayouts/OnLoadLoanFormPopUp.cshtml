@using Sitecore.Mvc.Configuration;
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@model Sitecore.AdaniCapital.Website.Models.AdaniCapitalApplyforLoanModel
<div class="modal fade video_modal" id="default_modal" tabindex="-1" role="dialog" aria-labelledby="default_modal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
            <div class="modal-body bg-white home-modal-form p-3">
                <div class="row">
                    <div class="col-lg-7">
                        <div class="h-100">
                            <h2><span><img src="-/media/554B2FFC27F748EF802DEB5CCA88D548.ashx" class="mr-3"></span> Apply for Loan</h2>
                            <div class="mt-3">
                                @using (Html.BeginRouteForm(Sitecore.Mvc.Configuration.MvcSettings.SitecoreRouteName, FormMethod.Post, new { id = "ApplyPopUPForm" }))
                                {
                                    @Html.AddUniqueFormId()
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)
                                    @Html.HiddenFor(m => m.PageInfo, new { @Value = HttpContext.Current.Request.Url.AbsoluteUri })
                                    @Html.HiddenFor(m => m.FormName, new { @Value = HttpContext.Current.Request.Url.AbsolutePath + "#loan" })
                                    @Html.HiddenFor(m => m.LastTabIndex)
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", required = "required", id = "PopLoan-fname", placeholder = "First Name*" })
                                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "help-block text-danger" }, "p")
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", required = "required", id = "PopLoan-lname", placeholder = "Last Name*" })
                                                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "help-block text-danger" }, "p")
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                @Html.TextBoxFor(model => model.MobileNo, new { @class = "form-control", placeholder = "Contact No.*", id = "PopLoan-Mobile", required = "required", maxlength = "10", type = "number" })
                                                @Html.ValidationMessageFor(model => model.MobileNo, "", new { @class = "help-block text-danger" }, "p")
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                @Html.TextBoxFor(model => model.EmailID, new { @class = "form-control", placeholder = "Email", type = "email", id = "PopLoan-email" })
                                                @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "help-block text-danger" }, "p")
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                @Html.TextBoxFor(model => model.PinCode, new { @class = "form-control", placeholder = "PinCode*", maxlength = "6", type = "number", required = "required", id = "PopLoan-zipcode" })
                                                @Html.ValidationMessageFor(model => model.PinCode, "", new { @class = "help-block required" }, "p")
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                @Html.DropDownListFor(x => x.ProductType, new SelectList(Model.ProductsList, "Value", "Text"), "Select Product", htmlAttributes: new { @class = "form-control", id = "PopLoan-Product", required = "required" })
                                                @Html.ValidationMessageFor(x => x.ProductType, "", new { @class = "help-block required" }, "p")
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group mb-0" style="height: 60px;">
                                                <div id="ApplyPoprecaptcha" class="captcha"></div>
                                                @Html.HiddenFor(model => model.reResponse, new { id = "PopLoan-reResponse" })
                                                @Html.ValidationMessageFor(model => model.reResponse, "", new { @class = "help-block required" }, "p")
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="text-left mt-2">
                                                <button type="button" name="Submit" value="Popsubmit" id="PopLoan-ApplyBtn" class="btn btn-primary mr-2">Request Call Back</button>@*<a href="req_callback" data-toggle="modal" data-target="#req_callback" class="btn btn-outline-primary" data-dismiss="modal">Request Call Back</a>*@
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="">
                                                <p id="applyErrorMsg" class="field-validation-error help-block text-danger"></p>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5">
                        <div class="row h-100">
                            <div class="col-12 mb-lg-0 mb-3 h-50 pb-2">
                                <div class="services-section mb-3">
                                    <div class="services-section-thumb bg-d-blue">
                                        <img src="-/media/F8993816D86C48709BAB0652296AB71F.ashx">
                                    </div>
                                    <div class="services-section-desc">
                                        <h3>Quick Eligibility Check </h3>
                                        <p class="mb-3">Calculate how much loan you can get based on your salary &amp; other factors.</p>
                                        <div>
                                            <a href="http://adaniuat.lms.gravithy.com/customer/Account/Register" style="color: #fff; font-weight: 500;">Calculate now</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 mb-lg-0 mb-3 h-50 pt-2">
                                <div class="services-section">
                                    <div class="services-section-thumb bg-d-blue" style="background:#000;">
                                        <img src="-/media/F670EFF242284BDA96B84BA66D185CC8.ashx" style="opacity: 0.4;">
                                    </div>
                                    <div class="services-section-desc">
                                        <h3>Become a Partner</h3>
                                        <p class="mb-3">Get associated with us and explore opportunity to become more profitable.</p>
                                        <a href="/become-a-partner" style="color: #fff; font-weight: 500;">Know more</a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
