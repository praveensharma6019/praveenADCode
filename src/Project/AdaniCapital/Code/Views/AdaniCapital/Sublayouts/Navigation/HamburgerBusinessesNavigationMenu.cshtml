@using Sitecore.AdaniCapital.Website.Helper
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Data.Fields
@using Sitecore.Data.Items
@{
    /**/

    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var element = Sitecore.Context.Database.GetItem(datasource);

}
@if (element != null)
{
<div class="hamburger_section single_item">
    @if (element.HasChildren)
    {
        int count = 1;
        foreach (Item item in element.GetChildren())
        {
            var imgurls = Helper.ImageUrl("LinkImage", item);

            <a href="#">
                <img src="@imgurls" alt="Business" class="icon" style="width:24px;">
                <h4>@Html.Sitecore().Field("Title", item)</h4>
            </a>
            if (item.HasChildren)
            {
                <a class="hamburger_dropdown arrow" href="#childB_@count"><img src="/-/media/904159C6CA6241DFAE493079EC5BF624.png"></a>

            }
            count++;
        }

    }
</div>
}

