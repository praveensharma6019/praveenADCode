@using Sitecore.AdaniCapital.Website.Helper
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Data.Fields
@using Sitecore.Data.Items
@{
    /**/

    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var element = Sitecore.Context.Database.GetItem(datasource);
    var imgurls = Helper.ImageUrl("Image", element);
	var element1 = Sitecore.Context.Database.GetItem("{BED5E317-CD0C-42F3-BAFD-5B8C7912828B}");
    var imgurl = Helper.ImageUrl("Image", element1);
}
@if (element != null)
{
    
        <a href="#" class="hamburger_icon"><img src="-/media/3D3F3F0499C1428A974561BAFB5D8225.ashx" alt="Hamburger" /></a>
        <a href="/" class="logo"><img src="@imgurl" alt="@Html.Sitecore().Field("Text", element1)"></a>

        <div class="navigation">
            <nav>
			<ul class="d-flex mb-0">
                @if (element.HasChildren)
                {
                    foreach (Item item in element.GetChildren())
                    {
                        var url = Helper.LinkUrl(item.Fields["LinkUrl"]);
                        <li class="@Html.Sitecore().Field("text", item)"><a href="@url" class="@Html.Sitecore().Field("Class", item)">@Html.Sitecore().Field("Title", item)</a>
						<div class="dropdown-menu" aria-labelledby="dropdown01">
						<ul>
						@if (item.HasChildren)
						{
							foreach (Item child in item.GetChildren())
							{
							var urlchild = Helper.LinkUrl(child.Fields["LinkUrl"]);
							<li><a href="@urlchild" class="@Html.Sitecore().Field("Class", child)">@Html.Sitecore().Field("Title", child)</a></li>
							}
						}
						</ul>
						</div>
						</li>
                    }
                }
				</ul>
            </nav>
            <a href="https://stage.adanicapital.in/login" target="_blank"><img src="@imgurls" alt="User" /></a>
        </div>
       
    
}
