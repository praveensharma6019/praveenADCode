@using Sitecore.AdaniCapital.Website.Helper
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Data.Fields
@using Sitecore.Data.Items
@{
    /**/

    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var element = Sitecore.Context.Database.GetItem(datasource);
    
}
<header class="hamburger_section single_item hamburger_login">
    @if (element.HasChildren)
    {
        foreach (Item item in element.GetChildren())
        {
            var imgurls = Helper.ImageUrl("LinkImage", item);
			var url = Helper.LinkUrl(item.Fields["LinkUrl"]);
            <a href="@url" target="_blank">
                <img src="@imgurls" alt="Login" class="icon">
                <h4>@Html.Sitecore().Field("Title", item) <br><label>@Html.Sitecore().Field("Text", item)</label></h4>
				<a class="hamburger_dropdown arrow" href="@url" target="_blank"><img src="/-/media/904159C6CA6241DFAE493079EC5BF624.png"></a>
				</a>
				
            
        }
    }
    
</header>
