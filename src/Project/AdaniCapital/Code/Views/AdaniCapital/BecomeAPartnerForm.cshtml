@using Sitecore.Data.Items;
@using Sitecore.Mvc.Configuration;
@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@model Sitecore.AdaniCapital.Website.Models.BecomeAPartnerModel
@{
    string keyValues = Session["Key"] != null ? "on" : "off";
    Session["Key"] = null;
}
<div class="col-lg-4 col-md-5 order-lg-3 order-1 mb-4">
    <div class="partner_reg">
        <div class="bg-images"><img src="/Images/AdaniCapital/Rectangle%204%20copy%202.jpg"></div>
        <h3>Become a Partner</h3>
        @using (Html.BeginRouteForm(MvcSettings.SitecoreRouteName, FormMethod.Post, new { id = "BecomeAPartner_form", name = "BecomeAPartner_form", autocomplete = keyValues, @class = "pl-4 form-section", enctype = "multipart/form-data" }))
        {
            @Html.AddUniqueFormId()
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.HiddenFor(m => m.PageInfo, new { @Value = HttpContext.Current.Request.Url.AbsoluteUri })
            @Html.HiddenFor(m => m.FormName, new { @Value = HttpContext.Current.Request.Url.AbsolutePath })
            <div class="form-group">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required = "required", placeholder = "Enter your Full Name*" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "help-block" }, "p")
            </div>
            <div class="form-group">
                @Html.TextBoxFor(model => model.EmailID, new { @class = "form-control", type = "email", required = "required", placeholder = "Enter your Email*" })
                @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "help-block" }, "p")
            </div>
            <div class="form-group">
                @Html.TextBoxFor(model => model.MobileNo, new { @class = "form-control", required = "required", type = "number", placeholder = "Enter your Contact Number*", maxlength = 10 })
                @Html.ValidationMessageFor(model => model.MobileNo, "", new { @class = "help-block" }, "p")
            </div>
            <div class="form-group">
                @Html.TextAreaFor(model => model.Message, new { @class = "form-control", required = "required", placeholder = "Message*", maxlength = 150, rows = "3" })
            </div>
            <div class="form-group">
                <div id="recaptcha1"></div>
                @Html.HiddenFor(model => model.reResponse, new { id = "BAPreResponse" })
                @Html.ValidationMessageFor(model => model.reResponse, "", new { @class = "help-block" }, "p")
            </div>
            <div class="form-group">
                <p class="txt-orange" id="docErrorMessage">@ViewBag.Message</p>
            </div>
            <div class="text-right">
                <button type="submit" name="Submit" id="btnBecomePartnerSubmit" value="SubmitPartnerForm" class="btn btn-primary">Request Call</button>
            </div>
        }
    </div>
</div>
