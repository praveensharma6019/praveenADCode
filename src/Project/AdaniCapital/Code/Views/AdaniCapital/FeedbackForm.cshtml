@using Sitecore.Mvc.Configuration;
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@model Sitecore.AdaniCapital.Website.Models.FeedbackFormModel
<!-- Modal -->
<div class="modal fade" id="Feedback_form" tabindex="-1" role="dialog" aria-labelledby="Feedback_form" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body bg-white">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <form class="form-section" id="feedbackForm" name="feedback_form">
                    @Html.AddUniqueFormId()
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(m => m.PageInfo, new { @Value = HttpContext.Current.Request.Url.AbsoluteUri })
                    @Html.HiddenFor(m => m.FormName, new { @Value = "FeedbackForm", id = "FeedbackformName" })
                    <h3 class="mb-4">Share your feedback</h3>
                    <div class="row text_container">
                        <div class="col-lg-6 col-md-6">
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required = "required", placeholder = "Enter Name*", id = "FeedbackName" })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "help-block" }, "p")
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.MobileNo, new { @class = "form-control", required = "required", oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);", placeholder = "Enter Mobile No*", id = "FeedbackMobile", maxlength = "10", type = "number" })
                                @Html.ValidationMessageFor(model => model.MobileNo, "", new { @class = "help-block" }, "p")
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.EmailID, new { @class = "form-control", required = "required", placeholder = "Enter Email*", id = "FeedbackEmailId" })
                                @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "help-block" }, "p")
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="star-rating mb-3">
                                <span class="fas fa-star" data-rating="1"></span>
                                <span class="fas fa-star" data-rating="2"></span>
                                <span class="fas fa-star" data-rating="3"></span>
                                <span class="fas fa-star" data-rating="4"></span>
                                <span class="fas fa-star" data-rating="5"></span>
                                @Html.HiddenFor(model => model.Rating, new { @class = "rating-value", required = "required", id = "FeedbackRating" })
                                @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "help-block" }, "p")
                                <input type="hidden" name="whatever1" class="rating-value" value="">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                @Html.TextAreaFor(model => model.Message, new { @class = "form-control", id = "FeedbackMessage", required = "required", placeholder = "Message*", maxlength = 150, rows = "3" })
                                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "help-block" }, "p")
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div id="Feedbackrecaptcha"></div>
                        </div>
                        <div class="col-12 text-right">
                            <button type="submit" name="Submit" id="btnFeedbackSubmit" value="Submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

