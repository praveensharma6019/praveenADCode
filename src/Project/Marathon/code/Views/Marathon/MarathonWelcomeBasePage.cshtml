@using Sitecore.Mvc.Configuration

<div class="pageContent">


    <section class="adani-realty whitebg runner_profile">
        <div class="container" style=" margin-top: -50px !important;">
            <div class="row border-bottom">
                <div class="col-md-6 text-left">Personal Information</div>
                <div class="col-md-6 text-right">
                    @using (Html.BeginForm("Logout", "Marathon", FormMethod.Post, new { @class = "form-signin px-3 py-2" }))
                    {
					    <a class="GroupRegisterBTN" href="/GroupRegister">Group Registration</a>
                        <a class="logoutBtn" onclick="this.parentNode.submit();" href="#">Logout</a>
                        @*<button type="submit" class="">@DictionaryPhraseRepository.Current.Get("/Accounts/Edit Profile/Button Logout", "Logout")</button>*@
                    }
                </div>
            </div>

            @Html.Sitecore().Placeholder("welcome-info")


            @Html.Sitecore().Placeholder("welcome-infoBottom")
            <div class="row bg-gray d-none" id="InviteFriends">
                <div class="col-lg-5">
                    <h5>Invite your friends and family members to join the run</h5>
                    <input type="hidden" id="affiliatecode" />
                </div>
                <div class="col-lg-7">
                    <ul class="social_share">
                        <li><a data-toggle="tooltip" target="_blank" data-placement="right" title="Share on twitter" class="addthis_button_twitter TW-like twitterShareBottom"><em class="fab fa-twitter"></em></a></li>
                        <li><a data-toggle="tooltip" target="_blank" data-placement="right" title="Share on Facebook" class="addthis_button_facebook FB-like facebookShareBottom"><em class="fab fa-facebook-square"></em></a></li>
                        <li><a data-toggle="tooltip" target="_blank" data-placement="right" title="Share on Linkedin" class="addthis_button_linkedin IN-like linkedinShareBottom"><em class="fab fa-linkedin"></em></a></li>

                    </ul>
                </div>

            </div>
        </div>
    </section>
</div>

