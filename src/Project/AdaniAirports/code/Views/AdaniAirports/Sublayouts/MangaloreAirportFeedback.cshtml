@using Sitecore
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@model Sitecore.Mvc.Presentation.RenderingModel
@{

    var homeItem = Sitecore.Context.Site;
    var current = Sitecore.Context.Item;
    List<Sitecore.Data.Items.Item> breadcrumbs1 = new List<Sitecore.Data.Items.Item>();

    while (current != null)
    {
        breadcrumbs1.Add(current);

        if (current.Fields["Title"].Value == "Mangalore Airport")
        {
            break;
        }

        current = current.Parent;
    }

    breadcrumbs1.Reverse();
    var i = 0;
}



<section class="mainSlider">
    <div class="">
        <div class="breadcrumb-sl-inner breadcrumb-sl-inner_contact">
            <div class="container-fluid">
                <ul>
                    <li><a href="/">Home</a></li>
                    @for (i = 1; i < breadcrumbs1.Count(); i++)
                    {
                        <li><a href="@breadcrumbs1[i].Url()">@breadcrumbs1[i].Fields["Title"].Value</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
</section>
<!--/Banner-->
<section class="py-5 bg-white content-header">
    <div class="container-fluid">

        <div class="row no-gutters">

            <div class="col-lg-12 p-lg-5 p-4 bg-gray">
                <h3 class="section-subheading pl-4 mb-4">Write feedback to us</h3>
                @Html.Sitecore().Placeholder("form")
            </div>
        </div>
    </div>
</section>