@using Sitecore.Data.Fields
@using Sitecore.Feature.Media
@using Sitecore.Feature.Media.Repositories
@using Sitecore.Foundation.Alerts
@using Sitecore.Foundation.Alerts.Extensions
@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Foundation.Theming.Extensions
@using Sitecore.Resources.Media
@model Sitecore.Mvc.Presentation.RenderingModel
@{
 var homeItem = Sitecore.Context.Site;
    var current = Sitecore.Context.Item;
    List<Sitecore.Data.Items.Item> breadcrumbs1 = new List<Sitecore.Data.Items.Item>();

    while (current != null)
    {
        if (current.Fields["Title"] != null)
        {
            breadcrumbs1.Add(current);

            if (current.Fields["Title"].Value == "Airport Corporate" || current.Fields["Title"].Value == "")
            {
                break;
            }
        }
        current = current.Parent;
    }
    var i = 0;
    breadcrumbs1.Reverse();
	
    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var element = Sitecore.Context.Database.GetItem(datasource);
    var paramid = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.Parameters.Where(x => x.Key == "cssclass").FirstOrDefault().Value;
    // var csselement = Sitecore.Context.Database.GetItem(paramid["cssclass"]);
    if (string.IsNullOrEmpty(paramid))
    {
        paramid = "py-5 bg-white";
    }
}



<section class="mainSlider d-none">
    <div class="">
        <div class="breadcrumb-sl-inner bg-white">
            <div class="container-fluid">
                <ul>
                    <li><a href="/">Home</a></li>
                    @for (i = 1; i < breadcrumbs1.Count(); i++)
                    {
                        <li><a href="@breadcrumbs1[i].Url()">@breadcrumbs1[i].Fields["Title"].Value</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="@paramid bg-gray content-section">
    <div class="container">
        <div class="row">
            <div class="col-md-3 mb-3">
                @Html.Sitecore().ImageField("Image", element, 0, 0, "img-fluid")
                
            </div>
            <div class="col-md-9">
                <div class="border-left pl-3 mb-3">
                    <h1> @Html.Sitecore().Field("Title", element)</h1>
                    <p>  @Html.Sitecore().Field("Summary", element)</p>
                </div>
                @Html.Sitecore().Field("Body", element)
            </div>
        </div>
    </div>
</section>