@using Sitecore.Data.Fields
@using Sitecore.Feature.Media
@using Sitecore.Feature.Media.Repositories
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Foundation.Theming.Extensions
@using Sitecore.Resources.Media
@model Sitecore.Mvc.Presentation.RenderingModel
@{
 var homeItem = Sitecore.Context.Site;
    var current = Sitecore.Context.Item;
    List<Sitecore.Data.Items.Item> breadcrumbs1 = new List<Sitecore.Data.Items.Item>();

    while (current != null)
    {
        if (current.Fields["Title"] != null)
        {
            breadcrumbs1.Add(current);

            if (current.Fields["Title"].Value == "Airport Corporate" || current.Fields["Title"].Value == "")
            {
                break;
            }
        }
        current = current.Parent;
    }
    var j = 0;
    breadcrumbs1.Reverse();
    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var element = Sitecore.Context.Database.GetItem(datasource);
    var paramid = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.Parameters.Where(x => x.Key == "cssclass").FirstOrDefault().Value;
    // var csselement = Sitecore.Context.Database.GetItem(paramid["cssclass"]);
    if (string.IsNullOrEmpty(paramid))
    {
        paramid = "py-5";
    }
var i=1;
}

<section class="mainSlider ">
    <div class="">
        <div class="breadcrumb-sl-inner bg-white">
            <div class="container-fluid">
                <ul>
                    <li><a href="/">Home</a></li>
                    @for (j = 1; j < breadcrumbs1.Count(); j++)
                    {
                        <li><a href="@breadcrumbs1[j].Url()">@breadcrumbs1[j].Fields["Title"].Value</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
</section>


<section class="@paramid">
    <div class="container BOD">
        <h1 class="heading pl-4 mb-4"> @Html.Sitecore().Field("Title", element)</h1>
        @Html.Sitecore().Field("Summary", element)
        <div class="row">
            @foreach (var item in element.Children.ToList())
            {
                string linkUrl = Sitecore.Links.LinkManager.GetItemUrl(item);
                <div class="col-lg-3 col-md-4 col-sm-6 px-2 py-4 directors-tile zoomin">

                    <a href="@linkUrl">
                        <div class="card">
                            <div class="b-o-director">@Html.Sitecore().ImageField("Image", item, 0, 0, "card-img-top img-fluid")</div>

                            <div class="card-body">
                                <h4 class="card-title">@Html.Sitecore().Field("Title", item)</h4>
                                <p class="card-text">@Html.Sitecore().Field("Summary", item)</p>
                            </div>
                        </div>
                    </a>
                </div>

            }
        </div>

    </div>
</section>