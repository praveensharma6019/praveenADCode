@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Data.Fields
@using Sitecore.Data.Items

@{
    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var element = Sitecore.Context.Database.GetItem(datasource);
}

<header class="headerSec main_header">
    <div class="fade-overlay"></div>
    <div class="overlay-top"></div>
    <div class="top_bar">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4 col-md-5 text-md-left text-left col-6">
                    <p>
                        <a href="tel:6358975111"><span><i class="fa fa-phone fa-rotate-90"></i></span><span>&nbsp;&nbsp;63589 75111</span></a>
                        <a href="mailto:admissions@aidtm.ac.in"><span><i class="fa fa-envelope"></i></span><span>&nbsp;&nbsp;admissions@aidtm.ac.in</span></a>
                    </p>
                </div>
                <div class="col-lg-8 col-md-7 col-6">
                    <ul>
                        <li><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong">Click Here!</button></li>
                        @foreach (Item item in element.GetChildren())
                        {
                            Sitecore.Data.Fields.LinkField linkFields = item.Fields["Link"];
                            var link = linkFields.GetFriendlyUrl();
                            <li class="nav-item d-md-inline-block d-none">
                                <a class="nav-link" href="@link">@Html.Sitecore().Field("NavigationTitle", item)</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    @Html.Sitecore().Placeholder("header-menu")
</header>