@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Data.Fields
@using Sitecore.Data.Items

@{


    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var element = Sitecore.Context.Database.GetItem(datasource);




}

<section class="hero_banner_container">
    <div class="owl-carousel inner-banner">
        @foreach (Item item in element.GetChildren())
        {
            Sitecore.Data.Fields.ImageField imgField = ((Sitecore.Data.Fields.ImageField)item.Fields["MediaImage"]);

            string imgurl = Sitecore.Resources.Media.MediaManager.GetMediaUrl(imgField.MediaItem);
			
            <div class="item">
                <picture>
                    <source srcset="@imgurl" media="(min-width:540px)">
                    <source srcset="@imgurl" media="(min-width:0)">
                    <img srcset="" src="@imgurl" alt="Adani Institute">
                </picture>
				 @if (!string.IsNullOrEmpty(item.Fields["MediaTitle"].Value))
				{
                <div class="banner-content">
                    <div class="container-fluid">
                        <h1>@Html.Sitecore().Field("MediaTitle", item)</h1>
                    </div>
                </div>
				}
				else
				{
				<div class="banner-content">
                    <div class="container-fluid">
                        <h1>@Html.Sitecore().Field("MediaDescription", item)</h1>
                    </div>
                </div>
				}
            </div>
        }
    </div>
</section>
@Html.Sitecore().Placeholder("breadcrumb")