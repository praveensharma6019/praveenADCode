@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Data.Fields
@using Sitecore.Data.Items

@{

    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var element = Sitecore.Context.Database.GetItem(datasource);
    var i = 1;

}

<section class="section_padding bg-blue d-lg-block d-none">
    <div class="container-fluid">
        <h2 class="heading heading-white">@Html.Sitecore().Field("Summary", element)</h2>
        <div class="row mb-lg-5 mb-0">
            @foreach (Item items in element.GetChildren())
            {
			 Sitecore.Data.Fields.LinkField linkFields = items.Fields["Link"];
                            var link = linkFields.GetFriendlyUrl();
                Sitecore.Data.Fields.ImageField imgField = ((Sitecore.Data.Fields.ImageField)items.Fields["FacultyImage"]);

                string imgurl = Sitecore.Resources.Media.MediaManager.GetMediaUrl(imgField.MediaItem);
        <div class="col-lg-4 mb-lg-0 mb-3">
            <div class="faculty_main">
                <div class="faculty_main--thumb">
                    <img src="@imgurl">
                </div>
                <div class="faculty_main--desc">
                    <h3>@Html.Sitecore().Field("Title", items)</h3>
                    <p>@Html.Sitecore().Field("ShortDescription", items)</p>
                    <a href="@link" class="">Learn More <span class="ml-2"><img src="-/media/D840D563EDAA464A81D3B33A9FB473BE.ashx"></span></a>
                </div>
            </div>
        </div>
                if(i==3)
                {
                    break;
                }
                i++;
            }
           
          
        </div>
        <p><a href="https://stageadaniinstitute.advaiya.co/faculty-research" class="btn btn-secondary">View All <span class="ml-2"><img src="-/media/DB5DDF8F7E994F22819696D272AC55E9.ashx"></span></a></p>
    </div>
</section>
