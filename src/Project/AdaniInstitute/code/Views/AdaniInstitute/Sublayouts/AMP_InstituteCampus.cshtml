@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Data.Fields
@using Sitecore.Data.Items

@{
    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var element = Sitecore.Context.Database.GetItem(datasource);


}


<section class="section_campus">
    <h2>@Html.Sitecore().Field("Title", element)</h2>

    <amp-carousel height="350" layout="fixed-height" type="slides" role="region" aria-label="" class="carousel" autoplay delay="2000">
        @foreach (Item items in element.GetChildren().ToList())
        {
            Sitecore.Data.Fields.ImageField imgField = ((Sitecore.Data.Fields.ImageField)items.Fields["MediaImage"]);

            string imgurl = Sitecore.Resources.Media.MediaManager.GetMediaUrl(imgField.MediaItem);
            <amp-img src="@imgurl" alt="Adani Institute" layout="responsive" width="300" height="350"></amp-img>
        }
    </amp-carousel>
</section>