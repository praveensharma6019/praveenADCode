@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Data.Fields
@using Sitecore.Data.Items

@{


    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var element = Sitecore.Context.Database.GetItem(datasource);
    var SocialIcon = Sitecore.Context.Database.Items.GetItem("{1E9809BF-A1E6-4BD8-97A9-1071349C85BC}");

    Sitecore.Data.Fields.ImageField imgFields = ((Sitecore.Data.Fields.ImageField)element.Fields["MediaImage"]);

    string imgurls = Sitecore.Resources.Media.MediaManager.GetMediaUrl(imgFields.MediaItem);

}


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-6 mb-lg-0 mb-3">
            <div>
                <img alt="" src="@imgurls" class="img-fluid" />
            </div>
            <div class="mt-4 mb-3">
                @Html.Sitecore().Field("MediaDescription", element)
            </div>
            <ul class="ft-social">
                @if (SocialIcon != null)
                {
                    if (SocialIcon.HasChildren)
                    {

                        foreach (Item item in SocialIcon.GetChildren())
                        {
                            Sitecore.Data.Fields.LinkField linkFields = item.Fields["Link"];
                            var link = linkFields.GetFriendlyUrl();
                            Sitecore.Data.Fields.ImageField imgField = ((Sitecore.Data.Fields.ImageField)item.Fields["Image"]);

                            string imgurl = Sitecore.Resources.Media.MediaManager.GetMediaUrl(imgField.MediaItem);

                            <li><a href="@link"><img alt="" src="@imgurl" /></a></li>

                        }
                    }
                }
               
            </ul>
            <p class="sitemap-link d-block d-lg-none mt-3 p-2">Sitemap<em class="fa fa-angle-down"></em></p>
        </div>
        @Html.Sitecore().Placeholder("footer-bottom")
    </div>
</div>
<div class="bottom_copyright">
    <div class="container-fluid">
        <p>&copy; 2020 Adani Institute of Digital Technology Management</p>
    </div>
</div>