@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Affordable.Website
@using Sitecore.Mvc.Configuration
@*@model Sitecore.Mvc.Presentation.RenderingModel*@
@model Sitecore.Affordable.Website.Models.AffordableFilter

@{

    var AffordableSearchPage = Sitecore.Context.Database.GetItem(Templates.AffordableSearchPage.ID);

    var searchurl = string.Empty;

    if (AffordableSearchPage != null)
    {
        searchurl = AffordableSearchPage.Url();
    }

}
<div class="row">
    <div class="col-sm-4 py-3 col-md-4 col-lg-3">
        <h2><i class="fa fa-home mr-2"></i>Property Search</h2>
    </div>
    <div class="col-sm-4  col-lg-3 col-md-4">
        @Html.TextBoxFor(m => m.qry, new { @class = "form-control py-2", @name = "country", @id = "country", placeholder = "Enter Project or City" })
        @*<input type="text" class="form-control py-2" id="" placeholder="Enter Project or City">*@
    </div>
    <div class="col-sm-3  col-lg-2 col-md-3">
        @Html.DropDownListFor(m => m.type
                              , new SelectList(Model.PropertyTypeList, "Value", "Text", Model.type)
                              , Html.Sitecore().Dictionary("/Search/Type", "Type")
                              , new { @class = "form-control" })
       
    </div>
    <div class="col-sm-3  col-lg-2 col-md-3">
        @Html.DropDownListFor(m => m.status
                                , new SelectList(Model.ProjectStatusList, "Value", "Text", Model.status)
                                , Html.Sitecore().Dictionary("/Search/Status", "Status")
                                , new { @class = "form-control" })
    </div>
    <div class="col-sm-3  py-3 col-lg-2 col-md-3">
        <button type="submit" class="btn btn-primary w-100">@Html.Sitecore().Dictionary("/Search/Find", "Find")<i class="fa fa-search ml-2"></i></button>
    </div>
</div>