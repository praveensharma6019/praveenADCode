@using Sitecore.Affordable.Website
@using Sitecore.Mvc.Configuration
@model Sitecore.Mvc.Presentation.RenderingModel

@{
    // var id = Sitecore.Context.Database.GetItem("about-us").Url();
    var id = "about-us";
    string RedirectUrl = Request.Url.Scheme + "://" + Request.Url.Host;
    var pagename = Sitecore.Links.LinkManager.GetItemUrl(Sitecore.Context.Item);

}
<form id="enquiry_form1" name="enquiry_form1">
    <input type="hidden" id="FormType" value="Enquiry-Form" />
    <input type="hidden" id="PageInfo" value="@pagename" />
    <div class="modal-body">
        <div class="form-group row">
            <label for="" class="col-5 col-form-label">Name</label>
            <div class="col-7">
                <input type="text" class="form-control" id="uname" placeholder="">
            </div>
        </div>
        <div class="form-group row">
            <label for="" class="col-5 col-form-label">Mobile</label>
            <div class="col-7">
                <input type="number" class="form-control" id="umobile" name="umobile" placeholder="">
            </div>
        </div>
        <div class="form-group row">
            <label for="" class="col-5 col-form-label">Email</label>
            <div class="col-7">
                <input type="text" class="form-control" id="uemail" placeholder="">
            </div>
        </div>
        <div class="form-group row">
            <label for="" class="col-5 col-form-label">Country</label>
            <div class="col-7">
                @Html.DropDownList("country_code", new List<SelectListItem>
            {
               new SelectListItem{Value="AU",Text="Australia"},
               new SelectListItem{Value="CA",Text="Canada"},
               new SelectListItem{Value="BR",Text="Brazil"},
               new SelectListItem{Value="CN",Text="China"},
               new SelectListItem{Value="DE",Text="Germany"},
               new SelectListItem{Value="GB",Text="United Kingdom"},
               new SelectListItem{Value="IE",Text="Ireland"},
               new SelectListItem{Value="IN",Text="India"},
               new SelectListItem{Value="IT",Text="Italy"},
               new SelectListItem{Value="MX",Text="Mexico"},
               new SelectListItem{Value="US",Text="United States"},
            }, "Select Country",new {id="ucountry", @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="" class="col-5 col-form-label">State</label>
            <div class="col-7">
                @Html.DropDownList("state_code", new List<SelectListItem> { }, "Select State", new { id = "ustate", @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="" class="col-5 col-form-label">Projects Interested</label>
            <div class="col-7">
                <select class="form-control" id="uinterest">
                    <option>Aangan-Shantigram</option>
                    <option>Aangan-Gurugram</option>
                    <option>Pratham</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="" class="col-5 col-form-label">Budget(In Rs.):</label>
            <div class="col-7">
                <select class="form-control" id="ubudget">
                    <option>Select Budget</option>
                    <option>5-15lacs</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="" class="col-5 col-form-label">Remarks</label>
            <div class="col-7">
                <textarea rows="2" cols="50" id="uremarks" class="form-control"></textarea>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a href="" class="btn btn-primary blueBtn my-3 my-md-0 ml-auto" id="btnEnquirySubmit">Submit</a>
    </div>
</form>


























