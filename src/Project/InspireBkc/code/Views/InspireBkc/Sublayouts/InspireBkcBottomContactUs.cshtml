    <div class="container">
        <div class="row">
            <div class="col-md-12 pb-3 text-center">
                <h2 class="heading-title">Contact us</h2>
                <div class="line-below"></div>
            </div>
            <div class="col-md-12" style="background: url('-/media/0603B00AFBED4643AA7AAFD139BF2377.ashx'); background-size: cover;">
                <form name="Contact" id="contactform" action="" method="post" autocomplete="off">
                    <div class="row px-md-5 px-xs-2 py-5" style="background: rgba(255, 255, 255, 0.7);">
                        <div class="col-md-7 my-auto">
                            <h4>Head Office</h4>
