@using Sitecore.Data.Fields
@using Sitecore.Data.Items
@using Sitecore.Links;
@using Sitecore.Foundation.Website.Helper
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Collections
@using Sitecore.Foundation.Dictionary.Repositories
@using Sitecore.Mvc.Presentation
@using System.Text.RegularExpressions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@{
    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var element = Sitecore.Context.Database.GetItem(datasource);
    var sortedItem = element.GetChildren().OrderByDescending(x => x.Fields["Date"].Value);
}



<div class="col-lg-6 my-2">


    @foreach (var item in sortedItem)
    {
        var imgurl = Helper.ImageUrl("Image", item);
        string linkUrl = Sitecore.Links.LinkManager.GetItemUrl(item);
        <div class="owl-carousel single-slide">
            <a href="@linkUrl">
                <div class="item">
                    <img src="@imgurl" class="img-fluid">
                </div>
                <div class="h-100">

                    <h3>@item.Fields["Title"]</h3>

                </div>
            </a>
        </div>

    }

</div>
