@using Sitecore.Foundation.Assets
@using Sitecore.Foundation.Assets.Models
@using Sitecore.Foundation.Assets.Services
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Mvc.Analytics.Extensions
@using Sitecore.ExperienceForms.Mvc.Html
@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Mvc
@inherits WebViewPage
@{
    Layout = null;
    var pagename = Sitecore.Links.LinkManager.GetItemUrl(Sitecore.Context.Item);
}
<!doctype html>
<html lang="@Sitecore.Context.Language.CultureInfo.TwoLetterISOLanguageName">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@Html.Sitecore().Dictionary("/sitecore/content/BelvedereClubGurgaon/Global/Dictionary/PageMetadata/Title", "Belvedere Club Ahmedabad")</title>

    <!--Google Fonts-->
    <link href="https://fonts.googleapis.com/css?family=Great+Vibes" rel="stylesheet">

    <!--[if IE 9] qwerty>
      <link href="https://cdn.jsdelivr.net/gh/coliff/bootstrap-ie8/css/bootstrap-ie9.min.css" rel="stylesheet">
    <![endif]-->
    <!--[if lte IE 8]>
      <link href="https://cdn.jsdelivr.net/gh/coliff/bootstrap-ie8/css/bootstrap-ie8.min.css" rel="stylesheet">
      <script src="https://cdn.jsdelivr.net/g/html5shiv@3.7.3"></script>
    <![endif]-->

    @if (!Sitecore.Context.PageMode.IsExperienceEditor)
    {
        @Html.Sitecore().Placeholder("head")
    }
    <!-- Latest compiled and minified JavaScript -->
    @RenderAssetsService.Current.RenderScript(ScriptLocation.Head)

    @RenderAssetsService.Current.RenderStyles()

    @Html.Sitecore().VisitorIdentification()

</head>
<body class=" @(Sitecore.Context.PageMode.IsNormal ? "" : (Sitecore.Context.PageMode.IsExperienceEditor ? "pagemode-edit" : "pagemode-preview"))">
    <!-- Header -->
   
    @Html.Sitecore().Placeholder("header-section")
    <!-- /Header -->
    <!--  Main content Section-->
    <main role="main">
        <div class="contentSection homepage section-wrapper">
            @Html.Sitecore().Placeholder("page-layout")
        </div>
    </main><!-- /.container -->
    <!--  /Main content Section-->
    <!-- Footer -->
    <footer class="footerSec">
        @Html.Sitecore().Placeholder("footer")
    </footer>
    <!-- /Footer -->
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <button onclick="topFunction()" id="scrolltop" title="Go to top"><i class="fa fa-arrow-up"></i></button>

    <!-- Enquire Now -->
    <div class="enquirenow">
        <a href="#enquireform" data-toggle="modal" data-target="#enquireform"><img src="-/media/A47DF056A382447C95361A09B3AD818A.ashx"></a>
    </div>
    <!-- The Modal -->
    <div class="modal popup-block" id="enquireform">
        <div class="modal-dialog modal-dialog-centered p-4">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Enquire Now</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <!-- Modal body -->
                <div class="modal-body form-body">
                    @Html.Sitecore().Placeholder("enquire-now")
                </div>
            </div>
        </div>
    </div>
    <!-- Enquire Now -->
    <a id="back-to-top" href="#" class="btn btn-primary btn-lg back-to-top" role="button" title="" data-toggle="tooltip" data-placement="left" data-original-title="Click to return on the top page" style="display: inline;"><span class="fa fa-angle-up"></span></a>
    @Html.Sitecore().Placeholder("page-sidebar")

    @RenderAssetsService.Current.RenderScript(ScriptLocation.Body)
    @Html.RenderFormScripts()

    @if (pagename == "/" || pagename == "en")
    {
        <script>

          
            /*Animate Anchor Scrooll*/
            AOS.init({
                easing: 'ease-in-out-sine'
            });
            $('.discovermore a[href*=#]').on('click', function (e) {
                e.preventDefault();
                $('html, body').animate({ scrollTop: $($(this).attr('href')).offset().top }, 500, 'linear');
            });
            $.smartscroll({
                mode: "set",
                innerSectionScroll: false,
                toptotop: false
            });


        </script>
    }


    </body>
</html>
