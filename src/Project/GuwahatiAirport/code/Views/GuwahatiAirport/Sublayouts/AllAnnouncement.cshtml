@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.TrivandrumAirport.Website
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@model RenderingModel
@{
    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var parent = Sitecore.Context.Database.GetItem(datasource);
}

<div class="pageContent">
    @if (datasource != null)
    {
        <div class="container">
            <!-- Section -->
            <div class="announcement">
                @foreach (var child in parent.Children.ToList())
                {
                    var itemURL = Sitecore.Links.LinkManager.GetItemUrl(child);

                    <div class="panel">
                        <div class="row align-items-center form-inner-box">
                            <div class="col-sm-4 cert-thumb">
                                @Html.Sitecore().Field("Image", child)
                            </div>
                            <div class="col-sm-8">
                                <h5 class="txt-orange mb-2">@Html.Sitecore().Field("Title", child)</h5>
                                <h6 class="txt-gray">
                                    @Html.Sitecore().Field(Template.Article.Fields.DateCreated, child, new
                               {
                                   format = "dd/MM/yyyy"
                               })
                                </h6>
                                <p class="py-3 mh-130">@Html.Sitecore().Field("Summary", child)</p>
                                <div class="text-left">
                                    <h5><a href="@itemURL" class="btn btnBordered serviceBtn readmore">Read more</a></h5>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <!-- /Section -->
        </div>
    }
</div>