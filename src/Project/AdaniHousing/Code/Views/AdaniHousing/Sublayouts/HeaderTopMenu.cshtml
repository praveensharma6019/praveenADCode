@using Sitecore.AdaniCapital.Website.Helper
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Data.Fields
@using Sitecore.Data.Items
@{
    /**/

    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var element = Sitecore.Context.Database.GetItem(datasource);
}
@if (element != null)
{
    <div class="navbar-nav-scroll ml-auto mr-lg-4 d-lg-flex d-none">
        <ul class="navbar-nav bd-navbar-nav flex-row nav-secondary">
            @if (element.HasChildren)
            {
                foreach (Item item in element.GetChildren())
                {
                    LinkField lf = item.Fields["LinkUrl"];
                    Helper.LinkUrl(item.Fields["LinkUrl"]);
                    if (lf.LinkType == "external")
                    {
                        <li class="nav-item">
                            <a class="nav-link" target="_blank" href="@Helper.LinkUrl(item.Fields["LinkUrl"])">@item.Fields["Title"]</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Helper.LinkUrl(item.Fields["LinkUrl"])">@item.Fields["Title"]</a>
                        </li>
                    }
                }
            }           

        </ul>
    </div>
}
