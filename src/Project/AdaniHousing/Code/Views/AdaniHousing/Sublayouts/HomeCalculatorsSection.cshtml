<section class="section_padding_top pb-5 bg-gray position-relative section_cal" id="section_cal">
    <div class="container position-relative" onmousemove="calculateEMI()">
        <h2>Calculators</h2>
        <ul class="nav nav-tabs nav-justified" id="accordion" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="EMI-tab" data-toggle="tab" href="#EMI" role="tab" aria-controls="EMI" aria-selected="true">EMI Calculator</a>
            </li>
            <li class="nav-item d-none">
                <a class="nav-link" id="Loan-tab" data-toggle="tab" href="#loan" role="tab" aria-controls="loan" aria-selected="false">Apply for Loan</a>
            </li>
            <li class="nav-item d-none">
                <a class="nav-link" id="status-tab" data-toggle="tab" href="#app-status" role="tab" aria-controls="app-status" aria-selected="false">Application Status</a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="EMI" role="tabpanel" aria-labelledby="EMI-tab">
                <button class="collapsed d-lg-none d-block" data-toggle="collapse" data-target="#emi-calc">EMI Calculator</button>
                <div class="py-4 collapse show" id="emi-calc">
                    <div class="row">
                        <div class="col-lg-5 mr-auto">
                            <form>
                                <div class="form-group mb-4">
                                    <label for="loantype">Loan Type*</label>
                                    <select class="form-control" id="loantype">
                                        <option>Home Loan</option>
                                        <option>Mortgage Loan</option>
                                    </select>
                                </div>
								<!--  emicalculator start -->
                               <div class=" range-slider mb-4">
				<label class="mb-2 d-block">Loan Amount* <p class="text-right"><span class="ml-1" style="color:#28a49a">₹</span><b style="color:#28a49a" id="lbprincipal"></b><p></label>
				
				<input type="range" onclick="calculateEMI()" min="100000" max="2000000" step="1000" id="loanamount" value="100000" class="" style="width:428px;"> 
				<p class="range-limit"><span>₹ 1 Lakh</span><span class="float-right">₹ 20 Lakh</span> </p><p class="text-right">
				<span id="slider_value" style="color:red;"></span>
			  </div>
			  <div class="range-slider mb-4">
				<label class="mb-2 d-block">Interest Rate* <p class="text-right"><b style="color:#28a49a" id="lbinterest"></b><span class="ml-1" style="color:#28a49a">%</span><p></label>
				<input type="range" onclick="calculateEMI()" min="12" max="22" step="0.1" id="interestrate" value="12" class="" style="width:428px;">
              <p class="range-limit"><span>12 %</span><span class="float-right">22 %</span> </p>
				 
			  </div>
			  <div class="range-slider mb-4">
				<label class="mb-2 d-block">Tenure* <p class="text-right"><b style="color:#28a49a" id="lbtenure"></b><span class="ml-1" style="color:#28a49a">Months</span><p></label> 
				<input type="range" onclick="calculateEMI()" min="12" max="240" step="1" value="12" id="months" class="" style="width:428px;">
				
				<p class="range-limit"><span>12 Months</span><span class="float-right">240 Months</span> </p>
			  </div>
                            </form>
                        </div>
                        <div class="col-lg-6 ml-auto">
                            <div class="bg-white h-100 payment_block">
                              <h6>Total Amount Payable</h6>
				<h4><span>₹</span><b id="lbtotamt"></b></h4>
				<p>EMI Distribution</p>
				<table class="table mb-4">
				
					<tr>
						<td>Loan Amount</td>
						<td class="text-right"><span class="mr-1">₹</span><b id="lbprincipal1"></b></td>
					</tr>
					
					<tr>
						<td>Interest rate / Year</td>
						<td class="text-right"><b id="lbinterest1"></b><span class="ml-1">%</span></td>
					</tr>
					
					<tr>
						<td>Tenure</td>
						<td class="text-right"><b id="lbtenure1"></b><span class="ml-1">Months</span></td>
					</tr>
					<td class="border-bottom align-items-center"></td>
					<tr>
						<td>EMI / Month</td>
						<td class="text-right"><span class="mr-1">₹</span><b id="lbMonthEmi"></b></td>
					</tr>
					<tr>
						<td>Total Interest Amount</td>
						<td class="text-right"><span class="mr-1">₹</span><b id="lbtotintamt"></b></td>
					</tr>
					<tr>
						<td>Yearly Interest Amount</td>
						<td class="text-right"><span class="mr-1">₹</span><b id="lbtotintyear"></b></td>
					</tr>
                                </table>
                                <p class="text-center"><a href="/apply-for-loan" class="mr-3 mb-3 btn btn-primary">Apply Now</a><a href="req_callback" data-toggle="modal" data-target="#req_callback" class="mr-3 btn btn-gradient mb-3">Request a call</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
			  <!--  emicalculator end -->
