@model Sitecore.TrivandrumAirport.Website.Model.UserDetails

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

<div id="default_modal" class="modal fade show" role="dialog" style="display: none; padding-right: 17px;" data-id="">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        @using (Html.BeginForm("UserRegistration", "TrivandrumAirport", FormMethod.Post, new { id = "UseRegistrationForm" }))
        {

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <p>Please fill in your contact information to obtain the bid documents.</p>
                    <button type="button" class="close reset" data-dismiss="modal">X</button>
                </div>
                <div class="modal-body">
                    <p class="mb-3 txt-xs text-right">All <span class="required">*</span> Fields are Mandatory.</p>
                    @Html.HiddenFor(x => x.TenderID)

                    <form class="pt-3">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="" class="form-label">Name<span class="required">*</span></label>
                                    <div class="">
                                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", required = "required", id = "name", @maxlength = "50", @onkeypress = "return onlyAlphabets(event,this);" })
                                        @Html.ValidationMessageFor(x => x.Name)
                                        <span class="field-validation-error" id="nameerror"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 tooltip1">
                                <div class="form-group">
                                    <label for="" class="form-label">Company<span class="required">*</span></label>
                                    <div class="">
                                        @Html.TextBoxFor(x => x.Company, new { @class = "form-control", required = "required", id = "company", @maxlength = "50" })
                                        <span class="tooltiptext1 UniqueIdtooltip">Please enter lead member name in case of the consortium</span>
                                        @Html.ValidationMessageFor(x => x.Company)
                                        <span class="field-validation-error" id="companyerror"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="" class="form-label">Mobile Number<span class="required">*</span></label>
                                    <div class="">
                                        @Html.TextBoxFor(x => x.MobileNo, new { @class = "form-control", required = "required", id = "mobileNumber", @onfocusout = "validateMobile(event,this);" })
                                        @Html.ValidationMessageFor(x => x.MobileNo)
                                        <span class="field-validation-error" id="mobileerror"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 tooltip1">
                                <div class="form-group ">
                                    <label for="" class="form-label">Company PAN<span class="required">*</span></label>
                                    <div class="">
                                        @Html.TextBoxFor(x => x.UniqueId, new { @class = "form-control", required = "required", id = "UniqueId" ,@onfocusout = "onchangeCompanyPAN(event,this);" })
                                        <span class="tooltiptext1 UniqueIdtooltip">In absence of PAN number, please enter your Tax identification number</span>
                                        @Html.ValidationMessageFor(x => x.UniqueId)
                                        <span class="field-validation-error" id="UniqueIderror"></span>
                                    </div>

                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="" class="form-label">Fax Number</label>
                                    <div class="">
                                        @Html.TextBoxFor(x => x.FaxNo, new { @class = "form-control", id = "fax", @onfocusout = "onchangeValidateFax(event,this);" })
                                        @Html.ValidationMessageFor(x => x.FaxNo)
                                        <span class="field-validation-error" id="faxerror"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="" class="form-label">Email<span class="required">*</span></label>
                                    <div class="">
                                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", required = "required", id = "emailAddress", @onfocusout = "validateEmailId(event,this);" })
                                        @Html.ValidationMessageFor(x => x.Email)
                                        <span class="field-validation-error" id="emailerror"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input id="chkLegalDisclaimer" type="checkbox" />
                                    <a href="-/media/EC68A7EB3C7A43C5AB21290DFB653921.ashx" target="_blank">@Html.Label("Terms and Conditions*", htmlAttributes: new { @class = "control-label" })</a>
                                    <span class="field-validation-error" id="legalDisclaimerError"></span>

                                </div>
                            </div>
                            <div class="col-md-4 mb-3">

                                <div id="recaptcha1"></div>
                                <span class="field-validation-error" id="Captchaerror"></span>

                            </div>
                            <div class="col-lg-12">
                                <div class="form-group py-2">
                                    <div class="col-sm-12 text-right">
                                        <button type="submit" id="UseRegistrationBtn" class="btn btn-primary">Submit</button>
                                        <button type="reset" class="btn btn-secondary reset">Reset</button>
                                    </div>
                                </div>
                            </div>
                        </div>


                        @*<div class="form-group row">
                                <label for="" class="col-sm-4 col-md-4 col-form-label">Phone Number</label>
                                <div class="col-sm-8 col-lg-6">
                                    @Html.TextBoxFor(x => x.PhoneNo, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.PhoneNo)

                                </div>
                            </div>*@




                    </form>
                    <p class="FT_10 txt-xs bg-gray p-2"> <label id="SupportEmailAddress"></label> </p>   <p class="FT_10 txt-xs bg-gray p-2">Please mention the correct email address and contact information as the RFP documents shall be sent to the mentioned email address and any future information shall be conveyed to the contact person at the provided contact information.</p>
                </div>
            </div>
        }
    </div>
</div>
