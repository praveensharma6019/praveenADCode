                            </div>
                            if (Model.IsPQVerified == false && Model.PQApprovalRequired == true)
                            {
                                <div class="form-group row  pt-3">
                                    <label for="" class="col-sm-4 col-md-3 col-form-label txt-left">@Html.Sitecore().Dictionary("TrivandrumAirport/Tender/Envelope-I Label", "PQ Documents"):</label>
