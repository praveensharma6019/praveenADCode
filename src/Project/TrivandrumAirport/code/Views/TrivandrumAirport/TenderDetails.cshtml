@using Sitecore.Mvc
@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Mvc.Configuration
@model Sitecore.TrivandrumAirport.Website.Model.Tender
<section class="bg-white py-5">
    <div class="container">
        <!-- Section -->
        <div class="pb-3 panel">
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="form-group row">
                    <input id="message" type="hidden" value="@ViewBag.Message" />
                </div>
            }
            @using (Html.BeginForm("Logout", "TrivandrumAirport", FormMethod.Post))
            {

                <div class="col-12 p-0 pb-3">
                    <div class="float-right"><button type="submit" class="btn btn-primary">@Html.Sitecore().Dictionary("TrivandrumAirport/Tender/Logout", "Logout")</button></div>
                    <div class="clearfix"></div>
                </div>
            }

            @if (Model != null)
            {
                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label for="" class="form-label">Name:</label>
                            <div class="">
                                <input type="text" class="form-control" value="@Model.UserName" placeholder="" disabled="">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label for="" class="form-label">Company Name:</label>
                            <div class="">
                                <input type="text" class="form-control" value="@Model.CompanyName" placeholder="" disabled="">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label for="" class="form-label">Email:</label>
                            <div class="">
                                <input type="text" class="form-control" value="@Model.Email" placeholder="" disabled="">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label for="" class="form-label">Mobile:</label>
                            <div class="">
                                <input type="text" class="form-control" value="@Model.Mobile" placeholder="" disabled="">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label for="" class="form-label">Tender ID:</label>
                            <div class="">
                                <input type="text" class="form-control" value="@Model.NITNo" placeholder="" disabled="">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label for="" class="form-label">Tender Name:</label>
                            <div class="">
                                <input type="text" class="form-control" value="@Model.TenderName" placeholder="" disabled="">
                            </div>
                        </div>
                    </div>
                    @{
                        var pqStatus = Model.IsPQVerified == true ? "Approved" : (Model.IsPQVerified == false ? (Model.PQApprovalRequired == true ? "None" : "Rejected") : "None");
                    }
                    @if (Model.IsPQVerified == true)
                    {
                        <div class="col-lg-6 col-md-6">
                            <div class="form-group">
                                <label for="" class="form-label">PQ Approval Status:</label>
                                <div class="">
                                    <input type="text" class="form-control" value="@pqStatus" placeholder="" disabled="">
                                </div>
                            </div>
                        </div>
                    }
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label for="" class="form-label">PQ Document Upload Status:</label>
                            <div class="">
                                <input type="text" class="form-control" value="@Model.PQDocumentStatus" placeholder="" disabled="">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="form-group">
                            <label for="" class="form-label">Tender Document Upload Status:</label>
                            <div class="">
                                <input type="text" class="form-control" value="@Model.DocumentStatus" placeholder="" disabled="">
                            </div>
                        </div>
                    </div>
                    @if (Model.PQApprovalRequired == true)
                    {
                        <div class="col-lg-12 col-md-12">
                            <div class="form-group">
                                <label for="" class="form-label">Download PQ Documents:</label>
                                <div class="">
                                    <ul>
                                        @if (Model.tenderPQdocument != null && Model.tenderPQdocument.Count > 0)
                                        {
                                            /**/
                                            foreach (var item in Model.tenderPQdocument)
                                            {
                                                <li>@Html.ActionLink(item.FileName, "DownloadFile", new { id = item.Id }, new { @class = "txt-orange" })</li>
                                            }
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }

                    @if (Model.IsPQVerified == true || Model.PQApprovalRequired == false)
                    {
                        <div class="col-lg-12 col-md-12">
                            <div class="form-group">
                                <label for="" class="form-label">Download Tender Documents:</label>
                                <div class="">
                                    <ul>
                                        @if (Model.tenderdocument != null && Model.tenderdocument.Count > 0)
                                        {
                                            /**/
                                            foreach (var item in Model.tenderdocument)
                                            {
                                                <li>@Html.ActionLink(item.FileName, "DownloadFile", new { id = item.Id }, new { @class = "txt-orange" })</li>
                                            }
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }

            <div class="my-lg-3 py-lg-3">
                <ul class="nav nav-tabs" id="tenderlogin" role="tablist">
