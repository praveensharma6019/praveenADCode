@using Sitecore
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@model Sitecore.Mvc.Presentation.RenderingModel
@{
    /**/

    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var model = Sitecore.Context.Database.GetItem(datasource);

    var item = Sitecore.Context.Item;

    Sitecore.Data.Fields.ImageField imgField = ((Sitecore.Data.Fields.ImageField)item.Fields["{11F41661-E5FE-44E7-B8DA-7CFF2D39B4B2}"]);

    string ImgUrl = Sitecore.Resources.Media.MediaManager.GetMediaUrl(imgField.MediaItem);


    //  MediaItem item;
    var mediaUrlOptions = new Sitecore.Resources.Media.MediaUrlOptions();
    mediaUrlOptions.AlwaysIncludeServerUrl = true;
    var url = Sitecore.Resources.Media.MediaManager.GetMediaUrl(imgField.MediaItem, mediaUrlOptions);


    var urlOptions = new Sitecore.Links.UrlOptions();
    urlOptions.AlwaysIncludeServerUrl = true;
    var pageUrl = Sitecore.Links.LinkManager.GetItemUrl(Sitecore.Context.Item, urlOptions);


}

