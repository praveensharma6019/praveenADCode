    <link rel="stylesheet" href="@assetDomainURL/assets/css/citytocitylanding.min.css?v=@Cssversion" />
    @Html.Partial("~/Views/SubLayouts/PartialViews/GtmScript.cshtml")

</head>

<body data-bs-spy="scroll">
