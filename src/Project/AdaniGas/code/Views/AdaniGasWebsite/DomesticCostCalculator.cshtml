@using Sitecore
@using Sitecore.Data
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.AdaniGas.Website
@using Sitecore.Resources.Media;
@using Sitecore.Data.Items;
@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.Alerts
@using Sitecore.Foundation.Alerts.Extensions
@model Sitecore.AdaniGas.Website.Models.DomesticPNGCCModel

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <section class="section pb-1">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    @*<h3 class="mb-3">Calculate your savings</h3>*@
                    <p class="pb-3">This calculator will help you to estimate the cost savings you may realize by switching to Domestic PNG. Please enter your total number of KG of LPG used in the last 12 months and the average price per KG of LPG you purchased, then click "Calculate." </p>
                    <p>Domestic PNG rates effective as of 01.10.2015</p>

                </div>
            </div>
        </div>
    </section>
    <section class="section">
        <div class="container" id="calculationdiv">
            <div class="row">
                <div class="col-lg-8">
                    <div class="bg-white p-4 h-100 calcForm">
                        <form>
                            <div class="form-group">
                                <label for="selectCity" class="form-label">Select City</label>
                                @Html.DropDownListFor(m => m.selectedLocationForGasRate, new SelectList(Model.LocationWiseGasRateList, "Text", "Text"), new { @class = "form-control selCity", id = "locations" })
                            </div>
                            <div class="form-group">
                                <label for="cylinderSize" class="form-label">Size of the Cylinder</label>
                                <div class="cylSelBox">
                                    @foreach (var m in Model.CylinderSizesList)
                                    {
                                        <div class="float-left">
                                            @Html.RadioButtonFor(mo => mo.selectedCylinderSize, m.Value)
                                            <label for="@m.Value"></label><span class="iconText">@m.Text</span>
                                        </div>
                                    }
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="form-group">
                                <label for="cylinderSize" class="form-label">Number of cylinders consumed in a year</label>
                                <div class="row">
                                    <div class="col-md-7 pr-0 mt-1">
                                        @*<span class="font-weight-bold indigo-text mr-2 mt-1">0</span>
                                            <input class="border-0 slider" type="range" min="0" max="40" id="count" value="7" />
                                            <span class="font-weight-bold indigo-text ml-2 mt-1">40</span>*@
                                        @Html.EditorFor(m => m.NumberOfCylinders, new { id = "NumberOfCylinder" })
                                        @Html.ValidationMessageFor(x => x.NumberOfCylinders, "", new { @class = "help-block" }, "p")
                                    </div>
                                    <div class="col-md-5">
                                        <span id="selCount" class="txt-orange cylCount"></span> cylinders
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="avgCost" class="d-block form-label">Average cost per cylinder</label>
                                @Html.EditorFor(m => m.AverageCostPerCylinder, new { id = "costPerCyl", @class = "form-control cylCost d-inline" })
                                @Html.ValidationMessageFor(x => x.AverageCostPerCylinder, "", new { @class = "help-block" }, "p")
                            </div>
                            <div class="clearfix"></div>
                        </form>
                        <div class="pt-2 text-right">
                            <input type="submit" value="Calculate" id="calculate" class="btn btn-gradient" />
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="bg-gradient-orange p-4 h-100 position-relative" id="resultBox">
                        <h5 class="">
                            Average cost for piped gas <br>
                            <div class="rupees">
                                <div class="price" id="Ahmedabad" style="display: block;">Rs. <span id="Averagecost">@Model.Averagecost.ToString("0.00")</span> / mmbtu</div>
                            </div>
                        </h5>
                        <div class="Result">
                            <div class="totalCost mt-3"><p>Total Cost</p>Rs. <span class="estimateCost">  @Model.TotalCost.ToString("0.00")</span></div>
                            <div class="totalSaving"><p>Total Saving</p>Rs. <span class="estimateSaving">@Model.TotalSaving.ToString("0.00")</span></div>
                            <div class="clearfix"></div>
                            <div class="equivPanel mt-2">
                                <div class="equivWdth">
                                    <div class="equiv">Equivalent  MMBTU of Gas <span id="mmbtu">@Model.EquivalentMMBTU.ToString("0.00")</span></div>

                                    <div class="clear"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <p class="py-3 mt-4">*The Natural Gas Conversion Calculator ("calculator") is provided as a reference tool only and without warranties of any kind either express or implied. Adani Total Gas Ltd. makes no warranties or representations with respect to errors or omissions that maybe contained in the calculator, the accuracy of the calculator contents, or that the calculator is virus-free. The risk of use of the calculator is solely upon the user. Under no circumstances will Adani Total Gas Ltd. be liable for any direct, indirect, special, incidental or consequential damages arising out of your accessing, browsing, or using, or your inability to access, browse, or use the calculator.</p>

        </div>
    </section>
}
