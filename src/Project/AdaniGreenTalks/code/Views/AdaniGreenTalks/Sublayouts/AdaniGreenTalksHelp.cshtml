@model Sitecore.Mvc.Presentation.RenderingModel
@{
    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    Item model = Sitecore.Foundation.SitecoreExtensions.Extensions.ItemExtensions.getItem(datasource);

    var FAQSearchPage = Sitecore.Context.Database.GetItem(AdaniGreenTalks.Templates.FAQSearchPage.ID);
    var faqSearchUrl = string.Empty;

    if (FAQSearchPage != null)
    {
        faqSearchUrl = FAQSearchPage.Url();
    }

}

