@using Sitecore.Data.Items
@using Sitecore.Mvc
@model Sitecore.Mvc.Presentation.RenderingModel
@{
    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    Item model = Sitecore.Context.Database.GetItem(datasource);
}
<!-- forth section start -->
<div class="container">
    <div id="grid">

        <div class="row align-items-center ml-3 mx-3">
            <div class="col-lg-8 col-md-8 col-sm-12">
                <div id="solutionHeading" class="my-3">
                    <h1 class="solHead">@Html.Sitecore().Field("MediaTitle", model)</h1>
                </div>
                <div id="solPara" class="my-3">
                    @Html.Sitecore().Field("MediaDescription", model)
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 w-fit mr-auto text-center">
                @{
                    Sitecore.Data.Fields.ImageField imgField = ((Sitecore.Data.Fields.ImageField)model.Fields["MediaImage"]);
                    if (imgField != null && imgField.MediaItem != null)
                    {
                        var Url = Sitecore.Resources.Media.MediaManager.GetMediaUrl(imgField.MediaItem);

                        <div class="text-center">
                            @if (Url != null)
                            {
                                <img src="@Url" alt="" class="grid1Img1" />
                            }
                            else
                            {
                                <img src="#" alt="" class="grid1Img1" />
                            }
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
<!-- forth section end -->