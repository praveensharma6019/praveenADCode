@using Sitecore
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Data.Fields
@using Sitecore.Data.Items
@using Sitecore.Foundation.Assets
@using Sitecore.Foundation.Assets.Models
@using Sitecore.Foundation.Assets.Services
@using Sitecore.ExperienceForms.Mvc.Html
@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Mvc
@using Sitecore.AdaniGreenTalks.Website
@model Sitecore.Mvc.Presentation.RenderingModel
@{
    Item rootItem = Sitecore.Context.Database.GetItem(Sitecore.Context.Site.RootPath);
    string imgurl = "#";
    string altText = string.Empty;

}

<footer>
    <div class="footer-top">
        @if (rootItem != null)
        {

            Sitecore.Data.Fields.ImageField imgField = ((Sitecore.Data.Fields.ImageField)rootItem.Fields["FooterLogoImage"]);
            if (imgField != null && imgField.MediaItem != null)
            {
                imgurl = FieldExtensions.ImageUrl(imgField);
                altText = FieldExtensions.ImageAlternateText(imgField);
            }

            <div class="container">
                <div class="footer-logo">
                    <img src="@imgurl" alt="@altText" />
                </div>
                <div class="footer-nav-wrap">
                    <div class="row">
                        @Html.Sitecore().Placeholder("footer-links")
                        @Html.Sitecore().Placeholder("footer-social-links")

                    </div>
                </div>
            </div>

        }
    </div>
    <div class="footer-goals show-on-large">
        <div class="container">
            <h2>Sustainable Development Goals</h2>
            <p>@Html.Sitecore().Placeholder("Sustain-Goals")</p>
        </div>
    </div>
    <div class="footer-bottom">
        <div class="container">
            <div class="copyright">
                <p>@Html.Sitecore().Field(Constant.Copyright, rootItem)</p>
            </div>
        </div>
    </div>
</footer>
