@using Sitecore
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Data.Fields
@using Sitecore.Data.Items
@using Sitecore.Foundation.Assets
@using Sitecore.Foundation.Assets.Models
@using Sitecore.Foundation.Assets.Services
@using Sitecore.ExperienceForms.Mvc.Html
@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Mvc
@using Sitecore.AdaniGreenTalks.Website
@using AdaniGreenTalks = Sitecore.AdaniGreenTalks.Website
@model Sitecore.Mvc.Presentation.RenderingModel
@{
    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    Item model = Sitecore.Context.Database.GetItem(datasource);
    string imgurl = "#";
    string altText = string.Empty;
    string linkvalueurl = "#";
    var ImageTemplatedid = AdaniGreenTalks.Templates.ImageTemplate.ID;
    var linkTemplatedid = AdaniGreenTalks.Templates.LinkTemplate.ID;
    var linkitem = model.GetChildren().Where(c => c.TemplateID == linkTemplatedid).FirstOrDefault();
}

@if (model != null)
{
    if (model.HasChildren)
    {
        string divOuterClass = model.Fields[Constant.cssClass].Value;
        <div class="@divOuterClass">
            <div class="container">
                <div class="top">
                    <h2>@Html.Sitecore().Field("Text", model)</h2>
                    <p> @Html.Sitecore().Field("MediaInfo", model)</p>
                </div>
                <div class="wrap">
                    @foreach (Item child in model.GetChildren().Where(c => c.TemplateID == ImageTemplatedid).ToList())
                    {
                        Sitecore.Data.Fields.ImageField imgField = ((Sitecore.Data.Fields.ImageField)child.Fields[Constant.MediaImage]);
                        if (imgField != null && imgField.MediaItem != null)
                        {
                            imgurl = Sitecore.Resources.Media.MediaManager.GetMediaUrl(imgField.MediaItem);
                            altText = imgField.Alt;
                        }
                        <div class="item">
                            <div class="img">
                                <img src="@imgurl" alt="@altText">
                            </div>
                            <div class="desc">
                                <h3>@Html.Sitecore().Field(Constant.MediaTitle, child)</h3>
                                <p>
                                    @Html.Sitecore().Field(Constant.MediaDescription, child)
                                </p>
                                <div class="byline">@Html.Sitecore().Field(Constant.DateText, child)</div>
                            </div>
                        </div>
                    }

                </div>
                @if (linkitem != null)
                {
                    Sitecore.Data.Fields.LinkField linkvalue = linkitem.Fields[Constant.LinkUrl];
                    if (linkvalue != null)
                    {
                        linkvalueurl = linkvalue.GetFriendlyUrl();
                    }

                    if (linkvalueurl != "#")
                    {
                        if (linkvalue.LinkType.ToLower() == "internal")
                        {
                            <div class="green-button-section">
                                <a href="@linkvalueurl" class="btn">@Html.Sitecore().Field("Title", linkitem)</a>
                            </div>
                        }
                        if (linkvalue.LinkType.ToLower() == "external")
                        {
                            <div class="green-button-section">
                                <a href="@linkvalueurl" target="_blank" class="btn">@Html.Sitecore().Field("Title", linkitem)</a>
                            </div>
                        }
                    }
                    else
                    {<div class="green-button-section">
                            <a href="javascript:void(0)">
                                @Html.Sitecore().Field(Constant.Title, linkitem)
                            </a>
                        </div>
                    }
                }
            </div>

        </div>
    }
}

