    </ul>
    <footer>
        @if (usertype == "superadmin" && usermode == "admin")
        {
            <a href="/AGELPortal/Home/dashboard"><img src="/images/AGELPortal/logo.svg" alt="adani Renewables" /></a>
        }
        else
        {
            <a href="/AGELPortal/Home"><img src="/images/AGELPortal/logo.svg" alt="adani Renewables" /></a>
        }

