@using Sitecore.Mvc.Configuration;
@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Mvc
@using Sitecore.Foundation.SitecoreExtensions.Extensions

@model Sitecore.AGELPortal.Website.Models.PortalRegistrationModel

@{
    var usertype = Session["AGELPortalUserType"]?.ToString();
    var username = Session["AGELPortalUserName"]?.ToString();
    Layout = null;
    var mobile1 = Model?.mobile;

    Uri myUri = new Uri(Request.Url.AbsoluteUri);
    var mobile = HttpUtility.ParseQueryString(myUri.Query).Get("mobile");
    if (mobile == null)
    {
        mobile = mobile1;
    }
    var usermode = Session["AGELPortalUserViewMode"]?.ToString();
}


<div class="container">
    @*<div class="breadcrumbs">
        @if (usertype == "superadmin" && usermode == "admin")
