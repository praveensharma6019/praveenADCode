@using System;
@using System.Web;
@using Sitecore.Foundation.Dictionary.Repositories;
@using Sitecore.AGELPortal.Website.Models;
@using System.ComponentModel.DataAnnotations;
@using System.Web.Mvc;
@using Sitecore.Data;
@using Sitecore.AGELPortal.Website;
@model VideoDetailsModel

@if (Model.aGELPortalContent != null)
{

    var usertype = Session["AGELPortalUserType"]?.ToString();
    <link href="https://amp.azure.net/libs/amp/latest/skins/amp-default/azuremediaplayer.min.css" rel="stylesheet">
    <script src="https://amp.azure.net/libs/amp/latest/azuremediaplayer.min.js"></script>
    <div class="container">
        <div class="breadcrumbs">
            <a href="/AGELPortal/Home" class="breadcrumb">Home</a>
            @*@if (usertype == "superadmin")
            {
                <a href="/dashboard" class="breadcrumb">Home</a>
            }
            else
            {
                <a href="/" class="breadcrumb">Home</a>
            }*@
            <a href="/AGELPortal/Home/Video_List" class="breadcrumb">Videos</a>
            <a href="#" class="breadcrumb">@Model.aGELPortalContent.title</a>
        </div>
        <div class="videos-details">
            <div class="card">
                <div class="card-image wrapper">
                    <video id="vid1" class="azuremediaplayer amp-default-skin" autoplay controls width="1130px" height="400px" poster="" data-setup='{"techOrder": ["azureHtml5JS", "flashSS", "html5FairPlayHLS","silverlightSS", "html5"], "nativeControlsForTouch": true}'>
                        <source src="@Model.aGELPortalContent.url" type="application/vnd.ms-sstr+xml" />
                        <p class="amp-no-js">
                            To view this video please enable JavaScript, and consider upgrading to a web browser that supports HTML5 video
                        </p>
                    </video>
                </div>
                <div class="content-head">
                    <h4>@Model.aGELPortalContent.title</h4>
                    <p>@Model.aGELPortalContent.DocVideoCnt</p>
                </div>
                <div class="content-head content-description">
                    <h4>Description</h4>
                    <p>
                        @Model.aGELPortalContent.discription
                    </p>
                </div>
            </div>
        </div>
    </div>
}

</div>

    @*left: calc(50% - 30px);
    top: calc(50% - 50px);*@