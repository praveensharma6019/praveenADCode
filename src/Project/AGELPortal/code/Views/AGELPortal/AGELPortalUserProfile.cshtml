@using Sitecore.Mvc.Configuration;
@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Mvc
@using Sitecore.Foundation.SitecoreExtensions.Extensions


@model Sitecore.AGELPortal.Website.Models.PortalAddUserModel

@{
    Layout = null;
    var usertype = Session["AGELPortalUserType"]?.ToString();
    var usermode = Session["AGELPortalUserViewMode"]?.ToString();
}

<div class="container">
    <div class="breadcrumbs">
        @if (usertype == "superadmin" && usermode == "admin")
        {
            <a href="/AGELPortal/Home/dashboard" class="breadcrumb">Home</a>
        }
        else
        {
            <a href="/AGELPortal/Home" class="breadcrumb">Home</a>
        }
        <a href="/AGELPortal/Home/My_Profile" class="breadcrumb">My Profile</a>
    </div>
    <div class="row">
        <div class="col s12 l3">
            <!--Category nav-->
            <div class="side-nav hide-on-med-and-down">
                <ul class="collapsible expandable z-depth-0">
                    <li class="active">
                        @*<div class="collapsible-header brand-gradient-left brand-gradient-thin outlined"> 
                            <a href="#"><i class="i-cross-c"></i>Category</a> 
                        </div>*@
                        <div class="collapsible-body">
                            <div class="submenu">
                                <a href="/AGELPortal/Home/My_Profile" class="active brand-gradient-parent brand-gradient-left brand-gradient-thin outlined">My Profile</a>
                                <!-- <a href="/AGELPortal/Home/change_mobile">Change Mobile</a> -->
                                <a href="/AGELPortal/Home/My_Profile_Change_Password">Change Password</a>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
            <!--Cn-->
        </div>
        <div class="col s12 l8 offset-l1">
            <!--Page 1 Start-->
            <div class="section-header">
                <h1>My Profile</h1>
                @if (Session["myprofilechangmobileno"] != null)
                {
                <div id="toast-success" class="modal modal-alert modal-toast custom-toast-success" style="display: block; margin-top:-150px;">
                    <header class="modal-header">
                        <h4>
                            <a class="toast-close">
                                <i class="i-tick"></i>
                            </a>
                            @Session["myprofilechangmobileno"]

                        </h4>
                        <a class="modal-close">
                            <i class="i-cross"> </i>
                        </a>
                    </header>
                </div>
                   Session["myprofilechangmobileno"] = null;
                }
                <p>
                    Find below the information we have about you. Incase there is change in any of your profile
                    details, just retype and click on save.
                </p>
            </div>
            <section class="section-wrapper">
                <div class="submit-new-request">
                    <div class="section-header">
                        <h4>My Personal Information</h4>
                    </div>
                    <div class="existing-acc-detail section-wrapper">
                        <div class="card brand-gradient outlined">
                            <ul>
                                <li><span>Name</span> @Model.name</li>
                                <li><span>Email ID</span> @Model.email</li>
                                <li><span>Mobile Number</span> @Model.mobile</li>
                            </ul>
                        </div>
                    </div>
                    <div class="full-width-cta-wrp">
                        <a href="/AGELPortal/Home/change_mobile" class="waves-effect waves-light btn btn-000 outlined full">Change Mobile Number</a>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
