@model Sitecore.AGELPortal.Website.Models.PortalAddContentModel
@{
    //var data = Model.document_data;
    var doc_id = Model.Doc_id;
    var usertype = Session["AGELPortalUserType"]?.ToString();
    var Description = Model.discription;
    var Url = Model.Url + "#toolbar=0";

}
<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="breadcrumbs">
                <a href="/AGELPortal/Home" class="breadcrumb">Home</a>
                <a href="/AGELPortal/Home/Document_List" class="breadcrumb">Documents</a>
                <a href="#" class="breadcrumb">@Model.title</a>
                <input type="hidden"  id="hdnuseragent" value="@ViewBag.UserAgent"/>
            </div>
        </div>
        <div class="col s12 l12">
            <div class="section-wrapper">
                <div class="card outlined section-inner-wrapper">
                    <div class="">
                        @if (ViewBag.IsMoblieDevice)
                        {

                            <div id="adobe-dc-view" style="height: 1070px; width: 100%;"></div>
                            <script type="text/javascript">
                                document.addEventListener("adobe_dc_view_sdk.ready", function () {
                                   var adobeDCView = new AdobeDC.View({ clientId: '@Model.AdobeDCClientId', divId: "adobe-dc-view" });
                                    adobeDCView.previewFile({
                                        content: { location: { url: '@Model.Url' } },
                                        metaData: { fileName: '@Model.title' }
                                    }, { showAnnotationTools: false, showDownloadPDF: false, showPrintPDF: false });
                                });
                            </script>
                        }
                        else if (ViewBag.IsPad)
                        {

                            <div id="adobe-dc-view" style="height: 1070px; width: 100%;"></div>
                            <script type="text/javascript">
                                document.addEventListener("adobe_dc_view_sdk.ready", function () {
                                   var adobeDCView = new AdobeDC.View({ clientId: '@Model.AdobeDCClientId', divId: "adobe-dc-view" });
                                    adobeDCView.previewFile({
                                        content: { location: { url: '@Model.Url' } },
                                        metaData: { fileName: '@Model.title' }
                                    }, { showAnnotationTools: false, showDownloadPDF: false, showPrintPDF: false });
                                });
                            </script>
                        }
                        else
                        {
                            <embed src="@Model.Url#toolbar=0"
                                   type="application/pdf"
                                   frameBorder="0"
                                   scrolling="auto" 
                                   height="1070px"
                                   width="100%" />

                        }



                    </div>
                </div>
            </div>
            <div class="videos-details">
                <div class="card">
                    <div class="content-head">
                        <h4>@Model.title</h4>
                        <p></p>
                    </div>
                    <div class="content-head content-description">
                        <h4>Description</h4>
                        <p>
                            @Model.discription
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col s12 l4">
            <include component="Accordian"></include>
        </div>
    </div>
</div>


