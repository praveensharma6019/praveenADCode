@using Sitecore
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@model Sitecore.Mvc.Presentation.RenderingModel
@{



}


<section class="section bg-cream content-header">
    <div class="container">

            @using (Html.BeginForm("LucknowAirportBookAirportAssistance", "LucknowAirport", FormMethod.Post, new { name = "AirportAssistance_form", id = "AirportAssistance_form", @class = "login-form" }))
            {
                @Html.AntiForgeryToken()
                <div class="bookassistance_form">
                    <h2>To Know More Or Avail The Services, Please Fill In The Form</h2>
                    <p class="txt-small mb-4">* Fields are mandatory</p>
                    <div class="row mb-2">
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label for="Name">Name <span class="req_field">*</span></label>
                            </div>
                        </div>
                        <div class="col-lg-1">
                            <div class="form-group">
                                <select class="form-control" id="NameType">
                                    <option>Mr. </option>
                                    <option>Ms. </option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <input type="text" class="form-control" id="FirstName" aria-describedby="First Name" placeholder="First Name">
                        </div>
                        <div class="col-lg-2">
                            <input type="text" class="form-control" id="MiddleName" aria-describedby="Middle Name" placeholder="Middle Name">
                        </div>
                        <div class="col-lg-2">
                            <input type="text" class="form-control" id="LastName" aria-describedby="Last Name" placeholder="Last Name">
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label for="Preferred Contact Number">Preferred Contact Number <span class="req_field">*</span></label>
                            </div>
                        </div>
                        <div class="col-lg-1">
                            <div class="form-group">
                                <input type="text" class="form-control" id="AreaCode" aria-describedby="ISD" placeholder="Code">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" id="MobileNumber" aria-describedby="Mobile Number" placeholder="Mobile Number">
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label for="Alternate Contact Number">Alternate Contact Number </label>
                            </div>
                        </div>
                        <div class="col-lg-1">
                            <div class="form-group">
                                <input type="text" class="form-control" id="AlternateISD" aria-describedby="ISD" placeholder="Code">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" id="AlternateMobileNumber" aria-describedby="Mobile Number" placeholder="Mobile Number">
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label for="Email Address">Email Address<span class="req_field">*</span></label>
                            </div>
                        </div>
                        <div class="col-lg-5">
                            <div class="form-group">
                                <input type="text" class="form-control" id="EmailAddress" aria-describedby="Email Address" placeholder="Email Address">
                            </div>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label for="Travel Date">Travel Date<span class="req_field">*</span></label>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="form-group">
                                <select class="form-control" id="TravelYear">
                                    <option>2020</option>
                                    <option>2021</option>
                                    <option>2022</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <div class="form-group">
                                <select class="form-control" id="TravelMonth">
                                    <option value="1">January </option>
                                    <option value="2">February </option>
                                    <option value="3">March </option>
                                    <option value="4">April </option>
                                    <option value="5">May</option>
                                    <option value="6">June</option>
                                    <option value="7">July</option>
                                    <option value="8">August</option>
                                    <option value="9">September</option>
                                    <option value="10">October</option>
                                    <option value="11">November</option>
                                    <option value="12">December</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-1">
                            <div class="form-group">
                                <select class="form-control" id="TravelDay">
                                     <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                    <option>6</option>
                                    <option>7</option>
                                    <option>8</option>
                                    <option>9</option>
                                    <option>10</option>
                                    <option>11</option>
                                    <option>12</option>
                                    <option>13</option>
                                    <option>14</option>
                                    <option>15</option>
                                    <option>16</option>
                                    <option>17</option>
                                    <option>18</option>
                                    <option>19</option>
                                    <option>20</option>
                                    <option>21</option>
                                    <option>22</option>
                                    <option>23</option>
                                    <option>24</option>
                                    <option>25</option>
                                    <option>26</option>
                                    <option>27</option>
                                    <option>28</option>
                                    <option>29</option>
                                    <option>30</option>
                                    <option>31</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label for="Type of Service">Type of Service<span class="req_field">*</span></label>
                            </div>
                        </div>
                        <div class="col-lg-5">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="ServiceType" id="Departure" value="Departure">
                                <label class="form-check-label" for="Departure">Departure</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="ServiceType" id="Arrival" value="Arrival">
                                <label class="form-check-label" for="Arrival">Arrival</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="ServiceType" id="Transit" value="Transit">
                                <label class="form-check-label" for="Transit">Transit</label>
                            </div>
                        </div>
                    </div>   
                     <div class="row">
                <div class="col-lg-3">
                    <div class="form-group">
                        <label for="Travel Sector">Travel Sector <span class="req_field">*</span></label>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="TravelSector" id="International" value="International">
                        <label class="form-check-label" for="International">International</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="TravelSector" id="Domestic" value="Domestic">
                        <label class="form-check-label" for="Domestic">Domestic</label>
                    </div>
                </div>
            </div>                 
                    <div class="row mb-2">
                        <div class="col-lg-3">
                            <div class="form-group">
                               
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div id="recaptcha1"></div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 text-center">
                            <button class="btn btn-gradient" id="BtnAPASubmit">Submit</button>
                        </div>
                    </div>
                </div>
            }
            </div>
</section>
