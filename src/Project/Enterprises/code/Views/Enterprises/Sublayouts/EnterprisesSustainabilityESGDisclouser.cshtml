@using Sitecore.Data.Fields
@using Sitecore.Feature.Media
@using Sitecore.Feature.Media.Repositories
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Foundation.Theming.Extensions
@using Sitecore.Resources.Media
@model Sitecore.Mvc.Presentation.RenderingModel
@{
var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
var element = Sitecore.Context.Database.GetItem(datasource); 
 var ImageUrl="";
 var ImageAlt="";
}
	<section class="bg-white pt-5 position-relative z-index">
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-7 mb-5"> 
					<p class="heading-disclosure text-heding"> @Html.Sitecore().Field("Title", element) </p>
					<p class="heading-disclosure1"> @Html.Sitecore().Field("Summary", element)</p>
                     @Html.Sitecore().Field("Body", element)
                </div>
                <div class="col-md-5 mb-5">
                    <div id="DisclouserImgCarousel" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
						
						@foreach (var child in element.GetChildren().ToList()){
							Sitecore.Data.Fields.ImageField Image = ((Sitecore.Data.Fields.ImageField)child.Fields["Image"]);
							if (Image != null && Image.MediaItem != null)
							{
								ImageUrl = Sitecore.Resources.Media.MediaManager.GetMediaUrl(Image.MediaItem);
								ImageAlt = Image.Alt;
							}
							var classActive= @Html.Sitecore().Field("Title", child);
                            <div class="carousel-item @classActive active-border">
                                <img src="@ImageUrl" alt="@ImageAlt" class="d-block two-carousel-image">
                            </div>
							 <div class="black-style">
								<p>@Html.Sitecore().Field("Description", child) </p>
							</div>
							
						}
                        </div>
                        <ol class="carousel-indicators indicator-round-discloser">
                            <li data-target="#imageCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#imageCarousel" data-slide-to="1"></li>
                        </ol>
                        <a class="carousel-control-prev" href="#imageCarousel" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#imageCarousel" role="button" data-slide="next">
                            <span class="carousel-control-next-icon glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>


