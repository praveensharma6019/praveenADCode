
@using Sitecore.Mvc.Presentation
@using Sitecore
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Foundation.Dictionary.Repositories
@using Sitecore.Foundation.Dictionary.Extensions
@{

    var i = 1;
	var  j=1;
	var  k=1;
    var itemURLs = "#";
    var itemURL = "#";
    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var parent = Sitecore.Context.Database.GetItem(datasource);

    var filterItems = parent.Children.OrderByDescending(x => x.Fields["Date"].Value);
}







<section class="bg-gray py-5">
    <div class="container">
        <h2 class="heading pl-4 mb-4">Towards Sustainable Development</h2>
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    @foreach (var item in filterItems)
                    {
                        itemURL = Sitecore.Links.LinkManager.GetItemUrl(item);
                        if (i == 1)
                        {

                            <div class="col-lg-12 sus-main padd-box">
                                <a href="@itemURL">
                                    <div class="bg-images">
                                        @Html.Sitecore().ImageField("Image", item, 0, 0)
                                    </div>
                                    <div class="sustainability-block p-5">
                                        <h3>
                                            @Html.Sitecore().Field("Title", item)
                                        </h3>
                                        @Html.Sitecore().Field("Summary", item)
                                    </div>
                                </a>
                            </div>
                        }
                        else if(i==2 || i==3)
                        {
                            <div class="col-lg-6 sus-main padd-box">
                                <a href="@itemURL">
                                    <div class="bg-images">
                                        @Html.Sitecore().ImageField("Image", item, 0, 0)
                                    </div>
                                    <div class="sustainability-block p-5">
                                        <h3>@Html.Sitecore().Field("Title", item)</h3>
                                        @Html.Sitecore().Field("Summary", item)
                                    </div>
                                </a>
                            </div>

                        }
                        
                        i++;

                    }


                </div>
            </div>
            @foreach (var items in filterItems)
            {
                itemURLs = Sitecore.Links.LinkManager.GetItemUrl(items);
                if (k == 4)
                {
                    <div class="col-lg-4 sus-main padd-box">

                        <a href="@itemURLs">
                            <div class="bg-images">
                                @Html.Sitecore().ImageField("Image", items, 0, 0, "img-fluid")
                            </div>
                            <div class="sustainability-block p-5">
                                <h3>@Html.Sitecore().Field("Title", items)</h3>
                                @Html.Sitecore().Field("Summary", items)
                            </div>
                        </a>
                    </div>

                }
               k++;
            }
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="row">

                    @foreach (var itemss in filterItems)
                    {
                        itemURLs = Sitecore.Links.LinkManager.GetItemUrl(itemss);
                        if (j > 4)
                        {
                            <div class="col-lg-4 sus-main padd-box">
                                <a href="@itemURLs">
                                    <div class="bg-images">
                                        @Html.Sitecore().ImageField("Image", itemss, 0, 0, "img-fluid")
                                    </div>
                                    <div class="sustainability-block p-5">
                                        <h3>@Html.Sitecore().Field("Title", itemss)</h3>
                                        @Html.Sitecore().Field("Summary", itemss)
                                    </div>
                                </a>
                            </div>
                        }
                        j++;
                    }
                    
                </div>
            </div>
        </div>


    </div>
</section>