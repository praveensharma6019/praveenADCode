@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Foundation.Dictionary.Repositories
@using Sitecore.Mvc.Presentation
@using System.Text.RegularExpressions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Data
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Resources.Media;
@using Sitecore.Data.Items;
@using Sitecore
@using Sitecore.Data.Fields
@using Sitecore.mvc
@{
var download = Sitecore.Context.Database.GetItem("{0AE56EA3-5267-4945-BBAD-E2D3B0EE085B}");
}
<section class="section_padding-bottom">
<div class="container">
<div id="accordion" class="accordion investor-faq">
                <div class="card mb-0">
                    <div class="card-header" data-toggle="collapse" href="#Sustainability" aria-expanded="true">
                        <a class="card-title">
                            Transfer Certificate
                        </a>
                    </div>
					<div id="Sustainability" class="card-body collapse show" data-parent="#accordion">
<table class="table table-bordered">
<thead class="">
   <tr>
      <th scope="col">GR Number</th>
      <th scope="col">Certificates</th>
   </tr>
</thead>
@foreach (var element in download.GetChildren().ToList())
{
var theURL = Sitecore.Resources.Media.MediaManager.GetMediaUrl(element);
var url = Sitecore.Resources.Media.HashingUtils.ProtectAssetUrl(theURL);

<tbody>
<tr>
   <td>@Html.Sitecore().Field("Title", element)</td>
   <td>
      <a href="@url" target="_blank">
         <!-- <img src="/images/Ports/pdf-icon.svg" class="img-fluid"> -->
         <p>Download</p>
      </a>
   </td>
</tr>
</tbody>
}
</table>
</div>
</div>
</div>
</div>
</section>
