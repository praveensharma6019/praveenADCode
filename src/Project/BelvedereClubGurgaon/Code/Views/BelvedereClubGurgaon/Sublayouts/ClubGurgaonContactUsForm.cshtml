<form id="contact_form1" name="contact_form1" method="post">
    <input type="hidden" value="Contact-Us Form" id="cFormType" />
    <div class="form-group row">
        <div class="col-sm-12">
            <input type="text" class="form-control py-1" id="cname" placeholder="Name">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-12">
            <input type="email" class="form-control py-1" id="cmailid" placeholder="E-mail">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-12">
            <select class="custom-select mb-2 mr-sm-2 mb-sm-0" id="cinterestedIn">
                <option selected="">Interested in</option>
                <option value="Family Membership">Family Membership</option>
                <option value="Corporate Membership">Corporate Membership</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-12">
            <input type="number" class="form-control py-1" id="cmobile" placeholder="Contact">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-12">
            <input type="text" class="form-control py-1" id="ccity" placeholder="City">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-12">
            <textarea rows="4" cols="50" class="form-control" id="cmessage" placeholder="Message"></textarea>
        </div>
    </div>
    <div class="form-group row py-2 mb-5">
        <div class="col-sm-12">
            <button type="submit" id="btnContactUsSubmit" class="btn btn-primary">Send</button>
        </div>
    </div>
</form>