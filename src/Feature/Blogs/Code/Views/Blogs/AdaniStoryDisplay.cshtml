@using Sitecore.Feature.Blogs
@using Sitecore.Mvc.Presentation
@using Sitecore
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Foundation.Dictionary.Repositories
@using Sitecore.Foundation.Dictionary.Extensions
@model Sitecore.Feature.Blogs.Models.BlogItem
@{
    var ContentPath = Sitecore.Context.Item.Paths.ContentPath.Replace("/Realty/Home/", "");
    var path = ContentPath.Replace("/Realty/Home/", "");
    string[] pathArr = path.Split('/');
    var navPath = "/";
}
<!-- Go to www.addthis.com/dashboard to customize your tools -->
<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-5c109ddafa1c05a7"></script>

<div class="breadcrumb">
    <div class="container">
        <ul>
            <li>
                <h3>
                    @for (int i = 0; i < pathArr.Count() - 1; i++)
                    {
                        if (i != 0)
                        {
                            <span>&nbsp; &nbsp;</span><i class="fa fa-angle-right"></i><span>&nbsp; &nbsp;</span>
                        }
                        navPath = navPath + pathArr[i];
                        <a href="@navPath">@pathArr[i]</a>
                        navPath = navPath + "/";

                    }
                </h3>
            </li>

            <li class="d-breadcrumb-none mobile-none"><h3>@Html.Sitecore().Field(Templates.BlogsArticle.Fields.Title)</h3></li>
        </ul>
    </div>
</div>

<div class="mainBanner residential">
    <div class="bannerImg">
        <div class="large-12 columns">
            <div class="owl-carousel owl-theme owl-loaded owl-drag" id="carousel">
                <div class="item">
                    @Html.Sitecore().ImageField(Templates.BlogsArticle.Fields.Image)
                </div>

            </div>
        </div>
    </div>
</div>

<section class="section bg-white">
    <div class="container">
        <h3 class="desktop-none">@Html.Sitecore().Field(Templates.BlogsArticle.Fields.Title)</h3>
        @{

            var IDs = @Html.Sitecore().Field(Templates.BlogsArticle.Fields.Category);
            string[] IDarr = IDs.ToString().Split('|');
            var category = "";

        }
        @{

            foreach (string id in IDarr)
            {
                if (id != null && id != "")
                {
                    var items = Sitecore.Context.Database.GetItem(Sitecore.Data.ID.Parse(id));
                    if (category == "")
                    {
                        category = items.Fields["Title"].Value;
                    }
                    else
                    {
                        category = category + ", " + items.Fields["Title"].Value;
                    }
                }
            }
        }
        <h6 class="txt-blue mb-4">@category</h6>
        <h6 class="mb-3">@Html.Sitecore().Field(Templates.BlogsArticle.Fields.Date, new { format = "MMM dd, yyyy" })&nbsp;&nbsp;|&nbsp;&nbsp;By @Html.Sitecore().Field(Templates.BlogsArticle.Fields.Author)</h6>
        @Html.Sitecore().Field(Templates.BlogsArticle.Fields.Body)
    </div>
</section>
<!-- /section -->
<!-- Contact -->
<section class="section bg-innerblog-contact">
    <div class="container">
        <h3 class="text-center sectionHeading">Leave a Comment</h3>

        @Html.Sitecore().Placeholder("Blog-comments")
        <div class="row">
            <div class="col-lg-6">
                <ul>
                    <li>Share this blog on</li>
                    <li><a class="addthis_button_facebook"></a></li>
                    <li><a class="addthis_button_twitter"></a></li>
                    <li><a class="addthis_button_linkedin"></a></li>
                </ul>
            </div>
        </div>
    </div>

</section>
