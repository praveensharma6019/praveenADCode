@using Sitecore.Feature.Blogs
@using Sitecore.Mvc.Presentation
@using Sitecore
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Foundation.Dictionary.Repositories
@using Sitecore.Foundation.Dictionary.Extensions
@model Sitecore.Feature.Blogs.Models.BlogItem
@{
    var ContentPath = Sitecore.Context.Item.Paths.ContentPath.Replace("/Affordable/Home/", "");
    var path = ContentPath.Replace("/Affordable/Home/", "");
    string[] pathArr = path.Split('/');
    var navPath = "/";
}



<!-- About -->
<section class="bg-white py-5">
    <div class="container">
        <div class="row mb-3 blog-inner">
            <div class="col-lg-4">
                <div><a href=""> @Html.Sitecore().ImageField(Templates.BlogsArticle.Fields.Image, 0, 0, "img-fluid")</a></div>
            </div>
            <div class="col-lg-8 py-5">
                <div>
                    <h2>@Html.Sitecore().Field(Templates.BlogsArticle.Fields.Title)</h2>
                </div>
            </div>
        </div>
        <div class="row blog-inner">
            @Html.Sitecore().Field(Templates.BlogsArticle.Fields.Body)
        </div>
    </div>
</section>
