@using Sitecore.Feature.Blogs
@using Sitecore.Mvc.Presentation
@using Sitecore
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Foundation.Dictionary.Repositories
@using Sitecore.Foundation.Dictionary.Extensions
@model Sitecore.Feature.Blogs.Models.BlogItems
@{
    if (Model?.BlogItem == null)
    {
        return;
    }
    var i = 1;

    var itemURL = "#";
    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var parent = Sitecore.Context.Database.GetItem(datasource);

    var filterItems = parent.Children.OrderByDescending(x => x.Fields["Date"].Value);
}







<section class="bg-gray py-5">
    <div class="container">

        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    @foreach (var item in filterItems)
                    {
                        itemURL = Sitecore.Links.LinkManager.GetItemUrl(item);
                        if (i == 1)
                        {

                            <div class="col-lg-12 sus-main mb-3 padd-box">
                                <div class="bg-images">
                                    @Html.Sitecore().ImageField("Image", item, 0, 0)
                                </div>
                                <div class="sustainability-block p-5">
                                    <h3><a href="@itemURL">  @Html.Sitecore().Field("Title", item)</a></h3>
                                    @Html.Sitecore().Field("Summary", item)
                                </div>
                            </div>
                        }
                        else if (i == 2)
                        {
                            <div class="col-lg-12 sus-main padd-box">
                                <div class="bg-images">
                                    @Html.Sitecore().ImageField("Image", item, 0, 0)
                                </div>
                                <div class="sustainability-block p-5">
                                    <h3><a href="@itemURL">  @Html.Sitecore().Field("Title", item)</a></h3>
                                    @Html.Sitecore().Field("Summary", item)
                                </div>
                            </div>
                            i = 1;
                            break;
                        }
                        i++;

                    }


                </div>
            </div>
            @Html.Sitecore().Placeholder("sustainability-report")
        </div>


        <div class="row">

            @foreach (var item in filterItems)
            {
                if (i == 1 || i == 2)
                {
                    i++;
                    continue;
                }
                else
                {
                    itemURL = Sitecore.Links.LinkManager.GetItemUrl(item);
                    <div class="col-lg-4 sus-main padd-box">
                        <div class="bg-images">
                            @Html.Sitecore().ImageField("Image", item, 0, 0, "img-fluid")
                            <img src="https://via.placeholder.com/775X350" class="img-fluid">
                        </div>
                        <div class="sustainability-block p-5">
                            <h3><a href="@itemURL">  @Html.Sitecore().Field("Title", item)</a></h3>
                            @Html.Sitecore().Field("Summary", item)
                        </div>
                    </div>
                }
            }


        </div>
    </div>
</section>