@using Sitecore.Data;
@using Adani.BAU.Transmission.Feature.Navigation.Platform.Models;

@if (Model != null)
{

<header class='headerPort'>
  <div class='navPanel'>
    <div class='container'>
      <div class='rowPd'>
        <div class='logo'>
            <a href='index.html' title='Western Transmission'>@Model.LogoImageAlt</a>
        </div>
        <div class='logoText'>
            <a href='index.html' title='Western Transmission'>@Model.LogoImageAlt</a>
        </div>
        <div class='toggleNav'>
          <a id='menu-toggle' class='' href='#'>
            <span class='lines'>
            </span>
          </a>
        </div>
        <ul class='mainNav'>
            @foreach (var item in Model.MenuItem)
            {
                <li class=''>
                    <a href="@item.LinkUrl" class='wpthemeLef'>
                        <span>@Html.Sitecore().Field(item.Title)</span>
                    </a>
                    <div class='navBg' style='left: -325.828px;display: none;'>
                        @if (item.subMenuLinks.Count > 0 && item.subMenuLinks.Count == 1)
                        {

                            <div class='prodImg'>
                                <img src='@item.subMenuLinks[0].ImageSrc' alt="@item.subMenuLinks[0].ImageAlt">
                            </div>
                            <div class='navText' style='display: none;margin: 0 165px 0 0;'>@item.subMenuLinks[0].Title</div>
                            <div class='clear'>
                            </div>
                        }
                        else if (item.subMenuLinks.Count > 0)
                        {
                            <ul class='subNav'>
                                @foreach (var Subitem in item.subMenuLinks)
                                {
                                    <li class=''>
                                        <a href='@Subitem.LinkUrl' class='wpthemeLef wpthemeFirst'> <span>@Subitem.LinkText</span></a>
                                        <div class='subNav_thirdBg' style='display: none;top:-15px'>
                                            <p>@Subitem.Title</p>
                                        </div>
                                    </li>
                                }

                            </ul>
                            <div class='prodImg'> <img src="@item.subMenuLinks[0].ImageSrc" alt="@item.subMenuLinks[0].ImageAlt"> </div>
                        }
                    </div>
                </li>
            }

            
        </ul>
        <div class='clear'>
        </div>
        <div class='signToggle'>
          <a href='javascript:void(0);' class='' id='menu-sign'>
            <span class='lines'>
            </span>
          </a>
        </div>
        <div class='clear'>
        </div>
        <div class='clear'>
        </div>
        <div class='clear'>
        </div>
        <div class='headerForm'>
        </div>
      </div>
    </div>
  </div>
</header>
    
}