@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Data.Items
@using Adani.SuperApp.Airport.Foundation.SitecoreHelper.Platform.Helper
@using Adani.SuperApp.Airport.Feature.StaticPages.Platform
@model RenderingModel
@{
    Item currentItem = RenderingContext.Current.Rendering.Item;
    IHelper _helper = new Helper();
}

@if (currentItem != null)
{

    <div class="internal-service enviroment-area pt-top" id="ourphilosophy">
        <h3>@Html.Sitecore().Field("AutoId", currentItem)</h3>
        @foreach (Sitecore.Data.Items.Item environment in currentItem.Children)
        {
            Sitecore.Data.Fields.ImageField imgField = ((Sitecore.Data.Fields.ImageField)environment.Fields["environment"]);
            string imageUrl = imgField != null && imgField.MediaItem != null ? _helper.GetImageURL(environment, "Image") : "";

            <div class="card-box">
                <div class="card m-0">
                    <div class="row g-0 grid-Box align-items-center">
                        <div class="col-md-5 order1">
                            <img src="@imageUrl"
                                 class="img-fluid"
                                 alt="..."
                                 loading="lazy" />
                        </div>
                        <div class="col-md-7 order2">
                            <div class="card-body">
                                <h5 class="card-title">@Html.Sitecore().Field("Title", environment)</h5>
                                <p class="card-text">
                                    @Html.Sitecore().Field("Description", environment)
                                </p>
                                <a href="#" class="black_link"> Know More</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

}



