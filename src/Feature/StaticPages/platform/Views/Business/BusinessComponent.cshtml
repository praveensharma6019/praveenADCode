@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Data.Items
@using Adani.SuperApp.Airport.Foundation.SitecoreHelper.Platform.Helper
@model RenderingModel
@{
    Item currentItem = RenderingContext.Current.Rendering.Item;
    Helper _helper = new Helper();
}

@if (currentItem != null)
{
    <div class="business-service mainsection scrollableOffset" id="@currentItem.Fields["Id"].Value">
        <div class="service-tiles">
            <h3 class="sr-heading d-md-none">@currentItem.Fields["Title"].Value</h3>
            <div class="img-box"><img src="@_helper.GetImageURL(currentItem.Fields["Image1"])" loading="lazy"></div>
            <div class="content-box">
                <h3 class="sr-heading d-none d-md-block">@currentItem.Fields["Title"].Value</h3>
                @Html.Sitecore().Field("Description", currentItem)
                <a href="@_helper.LinkUrl(currentItem.Fields["Link1"])" class="black_link">@_helper.GetLinkText(currentItem,"Link1")</a>
            </div>
        </div>
    </div>
}
