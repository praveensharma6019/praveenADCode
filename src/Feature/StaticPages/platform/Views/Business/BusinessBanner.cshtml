@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Data.Items
@using Adani.SuperApp.Airport.Foundation.SitecoreHelper.Platform.Helper 
@model RenderingModel
@{
    Helper _helper = new Helper();
    Item currentItem = RenderingContext.Current.Rendering.Item;
    if (currentItem != null)
    {
        <div class="home-banner d-md-block d-none">
            <img class="desktop-img" src=@_helper.GetImageURL(currentItem,"Image") loading="lazy">
            <div class="content">
                <h2 class="title">@Html.Sitecore().Field("Title", currentItem)</h2>
                <p>@Html.Sitecore().Field("SubTitle", currentItem)</p>
            </div>
        </div>
        <div class="mobile-img d-md-none d-block">
            <div class="container">
                <h2 class="sr-heading">@Html.Sitecore().Field("Title", currentItem)</h2>
                <img src="@_helper.GetImageURL(currentItem,"MobileImage")" loading="lazy">
            </div>
        </div>
    }
}
