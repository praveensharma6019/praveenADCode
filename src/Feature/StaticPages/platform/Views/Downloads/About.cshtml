@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Data.Items
@model RenderingModel
@{
    Item currentItem = RenderingContext.Current.Rendering.Item;
}

@if (currentItem != null)
{
    <div class="section-wrap scrollableOffset" id="about">
    <p class="mt-4">
        @Html.Sitecore().Field("RichText", currentItem)
    </p>
    </div>
}
