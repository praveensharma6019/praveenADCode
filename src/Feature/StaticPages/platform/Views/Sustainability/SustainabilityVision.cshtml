@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Data.Items
@model RenderingModel
@{ 
    Item currentItem = RenderingContext.Current.Rendering.Item;
    Sitecore.Data.Fields.LinkField linkField = ((Sitecore.Data.Fields.LinkField)currentItem.Fields["Link"]);
    var redirectUrl = linkField.GetFriendlyUrl();
}

@if (currentItem != null)
{
    <div class="visionContant">
        <h2 class="page-tittle mb-0">@Html.Sitecore().Field("Title", currentItem)</h2>
        <div class="guidLinesPonits">           
                @Html.Sitecore().Field("Description", currentItem)
            <a href="#" class="black_link d-block mt-4"> @linkField.Anchor</a>
        </div>
    </div>
   
}
