@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Data.Items
@model RenderingModel
@{
    Item currentItem = RenderingContext.Current.Rendering.Item;
}

@if (currentItem != null)
{  
    <div class="flightstatusContent" id="@currentItem.DisplayName">
        @Html.Sitecore().Field("RichText", currentItem)        
    </div>
}
