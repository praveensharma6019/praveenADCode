@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Data.Items
@model RenderingModel
@{ Item currentItem = RenderingContext.Current.Rendering.Item; }

@if (currentItem != null)
{
    <section class="bookNoteCntr">

        <h4 class="mt-0"><p>@Html.Sitecore().Field("Title", currentItem)</p></h4>

        <div class="flex">

            <p>@Html.Sitecore().Field("Description", currentItem)</p>

            <a class="btn btn-primary btn-lg" href="#" role="button"><p>@Html.Sitecore().Field("ButtonText", currentItem)</p></a>

        </div>

    </section>
}
