@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Data.Items
@using Adani.SuperApp.Airport.Foundation.SitecoreHelper.Platform.Helper
@model RenderingModel
@{
    Item currentItem = RenderingContext.Current.Rendering.Item;
    Helper linkHelper = new Helper();
}
@if (currentItem != null)
{
    <div class="subSection cardWrapper">
        <div class="row d-flex ">
            @foreach (Item covidInfo in currentItem.Children)
            {
                Sitecore.Data.Fields.ImageField imgField = ((Sitecore.Data.Fields.ImageField)covidInfo.Fields["Image"]);
                string imageUrl = imgField != null && imgField.MediaItem != null ? linkHelper.GetImageURL(covidInfo, "Image") : "";

                Sitecore.Data.Fields.LinkField linkField = ((Sitecore.Data.Fields.LinkField)covidInfo.Fields["Link"]);
                if (linkField != null)
                {
                    var redirectUrl = linkField.GetFriendlyUrl();
                    <div class="col-lg-6 col-sm-12">
                        <a href="@redirectUrl">
                            <div class="d-flex position-relative cardBox align-items-center" loading="lazy">
                                <img src="@imageUrl" class="flex-shrink-0" alt="..." loading="lazy">
                                <div class="content">
                                    <h5 class="mt-0">@Html.Sitecore().Field("Title", covidInfo)</h5>
                                    <p>@Html.Sitecore().Field("Description", covidInfo)</p>
                                    <span class="black_link">@linkField.Text</span>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            }
        </div>
    </div>
}