@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Data.Items
@model RenderingModel
@{ Item currentItem = RenderingContext.Current.Rendering.Item; }

@if (currentItem != null)
{
<div class="subSection scrollableOffset" id="@currentItem.DisplayName" auto_id="data_medicalCentre_yellowFever">
    <h2>@Html.Sitecore().Field("Title", currentItem)</h2>
    <p class="mb-4" auto_id="data_medicalCentre_yellowFeverContent">
        @Html.Sitecore().Field("Description", currentItem)
    </p>

    <dl class="row mb-3" auto_id="data_medicalCentre_yellowFeverLocation">
        <dt class="col-sm-2">@Html.Sitecore().Field("VaccinationLocationTitle", currentItem)</dt>
        <dd class="col-sm-10">
            @Html.Sitecore().Field("VaccinationLocationDetails", currentItem)
        </dd>
    </dl>
    <dl class="row mb-3" auto_id="data_medicalCentre_yellowFeverDescList">
        <dt class="col-sm-2">@Html.Sitecore().Field("VaccinationTimingTitle", currentItem)</dt>
        <dd class="col-sm-10">
            <p><span class="textBold">@Html.Sitecore().Field("WorkingHoursTitle", currentItem)</span>: @Html.Sitecore().Field("WorkingHours", currentItem)</p>
            <p><span class="textBold">@Html.Sitecore().Field("RegistrationTimeTitle", currentItem)</span>: @Html.Sitecore().Field("RegistrationTime", currentItem)</p>
            <p><span class="textBold">@Html.Sitecore().Field("VaccinationTimeTitle", currentItem)</span>: @Html.Sitecore().Field("VaccinationTime", currentItem)</p>
        </dd>
    </dl>
    </div>
}
