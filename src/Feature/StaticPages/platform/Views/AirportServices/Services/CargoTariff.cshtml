@using Sitecore.Mvc.Presentation
@using Sitecore.Mvc
@using Sitecore.Data.Items
@using Adani.SuperApp.Airport.Foundation.SitecoreHelper.Platform.Helper
@model RenderingModel
@{
    Item currentItem = RenderingContext.Current.Rendering.Item;
    Helper _helper = new Helper();
}

@if (currentItem != null && currentItem.GetChildren() != null && currentItem.Children.Count > 0)
{
    <div class="section-wrap pt-wrap">
        @foreach (Item item in currentItem.GetChildren())
        {
            <div class="full_tiles scrollableOffset" id=@item.Fields["Id"]>
                <div class="left-img">
                    <img src="@_helper.GetImageURL(item, "Image1")" loading="lazy">
                </div>
                <div class="right-content">
                    <h3>@item.Fields["Title"]</h3>
                    @Html.Sitecore().Field("Description", item)
                </div>
            </div>
        }
    </div>
}

