@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Data.Items
@model RenderingModel
@{ 
    Item currentItem = RenderingContext.Current.Rendering.Item;
    string sectionClass = RenderingContext.Current.Rendering.Parameters["classname"];
 }

@if (currentItem != null)
{
<div class="subSection scrollableOffset" id="about" auto_id="@Html.Sitecore().Field("AutoId", currentItem)">
    <h2 class="mt-0">@Html.Sitecore().Field("AboutHeading", currentItem)</h2>
    <p>@Html.Sitecore().Field("AboutDescription", currentItem)</p>

    @Html.Sitecore().DynamicPlaceholder("niranta-about")

    <h6 class="dark" auto_id="@Html.Sitecore().Field("AutoIdQ", currentItem)">@Html.Sitecore().Field("ServiceHeading", currentItem)</h6>
    <p>@Html.Sitecore().Field("ServiceDescription", currentItem)</p>
</div>
}
