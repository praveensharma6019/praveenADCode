@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Data.Items
@model RenderingModel
@{
    Item currentItem = RenderingContext.Current.Rendering.Item;
}

@if (currentItem != null)
{
    <section class="mapAndDirection pt-wrap widthControl">
        <div class="container">
            <h3>Maps and Directions</h3>
        </div>
            <div class="imgWrap">
                @Html.Sitecore().Field("Image", currentItem, new { @alt = "map" })
                <div class="container">
                    <div class="mapContaint">
                        <h4>@Html.Sitecore().Field("Title", currentItem)</h4>
                        <p>
                            @Html.Sitecore().Field("Description", currentItem)
                        </p>
                        @if (currentItem.Fields["Link"] != null && !string.IsNullOrEmpty(currentItem.Fields["Link"].Value))
                        {
                            <button type="button" class="btn btn-dark btn-direction">@Html.Sitecore().Field("Link", currentItem) </button>
                        }
                    </div>
                </div>
            </div>
    </section>
}
