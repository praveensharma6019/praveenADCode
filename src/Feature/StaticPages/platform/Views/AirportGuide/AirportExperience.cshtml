@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Data.Items
@using Adani.SuperApp.Airport.Foundation.SitecoreHelper.Platform.Helper
@model RenderingModel
@{
    Item currentItem = RenderingContext.Current.Rendering.Item;
    Helper linkHelepr = new Helper();
}

@if (currentItem != null)
{
    <section class="airport_experience pt-wrap">
        <div class="container">
            <div class="airportGuide">
                @foreach (Item itemService in currentItem.Children)
                {
                    <div class="col ">
                        @Html.Sitecore().BeginField("Link", itemService, new { @haschildren = true })
                        <div class="zoomEffect">
                            <div class="card">
                                <figure>
                                    @Html.Sitecore().Field("Image", itemService, new { @class = "card-img-top", @alt = "Arrival" })
                                </figure>
                                <div class="card-body">
                                    <h5 class="card-title">@Html.Sitecore().Field("Title", itemService)</h5>
                                    <p class="card-text">
                                        @Html.Sitecore().Field("Description", itemService)
                                    </p>
                                    <span class="black_link">@linkHelepr.GetLinkText(itemService, "Link")</span>
                                </div>
                            </div>
                        </div>
                        @Html.Sitecore().EndField()
                    </div>
                }
            </div>
        </div>
    </section>
}
