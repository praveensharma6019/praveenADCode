@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Data.Items
@model RenderingModel
@{
    Item currentItem = RenderingContext.Current.Rendering.Item;
}

@if (currentItem != null)
{
    <section class="section-wrap">
        <h1 class="section-title">@Html.Sitecore().Field("Title", currentItem) </h1>
        <div>
            @Html.Sitecore().Field("Image", currentItem, new { @class = "rounded bannerImg desk d-md-block d-none", @width = "100 %" })
            @Html.Sitecore().Field("MobileImage", currentItem, new { @class = "rounded bannerImg mobile d-md-none d-block", @width = "100 %" })
        </div>
    </section>
}