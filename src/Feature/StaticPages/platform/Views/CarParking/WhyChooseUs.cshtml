@using Sitecore.Mvc.Presentation
@using Sitecore.Mvc
@using Sitecore.Data.Items
@using Adani.SuperApp.Airport.Foundation.SitecoreHelper.Platform.Helper
@model RenderingModel
@{
    Item currentItem = RenderingContext.Current.Rendering.Item;
    Helper _helper = new Helper();
}

@if (currentItem != null)
{
    <div class="subSection section-works">
        <h2>@currentItem.Name</h2>
        <div class="row">
            @if (currentItem.GetChildren() != null && currentItem.Children.Count > 0)
            {
                foreach (Item item in currentItem.GetChildren())
                {
                    <div class="col-md-4">
                        <div class="wrapper">
                            <div class="sec-icon">
                                <i class=@item.Fields["cssclass"].Value></i>
                            </div>
                            <div class="content">
                                <h4>@item.Fields["Title"].Value</h4>
                                <p>@item.Fields["Description"].Value</p>
                            </div>
                        </div>
                    </div>
                }
            }

                </div>
    </div>
}