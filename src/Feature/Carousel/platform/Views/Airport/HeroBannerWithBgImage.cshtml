@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Data.Items
@model RenderingModel
@{
    Item banner = RenderingContext.Current.Rendering.Item;
}

@if (banner != null)
{
    <section class="bannerWrapper">
        @Html.Sitecore().Field("Image", banner, new { @alt = "Airport-banner", @width = "100%" })
        <div class="container">
            <div class="contentBox">
                <h3>@Html.Sitecore().Field("Title", banner)</h3>
                <p>@Html.Sitecore().Field("Description", banner)</p>
                @Html.Sitecore().Field("Link", banner)
            </div>
        </div>
    </section>
}
