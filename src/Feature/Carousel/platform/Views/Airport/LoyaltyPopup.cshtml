@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Data.Items
@using Adani.SuperApp.Airport.Foundation.SitecoreHelper.Platform.Helper
@model RenderingModel
@{
    Item currentItem = RenderingContext.Current.Rendering.Item;
    var mediatext = "@media";
    Helper linkHelepr = new Helper();
}
<!-- rewards-popup -->
@if (currentItem != null)
{
    var DesktopBGImageurl = linkHelepr.GetImageURL(currentItem.Fields["DesktopBGImage"]);
    var WebBGImageurl = linkHelepr.GetImageURL(currentItem.Fields["WebBGImage"]);
    <style type="text/css">
    .rewards-modal .modal-content {
      background-image: url('@DesktopBGImageurl');
    }
    @mediatext (min-width: 991px) {
      .rewards-modal .modal-content { background-image: url("@WebBGImageurl"); }
    }
    </style>

    <div id="rewardsPopup" class="rewards-modal modal fade" tabindex="-1" aria-labelledby="modal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="showLoyaltyPopup_Close();"></button>
                </div>
                <div class="modal-body">
                    <div class="welcomeAdani d-md-none">@Html.Sitecore().Field("WelcomeLogo", currentItem)</div>
                    <div class="points blank-holder">
                        <span class="loader">
                            <span class="loaderDot" style="background: rgb(0, 0, 0);"></span>
                            <span class="loaderDot" style="background: rgb(0, 0, 0);"></span>
                            <span class="loaderDot" style="background: rgb(0, 0, 0);"></span>
                        </span>
                        <span class="amount d-none">
                            0
                        </span>
                    </div>

                    <div class="animationDiv">@Html.Sitecore().Field("animationImage", currentItem)</div>
                    <h5 class="d-md-none">@Html.Sitecore().Field("Title", currentItem)</h5>
                    <div class="point-container">
                        <div class="d-flex justify-content-center"><button type="button" class="know-more btn btn-light btn-md">@Html.Sitecore().Field("ButtonText", currentItem)</button></div>
                    </div>
                    @Html.Sitecore().Field("parasuteImage", currentItem, new { @alt = "parasute", @class = "parasute" })@Html.Sitecore().Field("smallCloudImage", currentItem, new { @alt = "smallCloud", @class = "smallCloud" })
                </div>
            </div>
        </div>
    </div>
}
<!-- rewardsPopup -->
