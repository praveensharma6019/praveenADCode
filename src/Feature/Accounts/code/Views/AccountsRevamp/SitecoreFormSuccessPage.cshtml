@{
    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    Sitecore.Data.Items.Item datasourceItem = Sitecore.Context.Database.GetItem(datasource);

    string callbackPageUrl = datasourceItem != null ? Sitecore.Links.LinkManager.GetItemUrl(datasourceItem) : "/";
}

<input type="hidden" value="@callbackPageUrl" id="callbackPageUrl" />
<script type="text/javascript">
    $(document).ready(function () {
        var callbackPageUrl = $('#callbackPageUrl').val();
        location.href = callbackPageUrl + '?IsSuccess=1';
    })
</script>