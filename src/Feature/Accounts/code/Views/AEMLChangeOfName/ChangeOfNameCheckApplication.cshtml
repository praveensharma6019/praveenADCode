@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Mvc.Configuration
@using CaptchaMvc;
@using CaptchaMvc.HtmlHelpers;
@model Sitecore.Feature.Accounts.Models.CheckApplicationModel

@using (Html.BeginRouteForm(MvcSettings.SitecoreRouteName, FormMethod.Post, new { @class = "form-signin", id = "frmregistrationValidate" }))
{
    @Html.AddUniqueFormId()
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="form_namechange-login h-100">
        <h3><em class="fas fa-file-signature mr-3"></em>Check status of Application / Access Draft Application</h3>
        <div class="px-4">
            <div class="input-group mb-3">
                <label for="" class="w-100">CA Number</label>
                @Html.TextBoxFor(x => x.AccountNo, new
           {
               @class = "form-control"})
               
            </div>
            <p class="my-3 text-center"><b>OR</b></p>
            <div class="input-group mb-3">
                <label for="" class="w-100">Temp registration number</label>
                @Html.TextBoxFor(x => x.RegistrationNumber, new
           {
               @class = "form-control"})

            </div>
            <div>
                @Html.ValidationMessageFor(x => x.AccountNo, "", new { @class = "help-block txt-orange mb-2 txt-sm" }, "p")
            </div>
            <div class="form-group text-right mb-0">
                <input type="submit" name="Register" value="Check Application" id="" class="btn btn-primary">
            </div>
        </div>
    </div>
}
