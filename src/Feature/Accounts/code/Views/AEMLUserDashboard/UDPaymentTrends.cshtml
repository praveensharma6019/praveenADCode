                        </div>
                        <div class="pay-trend-body">
                            <div class="pay-trend-value-box" id="percentagePaymentsTrend">

                            </div>
                            <div class="pay-trend-graph-box">
                                <canvas id="2-Months" style="height: 21px; width: 24px;"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="3Months" class="tab-content">
                    <canvas id="3-Months" style="height: 21px; width: 24px;"></canvas>
                </div>
                <div id="4Months" class="tab-content">
                    <canvas id="4-Months" style="height: 21px; width: 24px;"></canvas>
                </div>
            </div>
            <div class="electricity-charges">

                <div class="footer">
                    <ul>
                        <li>
                            <a onclick="dataLayer.push({
                                'event': 'user_dashbaord_view_details',
                                'eventCategory': 'AEML User Dashboard',
                                'eventAction': 'user_dashbaord_view_details',
                                'eventLabel': 'Payment Trend',
                                'business_user_id': $('#BusinessUserId').val(),
                                'ca_number': $('#GACANumber').val(),
                                'login_status': $('#login_status').val()
