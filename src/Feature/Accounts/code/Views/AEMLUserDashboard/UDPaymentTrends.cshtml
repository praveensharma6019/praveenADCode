        <div class="card section-loader-wrapper" id="paymentTrendLoaderDiv">
            <div class="discover" id="PaymentTrendsCharts">
                <ul class="tabs">
                    <li class="tab">
                        <a onclick="CreatedBarChart(2);" href="#2Months" class="active">
                            <h4>@Html.Sitecore().Dictionary("/UserDashboard/UDPaymentTrends/2 Months", "2 Months")</h4>
                        </a>
                    </li>
                    <li class="tab">
                        <a onclick="CreatedBarChart(3);" href="#3Months">
                            <h4>@Html.Sitecore().Dictionary("/UserDashboard/UDPaymentTrends/3 Months", "3 Months")</h4>
                        </a>
                    </li>
                    <li class="tab">
                        <a onclick="CreatedBarChart(4);" href="#4Months">
