@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Mvc.Configuration
@model Sitecore.Feature.Accounts.Models.MeterReadingAdaniGas


@using (Html.BeginRouteForm(MvcSettings.SitecoreRouteName, FormMethod.Post, new { @class = "form-signin" }))
{
    @Html.AddUniqueFormId()
    @Html.ValidationSummary(true)
    <!-- Toggle button to show/hide side nav -->
    <div class="d-block d-md-none sideNavBtn">
        <button type="button" id="sidebarCollapse" class="btn btn-secondary">
            <i class="fas fa-align-left"></i>
            <span>&nbsp;Menu</span>
        </button>
    </div>
    <!-- /Toggle button to show/hide side nav -->
    <div class="clearfix"></div>
    <!-- Update Profile Page Content-->

    <div class="panel">
        <h3 class="mb-3">Submit Meter Reading</h3>
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <div class="form-group">
                    <label>@Html.Sitecore().Dictionary("/Accounts/Edit Profile/CustomerID", "Customer ID")<span class="txt-red">*</span></label>
                    @Html.TextBoxFor(x => x.CustomerID, new { @class = "form-control", @readonly = "readonly" })

                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="form-group">
                    <label>@Html.Sitecore().Dictionary("/Accounts/Edit Profile/Meter Number", "Meter Number")<span class="txt-red">*</span></label>
                    @Html.TextBoxFor(x => x.MeterNumber, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="form-group">
                    <label>@Html.Sitecore().Dictionary("/Accounts/Edit Profile/Previous Meter Reading", "Previous Meter Reading")<span class="txt-red">*</span></label>
                    @Html.TextBoxFor(x => x.PreviousMeterReading, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="form-group">
                    <label>@Html.Sitecore().Dictionary("/Accounts/Edit Profile/Previous Meter Reading Date and Time", "Previous Meter Reading Date and Time")<span class="txt-red">*</span></label>
                    @Html.TextBoxFor(x => x.PreviousMeterReadingDateandTime, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="form-group">
                    <label>@Html.Sitecore().Dictionary("/Accounts/Edit Profile/Meter Reading", "Meter Reading")<span class="txt-red">*</span></label>
                    @Html.TextBoxFor(x => x.MeterReading, new { @class = "form-control" ,required = "required" })
                    @Html.ValidationMessageFor(x => x.MeterReading, "", new { @class = "help-block" }, "p")
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="form-group">
                    <label>@Html.Sitecore().Dictionary("/Accounts/Edit Profile/Reading Date and Time", "Reading Date and Time")<span class="txt-red">*</span></label>
                    @Html.TextBoxFor(x => x.ReadingDateandTime, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(x => x.ReadingDateandTime, "", new { @class = "help-block" }, "p")
                </div>
            </div>
            <div class="col-lg-12">
                <div class="btn-group" role="group">
                    <input type="submit" id="save" value="@Html.Sitecore().Dictionary("/Accounts/Edit Profile/Button Submit", "Submit")" class="btn btn-primary mr-2" />
                    <input type="button" id="cancel" value="@Html.Sitecore().Dictionary("/Accounts/Edit Profile/Button Cancel", "Cancel")" class="btn btn-secondary" />
                </div>
            </div>
        </div>
    </div>
    @Html.Sitecore().Placeholder("page-subcontent")

}