@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Mvc.Configuration
@using CaptchaMvc;
@using CaptchaMvc.HtmlHelpers;
@model Sitecore.Feature.Accounts.Models.BillAmendmentDetailsModel

@using (Html.BeginRouteForm(MvcSettings.SitecoreRouteName, FormMethod.Post, new { @class = "form-signin", id = "frmeBillAmendmentDetails" }))
{
    @Html.AddUniqueFormId()
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="pageContent">
        <div class="container">
            <div class="">
                <div class="row">
                    <div class="col-lg-8 ml-auto order-2 order-lg-1">
                        <div class="">
                            <p class="mb-3"><b>Important Information with respect to your billing:</b></p>
                            <ul class="ul-bullets mb-4">
                                <li style="list-style-type: decimal;">Due to Covid-19 lockdown, <b>Meter Reading activities were temporarily suspended for safety reasons</b> basis directives from MERC</li>
								<li style="list-style-type: decimal;">The bills for <b>March 20 and April 20 were generated based on average consumption</b> Dec 19, Jan 20 and Feb 20 (low demand period being winter season)</li>
								<li style="list-style-type: decimal;">Post Unlock 1.0, we have commenced the <b>meter reading activity</b>.</li>
								<li style="list-style-type: decimal;"><b>As for March20 and April 20, consumers were under billed, while actual consumption was high due to summers and additional usage because of lockdown</b>.</li>
								<li style="list-style-type: decimal;">Upon getting actual meter reading, to pass on the slab benefit to our consumers, <b>the total consumption for the period March 20 to May 20 have been uniformly allocated for the entire three-month period</b> – computations are provided on the backside of your bill (refer the table). </li>
								<li style="list-style-type: decimal;">Your May-2020 bill includes the <b>consumption of May-20</b> as well as <b>differential consumption</b> owing to estimation of consumption in March-20 and April-20.</li>
								<li style="list-style-type: decimal;"><b>Differential amount</b> is mentioned in your latest bill under the head – “<b>Net Previous Balance</b>”. Any payment made by you during the period is also adjusted in the latest bill.</li>

                            </ul>
                            <p class="txt-sm">For more details, please read the Billing FAQs:  <a class="txt-orange" href="https://www.adanielectricity.com/Billing-Faqs" target="_blank">https://www.adanielectricity.com/Billing-Faqs</a></p>
							<p>&nbsp;</p>
							
							 <p class="txt-sm">For <strong>Digital services </strong> offered by AEML & <strong>Practice Directions issued by MERC</strong>, click here: <a class="txt-orange" href="https://www.adanielectricity.com/Important-Covid-19-Update" target="_blank">https://www.adanielectricity.com/Important-Covid-19-Update</a></p>
                        </div>
                    </div>
                    <div class="col-lg-4 ml-auto order-1 order-lg-2 mb-3">
                        <div class="form_namechange mb-0" style="background: #f5f5f5;border: 1px solid #eaeaea;">
                            <div class="px-4">
                                <h3 class="pl-0 pt-0 mb-3" style="min-height: auto;">@Html.Sitecore().Dictionary("/BillAmendmentDetails/Heading", "Bill Amendment Details")</h3>
                                <p class="txt-sm mb-3">@Html.Sitecore().Dictionary("/BillAmendmentDetails/SubHeading", "To understand your billing details based on actual readings post the COVID-19 lockdown, please download this document:")</p>
                                <div class="input-group mb-3">
                                    <label for="" class="w-100"><b>@Html.Sitecore().Dictionary("/BillAmendmentDetails/AccountNo", "Enter your Account Number") </b><span class="required">*</span></label>
                                    @Html.TextBoxFor(x => x.AccountNo, new { @class = "form-control reset-control", id = "AccountNo", required = "required" })
                                    @Html.ValidationMessageFor(x => x.AccountNo, "", new { @class = "help-block validationmessage" }, "p")
                                </div>
                                <div class="mb-3 d-none">
                                    <label for="" class="mb-2 w-100"><b>@Html.Sitecore().Dictionary("/BillAmendmentDetails/SelectLanguage", "Select Preferred Language:") </b><span class="required">*</span></label><div class="form-check form-check-inline txt-sm">
                                        @Html.RadioButtonFor(model => model.Language, "E", new { id = "LanguageOptionEn", @class = "form-check-input", @checked = "checked" })
                                        <label class="form-check-label mt-2" for="LanguageOptionEn">English</label>
                                    </div>
                                    <div class="form-check form-check-inline txt-sm">
                                        @Html.RadioButtonFor(model => model.Language, "H", new { id = "LanguageOptionHn", @class = "form-check-input" })
                                        <label class="form-check-label mt-2" for="LanguageOptionHn">Hindi</label>
                                    </div>
                                    <div class="form-check form-check-inline txt-sm">
                                        @Html.RadioButtonFor(model => model.Language, "M", new { id = "LanguageOptionMr", @class = "form-check-input" })
                                        <label class="form-check-label mt-2" for="LanguageOptionMr">Marathi</label>
                                    </div>
                                </div>
                                <div class="form-group @Html.ValidationErrorFor(x => x.Captcha, "has-error")">
                                    <label style="font-weight: 600;" for="" class="">@Html.Sitecore().Dictionary("/BillAmendmentDetails/Captcha", "Captcha") <span class="required">*</span></label>
                                    <div class="" style="margin-top: -15px;">
                                        @Html.Captcha("Try another", "Enter the text you see above:", 4, "Is required field", true)
                                        @Html.ValidationMessageFor(x => x.Captcha, "", new { @class = "help-block validationmessage" }, "p")
                                    </div>
                                </div>
                                <div class="text-right">
                                    <button type="submit" class="btn btn-primary btn-sm w-100" style="font-size: 15px;">@Html.Sitecore().Dictionary("/BillAmendmentDetails/Button Text", "Download")</button>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}


