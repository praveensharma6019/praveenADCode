@using Sitecore.Feature.Accounts
@using Sitecore.Feature.Accounts.Services
@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Mvc.Configuration
@model Sitecore.Feature.Accounts.Models.LoginInfo


<div class="manageAcBoxOuter">
    <div class="manageAcBox">
        <div class="manageAcBoxPd">
            <h4 class="txt-orange mb-3">@Html.Sitecore().Dictionary("/Accounts/Login/Existing User", "Existing User")</h4>
            @using (Html.BeginRouteForm(MvcSettings.SitecoreRouteName, FormMethod.Post, new { @class = "form-signin" }))
            {
                @Html.AddUniqueFormId()
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="form-group row no-gutters @Html.ValidationErrorFor(x => x.LoginName, "has-error")">
                    <label for="LoginName" class="col-sm-5 col-form-label">
                        @Html.Sitecore().Dictionary("/Accounts/Login/Customer ID", "Customer ID")
                    </label>
                    <div class="col-sm-7">
                        @Html.TextBoxFor(x => x.LoginName, new { @class = "form-control", @autocomplete = "off", id = "LoginName", required = "required", title = "LoginName" })
                        @Html.ValidationMessageFor(x => x.LoginName, "", new { @class = "help-block" }, "p")
                    </div>
                </div>
                <div class="form-group row no-gutters">
                    <label for="registerPassword" class="col-sm-5 col-form-label">
                        @Html.Sitecore().Dictionary("/Common/Password", "Password")
                    </label>
                    <div class="col-sm-7">
                        @Html.PasswordFor(x => x.Password, new
                   {
                       @class = "form-control",
                       id = "registerPassword",
                       @autocomplete = "off",
                       required = "required",
                       title="Passwords"
                   })
                        @Html.ValidationMessageFor(x => x.Password, "", new { @class = "help-block" }, "p")
                    </div>
                </div>
                <div class="captcha_box">
                    <div class="form-group pt-md-2 @Html.ValidationErrorFor(x => x.Captcha, "has-error")">
                        <label for="" class="">@Html.Sitecore().Dictionary("/Common/Captcha", "Captcha") <span class="required">*</span></label>
                        <div class="row captcha_box">
                            <div class="col-lg-12">
                                <div class="g-recaptcha" data-sitekey="6LdYFWgUAAAAALdZf_sC8BRN2uLPzcsxb2p192rf"></div>
                                @Html.ValidationMessageFor(x => x.Captcha, "", new { @class = "help-block" }, "p")
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    @*<div class="col-sm-12">
                        <div class="form-check">
                            <input class="form-check-input" id="gridCheck1" type="checkbox" name="RememberMe">
                            <label class="form-check-label" for="gridCheck1">
                                @Html.Sitecore().Dictionary("/Accounts/Login/Remember me", "Remember me")
                            </label>
                        </div>
                    </div>*@
                    <div class="col-sm-12">
                        <a href="@Html.Sitecore().Dictionary("/sitecore/content/Electricity/Global/Dictionary/Other Redirect URL/Login/Forgot Password URL", "/Forgot Password")" title="Forgot Password" class="forgotPassLink">
                            @Html.Sitecore().Dictionary("/Accounts/Login/Forgot Password", "Forgot Username / Password?")
                        </a>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-5 pr-0 col-6 mb-2">
                        <button type="submit" class="btn btn-primary w-100">@Html.Sitecore().Dictionary("/Accounts/Login/Button/Sign in", "Sign in")</button>
                    </div>
                    <div class="col-sm-7 col-8">
                        <a href="/Payment/Online-Payments">
                            <button type="button" class="btn btn-secondary w-100">@Html.Sitecore().Dictionary("/Accounts/Login/Button/Quick Bill Pay", "Quick Bill Pay")</button>
                        </a>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label class="col-form-label">
                            @Html.Sitecore().Dictionary("/Accounts/Login/Not Yet Signed Up", "Not Yet Signed Up?")&nbsp;&nbsp;
                        </label>
                        <a href="@Html.Sitecore().Dictionary("/sitecore/content/Electricity/Global/Dictionary/Other Redirect URL/Login/Registration URL", "/registration-validateotp")" class="registerLink">
                            @Html.Sitecore().Dictionary("/Accounts/Login/Button/Register Now", "Register Now")
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


<script src="@Html.Sitecore().Dictionary("/Common/CaptchaURL", "https://www.google.com/recaptcha/api.js")"></script>




