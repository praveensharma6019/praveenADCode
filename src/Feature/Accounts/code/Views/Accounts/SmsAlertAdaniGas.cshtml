@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Mvc.Configuration
@model Sitecore.Feature.Accounts.Models.ManageMobileAdaniGas

<div class="col-md-8 col-lg-9">
    <div class="d-block d-md-none sideNavBtn">
        <button type="button" id="sidebarCollapse" class="btn btn-secondary">
            <i class="fas fa-align-left"></i>
            <span>&nbsp;Menu</span>
        </button>
    </div>
    <div class="clearfix"></div>
    @using (Html.BeginRouteForm(MvcSettings.SitecoreRouteName, FormMethod.Post, new { }))
    {
        <div class="panel">
            <div class="row">
                <div class="col-lg-4 col-md-6">
                    <div class="form-group">
                        <label>Customer ID<span class="txt-red">*</span></label>
                        <input type="text" class="form-control" aria-describedby="" disabled value="@ViewBag.CustID">
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="form-group">
                        <label>Customer Name<span class="txt-red">*</span></label>
                        <input type="text" class="form-control" aria-describedby="" value="@ViewBag.CustName" disabled>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-bordered bg-white">
                        <thead>
                            <tr>
                                <th>Registered Mobile Number</th>
                                <th>SMS Enabled</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int idx = 0; idx < Model.MobileNumbersList.Count; idx++)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(x => Model.MobileNumbersList[idx].MobileNo)
                                        @Html.HiddenFor(x => Model.MobileNumbersList[idx].MobileNo)
                                    </td>
                                    <td><p>@Html.CheckBoxFor(m => Model.MobileNumbersList[idx].Ischecked, new { Class = "form-SMS-enable", Style = "vertical-align:3px}" }) </p></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="col-lg-12">
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    </div>
                </div>
            </div>

        </div>
    }
</div>