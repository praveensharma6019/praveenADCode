@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Mvc.Configuration
@model Sitecore.Feature.Accounts.Models.ChangePassword



@using (Html.BeginRouteForm(MvcSettings.SitecoreRouteName, FormMethod.Post, new { id = "frmChnagePassword" }))
{
    @Html.AddUniqueFormId()
    @Html.AntiForgeryToken()
    <!-- Toggle button to show/hide side nav -->
    <div class="d-block d-md-none sideNavBtn">
        <button type="button" id="sidebarCollapse" class="btn btn-secondary">
            <i class="fas fa-align-left"></i>
            <span>&nbsp;Menu</span>
        </button>
    </div>
    <!-- /Toggle button to show/hide side nav -->
    <div class="clearfix"></div>
    <!-- Update Profile Page Content-->
    <div class="panel">
        <p>@Html.Sitecore().Dictionary("/Accounts/My Account/Profile/Change Password/P_Desc", "Find below the information we have about you. Incase there is change in any of your profile details, just retype and click on save.")</p>
        <form class="pt-3" autocomplete="off">
            <div class="form-group row">
                <label for="" class="col-sm-4 col-md-3 col-form-label">
                    @Html.Sitecore().Dictionary("/Accounts/My Account/Profile/Change Password/Account Number", "Account Number")
                </label>
                <div class="col-sm-8 col-lg-6">
                    <strong>@Html.DisplayTextFor(x => x.AccountNumber)</strong>
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-sm-4 col-md-3 col-form-label">
                    @Html.Sitecore().Dictionary("/Accounts/My Account/Profile/Change Password/Login Name", "Login Name")
                </label>
                <div class="col-sm-8 col-lg-6">
                    @Html.HiddenFor(x => x.LoginName)
                    @Html.DisplayTextFor(x => x.LoginName)
                </div>
            </div>
            <div class="form-group row @Html.ValidationErrorFor(x => x.OldPassword, "has-error")">
                <label for="" class="col-sm-4 col-md-3 col-form-label">
                    @Html.Sitecore().Dictionary("/Accounts/My Account/Profile/Change Password/OldPassword", "Old Password")
                    <span class="required">*</span>
                </label>
                <div class="col-sm-8 col-lg-6">
                    @Html.PasswordFor(x => x.OldPassword, new
               {
                   @class = "form-control reset-control",
                   id = "OldPassword",
                   @autocomplete = "off",
                   required = "required"
               })
                    @Html.ValidationMessageFor(x => x.OldPassword, "", new { @class = "help-block" }, "p")
                </div>
            </div>
            <div class="form-group row @Html.ValidationErrorFor(x => x.Password, "has-error")">
                <label for="" class="col-sm-4 col-md-3 col-form-label">
                    @Html.Sitecore().Dictionary("/Accounts/My Account/Profile/Change Password/NewPassword", "New Password")
                    <span class="required">*</span>
                </label>
                <div class="col-sm-8 col-lg-6">
                    @Html.PasswordFor(x => x.Password, new
               {
                   @class = "form-control reset-control",
                   id = "NewPassword",
                   @autocomplete = "off",
                   required = "required"
               })
                    @Html.ValidationMessageFor(x => x.Password, "", new { @class = "help-block" }, "p")
                </div>
            </div>
            <div class="form-group row">
                <label for="" class="col-sm-4 col-md-3 col-form-label">
                    @Html.Sitecore().Dictionary("/Accounts/My Account/Profile/Change Password/Confirm Password", "Re-type Password")
                    <span class="required">*</span>
                </label>
                <div class="col-sm-8 col-lg-6">
                    @Html.PasswordFor(x => x.ConfirmPassword, new
               {
                   @class = "form-control reset-control",
                   id = "ConfirmPassword",
                   @autocomplete = "off",
                   required = "required"
               })
                    @Html.ValidationMessageFor(x => x.ConfirmPassword, "", new { @class = "help-block" }, "p")
                </div>
            </div>

            <div class="form-group row py-2">
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-primary">@Html.Sitecore().Dictionary("/Accounts/My Account/Profile/Change Password/Button/Submit", "Submit")</button>
                    <button type="button" class="btn btn-secondary" id="btnReset" onclick="ResetElement('frmChnagePassword')">@Html.Sitecore().Dictionary("/Accounts/My Account/Profile/Change Password/Button/Reset", "Reset")</button>
                </div>
            </div>
        </form>
    </div>

}

