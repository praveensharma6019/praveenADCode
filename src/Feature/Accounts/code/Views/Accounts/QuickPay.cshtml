@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Mvc.Configuration
@using CaptchaMvc;
@using CaptchaMvc.HtmlHelpers;
@model Sitecore.Feature.Accounts.Models.ViewPayBill

<div class="col-md-5 col-lg-4 order-2 order-md-1">
    <div class="payBillBox float-right">
        <h5 class="txt-orange mb-3">@Html.Sitecore().Dictionary("/Accounts/Quick Pay/Pay your bill now", "Pay your bill now")</h5>
        @using (Html.BeginRouteForm(MvcSettings.SitecoreRouteName, FormMethod.Post, new { }))
        {
            @Html.AddUniqueFormId()
            @Html.AntiForgeryToken()
            <form>
                <div class="form-group">
                    <label for="" class="col-form-label ">@Html.Sitecore().Dictionary("/Accounts/Quick Pay/Account Number", "Enter account number")</label>
                    <div class="">
                        @Html.TextBoxFor(x => x.AccountNumber, new { @class = "form-control", id = "AccountNumber", required = "required", maxlength = "9" })
                    </div>
                </div>
                <div class="form-group @Html.ValidationErrorFor(x => x.Captcha, "has-error")">
                    @*@Html.Captcha(4)*@
                    <label for="" class="">@Html.Sitecore().Dictionary("/Accounts/Register/Captcha", "Captcha") <span class="required">*</span></label>
                    <div class="">
                        <div class="g-recaptcha" data-sitekey="6LdYFWgUAAAAALdZf_sC8BRN2uLPzcsxb2p192rf"></div>
                        @Html.ValidationMessageFor(x => x.Captcha, "", new { @class = "help-block" }, "p")
                    </div>
                </div>
                <div class="">
                    <button type="submit" class="w-100 btn btn-primary btn-sm">@Html.Sitecore().Dictionary("/Accounts/Quick Pay/Pay", "Quick Pay")</button>
                    <div class="clearfix"></div>
                </div>
            </form>
        }
    </div>
</div>
<script src="@Html.Sitecore().Dictionary("/Common/CaptchaURL", "https://www.google.com/recaptcha/api.js")"></script>
