@{

    if (Session["customerApplicationCurrentStatus"] != null)
    {
        string currentStatus = Session["customerApplicationCurrentStatus"].ToString();
    }

    var ApplicationRegisterBG = "";
    var PaymentCompletedBG = "";
    var PaymentNotRequiredBG = "";
    var UnderReviewBG = "";
    var AdditionalDetailsandDocumentsRequiredBG = "";
    var AdditionalDetailsandDocumentsPaymentRequiredBG = "";
    var AdditionalDetailsandDocumentsSubmittedBG = "";
    var AdditionalSubmitedButPaymentRequiredBG = "";
    var AdditionalPaymentDoneBG = "";
    var AdditionalDetailsandDocumentsUnderReviewBG = "";
    var TransferRejectedorCompletedBG = "";
    var RejectionReasonBG = "";

    var ApplicationRegisterColor = "";
    var PaymentCompletedColor = "";
    var PaymentNotRequiredColor = "";
    var UnderReviewColor = "";
    var AdditionalDetailsandDocumentsRequiredColor = "";
    var AdditionalDetailsandDocumentsPaymentRequiredColor = "";
    var AdditionalDetailsandDocumentsSubmittedColor = "";
    var AdditionalSubmitedButPaymentRequiredColor = "";
    var AdditionalPaymentDoneColor = "";
    var AdditionalDetailsandDocumentsUnderReviewColor = "";
    var TransferRejectedorCompletedColor = "";
    var RejectionReasonColor = "";
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Adani Gas</title>
</head>

<style>
    /*!
        // 3. Loader
        // --------------------------------------------------*/
    .loader {
        top: 0;
        left: 0;
        position: fixed;
        opacity: 0.8;
        z-index: 10000000;
        background: Black;
        height: 100%;
        width: 100%;
        margin: auto;
    }

    .strip-holder {
        top: 50%;
        -webkit-transform: translateY(-50%);
        -ms-transform: translateY(-50%);
        transform: translateY(-50%);
        left: 50%;
        margin-left: -50px;
        position: relative;
    }

    .strip-1,
    .strip-2,
    .strip-3 {
        width: 20px;
        height: 20px;
        background: #0072bc;
        position: relative;
        -webkit-animation: stripMove 2s ease infinite alternate;
        animation: stripMove 2s ease infinite alternate;
        -moz-animation: stripMove 2s ease infinite alternate;
    }

    .strip-2 {
        -webkit-animation-duration: 2.1s;
        animation-duration: 2.1s;
        background-color: #23a8ff;
    }

    .strip-3 {
        -webkit-animation-duration: 2.2s;
        animation-duration: 2.2s;
        background-color: #89d1ff;
    }

    @@-webkit-keyframes stripMove {
        0% {
            transform: translate3d(0px, 0px, 0px);
            -webkit-transform: translate3d(0px, 0px, 0px);
            -moz-transform: translate3d(0px, 0px, 0px);
        }

        50% {
            transform: translate3d(0px, 0px, 0px);
            -webkit-transform: translate3d(0px, 0px, 0px);
            -moz-transform: translate3d(0px, 0px, 0px);
            transform: scale(4, 1);
            -webkit-transform: scale(4, 1);
            -moz-transform: scale(4, 1);
        }

        100% {
            transform: translate3d(-50px, 0px, 0px);
            -webkit-transform: translate3d(-50px, 0px, 0px);
            -moz-transform: translate3d(-50px, 0px, 0px);
        }
    }

    @@-moz-keyframes stripMove {
        0% {
            transform: translate3d(-50px, 0px, 0px);
            -webkit-transform: translate3d(-50px, 0px, 0px);
            -moz-transform: translate3d(-50px, 0px, 0px);
        }

        50% {
            transform: translate3d(0px, 0px, 0px);
            -webkit-transform: translate3d(0px, 0px, 0px);
            -moz-transform: translate3d(0px, 0px, 0px);
            transform: scale(4, 1);
            -webkit-transform: scale(4, 1);
            -moz-transform: scale(4, 1);
        }

        100% {
            transform: translate3d(50px, 0px, 0px);
            -webkit-transform: translate3d(50px, 0px, 0px);
            -moz-transform: translate3d(50px, 0px, 0px);
        }
    }

    @@keyframes stripMove {
        0% {
            transform: translate3d(-50px, 0px, 0px);
            -webkit-transform: translate3d(-50px, 0px, 0px);
            -moz-transform: translate3d(-50px, 0px, 0px);
        }

        50% {
            transform: translate3d(0px, 0px, 0px);
            -webkit-transform: translate3d(0px, 0px, 0px);
            -moz-transform: translate3d(0px, 0px, 0px);
            transform: scale(4, 1);
            -webkit-transform: scale(4, 1);
            -moz-transform: scale(4, 1);
        }

        100% {
            transform: translate3d(50px, 0px, 0px);
            -webkit-transform: translate3d(50px, 0px, 0px);
            -moz-transform: translate3d(50px, 0px, 0px);
        }
    }

    .btn-primary {
        background-color: #FF6633 !important;
        width: 25%;
        border: none;
        border-radius: 0px;
    }

    .line {
        width: 2px;
        background-color: #13A180;
    }

    .rounded-circle.py-2.px-3.text-white.mb-1 {
        background: #13A180;
    }



    h5.title.mb-5 {
        font-size: 14px;
        color: #13A180;
    }

    input.form-control {
        border-radius: 0px;
        border: 1px solid;
        height: 50px;
    }


    section.name-transfer {
        margin: 40px;
    }
</style>
<body>
    <section class="name-transfer">
        <div class="container">
            <div class="row">

                <div class="col-lg-9">
                    <div class="panel">
                        <form>
                            @if (Session["customerApplicationCurrentStatus"].ToString() == "")
                            {
                                <div class="row">
                                    <div class="col-md-12">
                                        <h3 class="mt-3">Name Transfer Application Status Tracking :</h3>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-lg-12 col-md-12">
                                        <h5 class="mt-5">@Session["customerID"] is an invalid Customer ID/ Meter Number/ Request Number to track status</h5>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="row">
                                    <div class="col-md-6">
                                        <h3 class="mt-3">Name Transfer</h3>
                                    </div>
                                    @*<div class="col-md-6">
                                            <a class="btn mt-3 float-lg-right" href="#" style="text-decoration: underline;color: black;">Submit Request</a>
                                        </div>*@
                                </div>
                                <div class="row">

                                    <div class="col-lg-12 col-md-12">
                                        <h5 class="mt-5">Application Status</h5>
                                    </div>
                                </div>
                                    if (Session["customerID"] != null)
                                    {
                                       
                                        <div class="row">
                                            <div class="col-lg-6 col-md-6 mt-4">
                                                <div class="form-group">
                                                    <label for="">
                                                        Customer ID: <span class="p-1" style="color: red;">*</span>
                                                    </label>
                                                    <input type="text" class="form-control" id="CustomerInput" aria-describedby="" placeholder="@Session["customerID"]" disabled />
                                                    <small id="" class="form-text text-muted"></small>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6 mt-4">
                                                <div class="form-group">
                                                    <label for="">
                                                        Mobile Number <span class="p-1" style="color: red;">*</span>
                                                    </label>
                                                    <input type="text" class="form-control" id="CustomerInput" aria-describedby="" placeholder="@Session["NameTransferMobile"]" disabled />
                                                    <small id="" class="form-text text-muted"></small>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6 mt-4">
                                                <div class="form-group">
                                                    <label for="">
                                                        Meter Number <span class="p-1" style="color: red;">*</span>
                                                    </label>
                                                    <input type="text" class="form-control" id="CustomerInput" aria-describedby="" placeholder="@Session["MeterNumber"]" disabled />
                                                    <small id="" class="form-text text-muted"></small>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-md-6 mt-4">
                                                <div class="form-group">
                                                    <label for="">
                                                        Request Number <span class="p-1" style="color: red;">*</span>
                                                    </label>
                                                    <input type="text" class="form-control" id="CustomerInput" aria-describedby="" placeholder="@Session["RequestNumber"]" disabled />
                                                    <small id="" class="form-text text-muted"></small>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="row">
                                            <div class="form-group">
                                                <label for="">
                                                    Enter Customer ID/ Mobile Number / Meter Number / Request Number<span class="p-1" style="color: red;">*</span>
                                                </label>
                                                <input type="text" class="form-control" id="CustomerInput" aria-describedby="" placeholder="" />
                                                <small id="" class="form-text text-muted"> </small>
                                            </div>
                                        </div>
                                    }
                                    {
                                        if (Model != null)
                                        {
                                            var count = 1;
                                            <div class="stepper d-flex flex-column mt-5 ml-2">
                                                @foreach (var iteam in Model.NameTransferstatusList)
                                                {
                                                    if (iteam.NameTransferStatus1 != "Approved" && iteam.NameTransferStatus1 != "Rejected")
                                                    {
                                                        if (Model.NameTransferCheckStatusList.Contains(iteam.NameTransferStatus1))
                                                        {
                                                            <div class="d-flex mb-1">
                                                                <div class="d-flex flex-column pr-4 align-items-center">
                                                                    <div class="rounded-circle py-2 px-3  text-white mb-1" style="@ApplicationRegisterBG">@count</div>
                                                                    <div class="line h-100" style="@ApplicationRegisterBG"></div>
                                                                </div>
                                                                <div>
                                                                    <h5 class="title mb-5" style="@ApplicationRegisterColor">@iteam.NameTransferStatusText</h5>
                                                                </div>
                                                            </div>

                                                            count = count + 1;
                                                        }
                                                    }

                                                }

                                                @if (Model.NameTransferCheckStatusList.Contains("Approved"))
                                                {
                                                    <div class="d-flex mb-1">
                                                        <div class="d-flex flex-column pr-4 align-items-center">
                                                            <div class="rounded-circle py-2 px-3  text-white mb-1" style="background-color: #13A180;">@count</div>
                                                            <div class="line h-100" style="background-color: #13A180;"></div>
                                                        </div>
                                                        <div>
                                                            <h5 class="title mb-5" style="color: #13A180;">Under Review</h5>
                                                        </div>
                                                    </div>
                                                    count = count + 1;
                                                    <div class="d-flex mb-1">
                                                        <div class="d-flex flex-column pr-4 align-items-center">
                                                            <div class="rounded-circle py-2 px-3  text-white mb-1" style="background-color: #13A180;">@count</div>
                                                            @*<div class="line h-100" style="background-color: gray;"></div>*@
                                                        </div>
                                                        <div>
                                                            <h5 class="title mb-5" style=" color: #13A180;">Transfer Completed</h5>
                                                        </div>
                                                    </div>
                                                }
                                                else if (Model.NameTransferCheckStatusList.Contains("Rejected"))
                                                {
                                                    <div class="d-flex mb-1">
                                                        <div class="d-flex flex-column pr-4 align-items-center">
                                                            <div class="rounded-circle py-2 px-3  text-white mb-1" style="background-color: #13A180;">@count</div>
                                                            <div class="line h-100" style="background-color: #13A180;"></div>
                                                        </div>
                                                        <div>
                                                            <h5 class="title mb-5" style="color: #13A180;">Under Review</h5>
                                                        </div>
                                                    </div>
                                                    count = count + 1;
                                                    <div class="d-flex mb-1">
                                                        <div class="d-flex flex-column pr-4 align-items-center">
                                                            <div class="rounded-circle py-2 px-3  text-white mb-1" style="background-color: red;">@count</div>
                                                            @*<div class="line h-100" style="background-color: gray;"></div>*@
                                                        </div>
                                                        <div>
                                                            <h5 class="title mb-5" style="color: red;">Transfer Rejected</h5>
                                                        </div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="d-flex mb-1">
                                                        <div class="d-flex flex-column pr-4 align-items-center">
                                                            <div class="rounded-circle py-2 px-3  text-white mb-1" style="background-color: black;">@count</div>
                                                            <div class="line h-100" style="background-color: black;"></div>
                                                        </div>
                                                        <div>
                                                            <h5 class="title mb-5" style="color: black;">Under Review</h5>
                                                        </div>
                                                    </div>

                                                    count = count + 1;
                                                    <div class="d-flex mb-1">
                                                        <div class="d-flex flex-column pr-4 align-items-center">
                                                            <div class="rounded-circle py-2 px-3  text-white mb-1" style="background-color: gray;">@count</div>
                                                            @*<div class="line h-100" style="background-color: gray;"></div>*@
                                                        </div>
                                                        <div>
                                                            <h5 class="title mb-5" style="color: gray;">Transfer Completed</h5>
                                                        </div>
                                                    </div>

                                                }

                                            </div>
                                        }
                                    }
                                    <div class="col-lg-12 text-right">
                                        <a href="/name-transfer-status-login" class="btn btn-primary">OK</a>
                                    </div>
                                
                            }
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
