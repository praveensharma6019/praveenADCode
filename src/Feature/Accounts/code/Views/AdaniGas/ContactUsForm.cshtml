@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Mvc.Configuration
@using Sitecore
@using Sitecore.Mvc
@model Sitecore.Mvc.Presentation.RenderingModel

@{
    // var id = Sitecore.Context.Database.GetItem("about-us").Url();
    string RedirectUrl = Request.Url.Scheme + "://" + Request.Url.Host;
    var pagename = Sitecore.Links.LinkManager.GetItemUrl(Sitecore.Context.Item);
    var msgTpye = Sitecore.Context.Database.GetItem("{5AC563B9-1E93-47FA-B383-2EA0266336C9}");
    var subjectlist = Sitecore.Context.Database.GetItem("{E3B83B48-4CF0-4541-A9E9-8854FE0B3B4C}").Axes.GetDescendants();
    
    string disp = "";
    disp = "display: none;";
}
<script src="https://www.google.com/recaptcha/api.js?onload=myCallBack&render=explicit" async defer></script>

<section class="bg-gray pb-5 pt-2">
    <div class="container">
        <h4 class="heading pl-4 mb-4">Write to us</h4>
        <div class="contact-form">
            <form class="px-4 py-4" id="contact_form" name="contact_form">
                <input type="hidden" id="cFormType" value="Contact-Us">
                <input type="hidden" id="PageInfo" value="/contact-us">
                <input type="hidden" id="utm_source" value="">
                <input type="hidden" id="emailMessage" value="{A35977A2-F5CE-4E31-B043-A07865D30849}">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <input type="text" class="form-control" id="cname" placeholder="Name*">
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <select id="cmessageType" name="cmessageType" class="form-control">
                                @foreach (var item in subjectlist)
                                {
                                    <option value="@item.Fields["Text"].Value">@item.Fields["Text"].Value</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <textarea class="form-control" rows="3" id="address" placeholder="Address*"></textarea>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <input type="email" class="form-control" id="cmailid" placeholder="Email*">
                        </div>
                    </div>



                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <input type="text" class="form-control" id="customerid" placeholder="Customer ID">
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <select class="form-control" id="drpstate" name="state_code">
                                <option value="">Please Select Your State*</option>
                                <option value="Chhattis">Chhattisgarh</option>
                                <option value="Guj">Gujarat</option>
                                <option value="Har">Haryana</option>
                                <option value="Karna">Karnataka</option>
                                <option value="Madhya">Madhya Pradesh</option>
                                <option value="Odi">Odisha</option>
                                <option value="Raj">Rajasthan</option>
                                <option value="Tamil">Tamil Nadu</option>
                                <option value="Uttar">Uttar Pradesh</option>
                                



                            </select>
                        </div>
                    </div>
                   

                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <select id="cccity" name="city" class="form-control">
                                <option value="">Select City</option>

                            </select>

                        </div>
                    </div>
                    <div class="col-md-6 mb-3" style="@disp" id="OtherCity">
                        <div class="form-group">
                            <input type="text" class="form-control" id="others" placeholder="City Name*">
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <input type="text" class="form-control" id="ccontactno" placeholder="Contact Number*">
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <textarea class="form-control" rows="3" id="cmessage" placeholder="Please explain your query in detail*"></textarea>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div id="recaptcha2"></div>
                    </div>
                    <div class="col-md-2 mb-3">
                        <p class=" w-100 h-100"><button type="button" id="btnContactUsSubmit" class="btn btn-primary w-100">Submit</button></p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>