    @if (WebAPIAdaniGas.IsUserLoggedIn())
    {
        <li><a href="@Html.Sitecore().Dictionary("/Accounts/Redirect URL/Logged-In","/myaccount/png-dashboard")"><span class="userIcon"><i class="fas fa-user"></i></span></a></li>
