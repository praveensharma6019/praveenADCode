@using Sitecore.Feature.Accounts
@using Sitecore.Feature.Accounts.Services
@using Sitecore.Feature.Accounts.Models
@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Mvc.Configuration
@using CaptchaMvc;
@using CaptchaMvc.HtmlHelpers;
@{
    var msg = ViewBag.Message;
    if (Session["EnquiryMessage"] != null)
    {
        msg = Session["EnquiryMessage"].ToString();
    }
}
<div id="ERegistrationPopup" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Enquiry No.</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("CheckInquiryForERegistration", "AdaniGas", FormMethod.Get))
                {
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <label>Please Enter Your Enquiry No.*</label>
                                <input type="text" id="EnquiryNo" name="EnquiryNo" class="form-control">
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="clearfix"></div>
                    <button type="submit" class="btn btn-primary">Next</button>
                }
            </div>
        </div>
    </div>
</div>
<div id="Messagepopup" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Message</h4>
            </div>
            <div class="modal-body" style="color: black; font-family: Verdana">
                @msg
                <button type="submit" class="btn btn-primary" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>