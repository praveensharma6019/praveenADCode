@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Mvc.Configuration

<!-- Toggle button to show/hide side nav -->
    <div class="d-block d-md-none sideNavBtn">
        <button type="button" id="sidebarCollapse" class="btn btn-secondary">
            <i class="fas fa-align-left"></i>
            <span>&nbsp;Menu</span>
        </button>
    </div>
    <!-- /Toggle button to show/hide side nav -->
    <div class="clearfix"></div>
    <!-- Update Profile Page Content-->
	
    <div class="panel">
        @using (Html.BeginRouteForm(MvcSettings.SitecoreRouteName, FormMethod.Post, new { @class = "form-signin", id = "frmForgotPassword" }))
        {
            @Html.AddUniqueFormId()
            @Html.AntiForgeryToken()
            <h3 class="mb-3">Complaints/Inquiry</h3>
            <div class="msgTxt pb-3" style="color:red;">@ViewBag.Message</div>

            <div class="row">

                <div class="col-lg-6 col-md-6">
                    <label>Select Type Complaint/Inquiry<span class="txt-red">*</span></label>
                    <div class="form-group">
                        <select id="type" name="type" class="custom-select"></select>

                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="form-group">
                        <label>Select Category<span class="txt-red">*</span></label>
                        <div class="form-group">
                            <select id="category" name="category" class="custom-select"></select>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12">
                    <div class="form-group">


                        <label>Additional Comment<span class="txt-red">*</span></label>
                        <textarea id="comment" name="comment" class="w-100 p-2" rows="3" placeholder="Comment" maxlength="130"></textarea>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="btn-group" role="group" aria-label="Basic example">
                    <input type="submit" name="submit" class="btn btn-primary mr-2" id="submitform" value="@Html.Sitecore().Dictionary("/Accounts/afersalesservice", "Submit")" />

                </div>
            </div>
        }
    </div>