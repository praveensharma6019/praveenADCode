@using Sitecore.Feature.PageContent
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@*@Html.Sitecore().Field(Templates.HasPageContent.Fields.Body)*@
@*@Html.Sitecore().Field(Templates.HasPageContent.Fields.Image)*@
@{
    Sitecore.Data.Items.Item item = Sitecore.Context.Item;
    string imgurls = string.Empty;
    if (item != null && item.Fields["Image"] != null)
    {
        Sitecore.Data.Fields.ImageField imgField = ((Sitecore.Data.Fields.ImageField)item.Fields["Image"]);
        imgurls = Sitecore.Resources.Media.MediaManager.GetMediaUrl(imgField.MediaItem);
    }
}

<div class="col s12 m8 offset-m1">
    <header class="section-header">
        <h1>@Html.Sitecore().Field(Templates.HasPageContent.Fields.Title)</h1>
         @Html.Sitecore().Field(Templates.HasPageContent.Fields.Summary)
    </header>
    <div class="section-container custom_accrdion">

        <picture>
            <source media="(max-width:992px)" srcset="@imgurls" alt="Fight againt Covid-19">
            <img src="@imgurls" alt="Know Your Bill" class="responsive-img">
        </picture>
    </div>
    <div class="section-container know-your-bill">
        @if (!string.IsNullOrEmpty(item["Warning"]))
        {
            <header class="section-header">
                <h4>@Html.Raw(item["Warning"])</h4>
            </header>
        }

        @Html.Sitecore().Field(Templates.HasPageContent.Fields.Body)
    </div>
</div>