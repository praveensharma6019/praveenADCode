@{
    Layout = null;
}

@using Adani.SuperApp.Airport.Feature.Navigation.Platform.Models
@model Adani.SuperApp.Airport.Feature.Navigation.Platform.Models.CollapsableExpandale

@{
    if (Model == null && Model.NavigationLevel1 == null)
    {
        return;
    }
}

<ul class="collapsible expandable hamburger_section">
    <li>
        <h5>@Model.ParentTitle</h5>
    </li>
    <li>
        <a href="@Model.Link">
            <span class="icon-box">
                <i class="@Model.LeftIcon"></i>
            </span>
            <label>@Model.Title</label>
        </a>
    </li>
    <li>
        <div class="accordion accordion-flush" id="hamburgerAccordion">

            @foreach (var level1 in Model.NavigationLevel1)
            {

                <div class="accordion-item">
                    <h2 class="accordion-header" id="hamburger-headingOne">
                        <button class="accordion-button collapsed"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#flush-collapseOne"
                                aria-expanded="false"
                                aria-controls="flush-collapseOne">
                            <i class="@level1.LeftIcon"></i> @level1.Title
                        </button>
                    </h2>
                    @if (level1.NavigationLevel2 != null && level1.NavigationLevel2.Count() > 0)
                    {
                        <div id="flush-collapseOne"
                             class="accordion-collapse collapse"
                             aria-labelledby="hamburger-headingOne"
                             data-bs-parent="#hamburgerAccordion">
                            <div class="accordion-body">
                                <ul class="submenu">
                                    @foreach (var level2 in level1.NavigationLevel2)
                                    {
                                        <li>
                                            <a href="@level2.Link">
                                                <label> @level2.Title</label>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </li>
</ul>


