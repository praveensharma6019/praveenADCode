@using Sitecore.Feature.Navigation
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@model Sitecore.Feature.Navigation.Models.NavigationItems

@{
    if (Model?.NavItems == null)
    {
        return;
    }
}

<div class="section pb-1" id="location">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.NavItems)
            {
                <div class="col-md-6">
                    @if (item.IsNewTab)
                    {
                        <a href="@item.Url" class="tileOuter" target="_blank">
                            <div class="tileImg">@Html.Sitecore().ImageField(Templates.LinkMenuItem.Fields.Image, item.Item)</div>
                            <div class="tileCaption">
                                <span>@Html.Sitecore().ImageField(Templates.Navigable.Fields.NavigationTitle, item.Item)</span>
                                <span class="rightArrowCircle"><i class="far fa-arrow-alt-circle-right"></i></span>
                            </div>
                        </a>
                    }
                    else
                    {
                        <a href="@item.Url" class="tileOuter" target="_blank">
                            <div class="tileImg">@Html.Sitecore().ImageField(Templates.LinkMenuItem.Fields.Image, item.Item)</div>
                            <div class="tileCaption">
                                <span>@Html.Sitecore().ImageField(Templates.Navigable.Fields.NavigationTitle, item.Item)</span>
                                <span class="rightArrowCircle"><i class="far fa-arrow-alt-circle-right"></i></span>
                            </div>
                        </a>
                    }
                </div>
            }

        </div>
    </div>
</div>
