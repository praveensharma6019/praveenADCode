@using Sitecore.Mvc.Presentation
@using Sitecore.Feature.Navigation
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@{
    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var model = Sitecore.Context.Database.GetItem(datasource);
}
<div class="col-lg-4">
    <div class="bg-white box-shadow p-4" data-aos="fade-right"  >

        <h3 class="section-heading">News and Updates</h3>
        <ul class="news-updates">
            @foreach (var item in model.GetChildren().ToList())
            {
                <li>@Html.Sitecore().Field(Templates.Navigable.Fields.NavigationTitle, item)</li>
            }
        </ul>
        <p class="text-left mt-4"><a href="" class="btn btn-gradient">View more</a></p>
    </div>
</div>
