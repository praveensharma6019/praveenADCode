	@using Sitecore.Feature.Navigation
@using Sitecore.Foundation.SitecoreExtensions.Extensions


@{

    var ContentPath = Sitecore.Context.Item.Paths.ContentPath.Replace("/Ports/", "");
    var path = ContentPath.Replace("/AdaniGas/", "");
    string[] pathArr = path.Split('/');
    var navPath = "/";
    var paramid = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.Parameters.Where(x => x.Key == "cssclass").FirstOrDefault().Value;
    if (string.IsNullOrEmpty(paramid))
    {
        paramid = "breadcrumb-sub-layout bg-gray py-5";
    }
    var i = 0;
}


<section class="section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    @for ( i = 0; i < pathArr.Count()-1; i++)
                    {
                        navPath = navPath + pathArr[i];


                        <li><a style="text-transform: capitalize;" href="@navPath">@pathArr[i].Replace("-", " ")</a></li>
                        navPath = navPath + "/";
                    }
                </ul>
                <h2>@pathArr[pathArr.Count()-1].Replace("-", " ")</h2>
                <p></p>
            </div>
        </div>
    </div>
</section><!-- /breadcrumb -->