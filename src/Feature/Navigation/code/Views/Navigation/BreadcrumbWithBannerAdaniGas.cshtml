@using Sitecore.Feature.Navigation
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@model Sitecore.Feature.Navigation.Models.NavigationItems

<section class="breadcrumb-sublayout">
    <div class="bg-image">@Html.Sitecore().ImageFieldWithoutSize(Templates.HasPageContent.Fields.Image, Model.NavItems[Model.NavItems.Count() - 1].Item, 0, 0, "")</div>
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <ul class="breadcrumb-sublayout-ul">
                    @for (int i = 0; i < Model.NavItems.Count() - 1; i++)
                    {
                        <li>
                            @if (Model.NavItems[i].Item.ID == Templates.BillingAndPaymentAdaniGas.ID)
                            {
                                <a href="@Model.NavItems[i].Link">@Html.Sitecore().Field(Templates.Navigable.Fields.NavigationTitle, Model.NavItems[i].Item)</a>
                            }
                            else
                            {
                                <a href="@Model.NavItems[i].Item.Url()">@Html.Sitecore().Field(Templates.Navigable.Fields.NavigationTitle, Model.NavItems[i].Item)</a>
                            }
                        </li>
                    }
                </ul>
                <h2 class="my-2 my-lg-3">@Html.Sitecore().Field(Templates.Navigable.Fields.NavigationTitle, Model.NavItems[Model.NavItems.Count() - 1].Item)</h2>
                <p></p>
            </div>
        </div>
    </div>
</section>