
@using Sitecore.Feature.Navigation
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@model Sitecore.Feature.Navigation.Models.NavigationItems

@{
    if (Model?.NavItems == null)
    {
        return;
    }

}

@if (Model?.NavItems != null)
{
    var currentlink = Request.RawUrl;
    foreach (var item in Model.NavItems)
    {
        var itemname = (Convert.ToString(@Html.Sitecore().Field(Templates.Navigable.Fields.NavigationTitle, item.Item))).ToLower();
        if (itemname == "club" || itemname == "careers")
        {
            <li><a href="@item.Url" target="_blank">@Html.Sitecore().Field(Templates.Navigable.Fields.NavigationTitle, item.Item)</a></li>
        }
        else
        {
            if (currentlink == item.Url)
            {
                <li><a href="@item.Url" class="active">@Html.Sitecore().Field(Templates.Navigable.Fields.NavigationTitle, item.Item)</a></li>
            }
            else
            {
                <li><a href="@item.Url">@Html.Sitecore().Field(Templates.Navigable.Fields.NavigationTitle, item.Item)</a></li>
            }
        }
    }
}



