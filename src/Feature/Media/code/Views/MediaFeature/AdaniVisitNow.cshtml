@using Sitecore.Data.Fields
@using Sitecore.Feature.Media
@using Sitecore.Feature.Media.Repositories
@using Sitecore.Foundation.Alerts
@using Sitecore.Foundation.Alerts.Extensions
@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Foundation.Theming.Extensions
@using Sitecore.Resources.Media
@model Sitecore.Mvc.Presentation.RenderingModel
@{
    /**/

    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var model = Sitecore.Context.Database.GetItem(datasource);
    Sitecore.Data.Fields.LinkField linkField = model.Fields[Templates.HasMedia.Fields.Link];
    var NavigateUrl = linkField.Url;


}

<section class="bg-blue bg-op-image position-relative d-block py-4">
    <div class="bg-images">@Html.Sitecore().Field(Templates.HasMediaImage.Fields.Image,model)</div>
    <div class="container">
        <div class="row">
            <div class="col-lg-10 pt-3">
                @Html.Sitecore().Field(Templates.HasMedia.Fields.Description, model)
            </div>
            <div class="col-lg-2 py-3">
                <p class="text-lg-right text-center"><a href="@NavigateUrl" target="_blank" class="btn btn-white">Visit Now</a></p>
            </div>
        </div>
    </div>
</section>
