@using Sitecore.Data.Fields
@using Sitecore.Feature.Media
@using Sitecore.Feature.Media.Repositories
@using Sitecore.Foundation.Alerts
@using Sitecore.Foundation.Alerts.Extensions
@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Foundation.Theming.Extensions
@using Sitecore.Resources.Media
@model Sitecore.Mvc.Presentation.RenderingModel
@{
    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var elements = Sitecore.Context.Database.GetItem(datasource);
    int i = 1;
}

@if (elements != null)
{
    var itemsList = elements.Children.ToList();

    <section class="bg-gray pt-5">
        <div class="container">
            @foreach (var item in itemsList)
            {
                var innerItem = item.Children.InnerChildren;
                if (i % 2 == 0)
                {
                    <div class="row mb-5">
                        <div class="col-lg-6 col-md-6 text-center position-relative mb-3" data-aos="fade-right">
                            <div class="text-left">
                                @if (innerItem != null && innerItem.Count() > 0)
                                {
                                    <div class="owl-carousel single-item">
                                        @foreach (var inner in innerItem)
                                        {
                                            <div class="item">
                                                @Html.Sitecore().ImageFieldWithoutSize2(Templates.HasMediaImage.Fields.Image, inner, cssClass: "img-fluid")
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    @Html.Sitecore().ImageFieldWithoutSize2(Templates.HasMediaImage.Fields.Image, item, cssClass: "img-fluid")
                                }
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 py-5 mb-3" data-aos="fade-left">
                            <i class="txt-overlay-above">@Html.Sitecore().Field(Templates.HasMedia.Fields.SubTitle, item)</i>
                            <h3 class="text-left sectionHeading mb-3 position-relative">@Html.Sitecore().Field(Templates.HasMedia.Fields.Title, item)</h3>
                            <ul class="ul-bullets">
                                @Html.Sitecore().Field(Templates.HasMedia.Fields.Description, item)
                            </ul>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row mb-5">
                        <div class="col-lg-6 col-md-6 py-5 mb-3" data-aos="fade-right">
                            <i class="txt-overlay-above">@Html.Sitecore().Field(Templates.HasMedia.Fields.SubTitle, item)</i>
                            <h3 class="text-left sectionHeading mb-3 position-relative">@Html.Sitecore().Field(Templates.HasMedia.Fields.Title, item)</h3>
                            <ul class="ul-bullets">
                                @Html.Sitecore().Field(Templates.HasMedia.Fields.Description, item)
                            </ul>
                        </div>
                        <div class="col-lg-6 col-md-6 text-center position-relative mb-3" data-aos="fade-left">
                            <div class="text-right">
                                @if (innerItem != null && innerItem.Count() > 0)
                                {
                                    <div class="owl-carousel single-item">
                                        @foreach (var inner in innerItem)
                                        {
                                            <div class="item">
                                                @Html.Sitecore().ImageFieldWithoutSize2(Templates.HasMediaImage.Fields.Image, inner, cssClass: "img-fluid")
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    @Html.Sitecore().ImageFieldWithoutSize2(Templates.HasMediaImage.Fields.Image, item, cssClass: "img-fluid")
                                }
                            </div>
                        </div>
                    </div>

                }

                i++;
            }
        </div>
    </section>
}