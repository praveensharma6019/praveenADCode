@using Sitecore.Data.Fields
@using Sitecore.Feature.Media
@using Sitecore.Feature.Media.Repositories
@using Sitecore.Foundation.Alerts
@using Sitecore.Foundation.Alerts.Extensions
@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Foundation.Theming.Extensions
@using Sitecore.Resources.Media
@model Sitecore.Mvc.Presentation.RenderingModel
@{
    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var elements = Sitecore.Context.Database.GetItem(datasource);
    int i = 1;
}

@if (elements != null)
{
    var itemsList = elements.Axes.GetDescendants();

    <section class="py-4 solutions-tab documents-required">
        <div class="container" data-aos="fade-up">
            <h2 class="text-center sectionHeading mb-5">Documents Required</h2>            
            @foreach (var item in itemsList)
            {
                if (i % 2 == 0)
                {
                    <div class="row mb-5">
                        <div class="col-lg-6 mb-3">
                            @Html.Sitecore().ImageFieldWithoutSize2(Templates.HasMediaImage.Fields.Image, item, cssClass: "img-fluid w-100")
                        </div>
                        <div class="col-lg-6 mb-2">
                            <h3 class="text-left txt-lg mb-3 position-relative">@Html.Sitecore().Field(Templates.HasMedia.Fields.Title, item)</h3>
                            <ul class="ul-bullets">
                                @Html.Sitecore().Field(Templates.HasMedia.Fields.Description, item)
                            </ul>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row mb-5">
                        <div class="col-lg-6 mb-2">
                            <h3 class="text-left position-relative mb-3 txt-lg">@Html.Sitecore().Field(Templates.HasMedia.Fields.Title, item)</h3>
                            <ul class="ul-bullets">
                                @Html.Sitecore().Field(Templates.HasMedia.Fields.Description, item)
                            </ul>
                        </div>
                        <div class="col-lg-6 mb-3">
                            @Html.Sitecore().ImageFieldWithoutSize2(Templates.HasMediaImage.Fields.Image, item, cssClass: "img-fluid  w-100")
                        </div>
                    </div>
                }

                i++;
            }

            <p class="mt-3"><b>Note:</b> Please Submit the documents as per sequence in file</p>

        </div>
    </section>

}