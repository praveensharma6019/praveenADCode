@using Sitecore.Data.Fields
@using Sitecore.Feature.Media
@using Sitecore.Feature.Media.Repositories
@using Sitecore.Foundation.Alerts
@using Sitecore.Foundation.Alerts.Extensions
@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Foundation.Theming.Extensions
@using Sitecore.Resources.Media
@model Sitecore.Mvc.Presentation.RenderingModel
@{
    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var elements = Sitecore.Context.Database.GetItem(datasource);
    int i = 1;
    int j = 1;
}
@if (elements != null)
{
    var mainItem = elements.Children.ToList();

    <section class="bg-gray py-5 download-section">
        @foreach (var main in mainItem)
        {
            var itemList = main.Children.ToList();
            <div class="container mb-5">
                <div class="heading mb-4">
                    @if (main.FieldHasValue(Templates.HasMedia.Fields.Title))
                    {
                        <h2 class="pl-4 txt-lg">@Html.Sitecore().Field(Templates.HasMedia.Fields.Title, main)</h2>
                    }
                    @if (main.FieldHasValue(Templates.HasMedia.Fields.SubTitle))
                    {
                        <p class="pl-4 txt-sm">@Html.Sitecore().Field(Templates.HasMedia.Fields.SubTitle, main)</p>
                    }
                </div>
                <div class="owl-middlezoom">
                    <div class="row">
                        @foreach (var item in itemList)
                        {
                            <div class="col-lg-4">
                                <div class="item" data-toggle="modal" data-target="#video-@i">
                                    @Html.Sitecore().ImageFieldWithoutSize2(Templates.HasMediaImage.Fields.Image, item, cssClass: "img-fluid")
                                    @if (item.FieldHasValue(Templates.HasMedia.Fields.Description))
                                    {
                                        <p>@Html.Sitecore().Field(Templates.HasMedia.Fields.Description, item)</p>
                                    }
                                </div>
                            </div>

                            i++;
                        }
                    </div>
                </div>
                @foreach (var item in itemList)
                {
                    var innerItem = item.Axes.GetDescendants().Where(x => x.TemplateID == new Sitecore.Data.ID("{F0369E1A-9030-4A05-A09C-EF09B664ED27}"));
                    if (innerItem != null && innerItem.Count() > 0)
                    {
                        <div class="modal events-modal" id="video-@j">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <div class="modal-body">
                                        <div class="owl-carousel events-item">
                                            @foreach (var inner in innerItem)
                                            {
                                                <div class="item">
                                                    @Html.Sitecore().ImageFieldWithoutSize2(Templates.HasMediaImage.Fields.Image, inner)
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    j++;
                }
            </div>
        }
    </section>
}