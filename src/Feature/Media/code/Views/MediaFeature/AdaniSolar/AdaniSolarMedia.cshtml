@using Sitecore.Data.Fields
@using Sitecore.Feature.Media
@using Sitecore.Feature.Media.Repositories
@using Sitecore.Foundation.Alerts
@using Sitecore.Foundation.Alerts.Extensions
@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Foundation.Theming.Extensions
@using Sitecore.Resources.Media
@model Sitecore.Mvc.Presentation.RenderingModel
@{ 
    var dataItem = "{2C5263DE-8C73-417F-BD2C-B0C17CAB4DE4}";
    var ddrItem = Sitecore.Context.Data.Database.GetItem(dataItem);

    var contrycodeId = "{D82BFF95-088F-49E3-8871-5B3957AB4522}";
    var contrycodeItem = Sitecore.Context.Data.Database.GetItem(contrycodeId);
    var elementList = ddrItem.Axes.GetDescendants();
    var countryItemList = contrycodeItem.Axes.GetDescendants();
    List<SelectListItem> CategoryList = new List<SelectListItem>();
    List<SelectListItem> CountryList = new List<SelectListItem>();
    if (elementList != null)
    {
        foreach (var item in elementList)
        {
            CategoryList.Add(new SelectListItem { Text = item.Fields["Text"].ToString(), Value = item.Fields["Value"].ToString() });
        }
        foreach (var item in countryItemList)
        {
            CountryList.Add(new SelectListItem { Text = item.Fields["Text"].ToString(), Value = item.Fields["Value"].ToString() });
        }
    }
}

<section class="bg-gray p-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 mt-4 mb-3">
                <div class="box-block p-4 w-100 h-100 boxzoom">
                    @Html.Sitecore().Placeholder("media-coverage")
                </div>
            </div>
            <div class="col-lg-4 mt-4 mb-3">
                <div class="box-block p-4 w-100 h-100 boxzoom">
                    @Html.Sitecore().Placeholder("media-release")
                </div>
            </div>
            <div class="col-lg-4 mt-4 mb-3">
                <div class="box-block p-4 w-100 boxzoom">
                    @Html.Sitecore().Placeholder("media-contacts")
                </div>
                <p class="mt-5 my-3 px-4"><a href="/newsroom/media-library" class="txt-md"><img src="-/media/2EE30702DB8648128E788753366D75B5.ashx" class="img-fluid mr-3" style="width: 45px;">Media Library</a></p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 mb-2">
                <div class="box-block p-4 w-100 h-100">
                    @Html.Sitecore().Placeholder("media-events")
                </div>
            </div>
            @*<div class="col-lg-5">
                <div class="box-block p-4 w-100 h-100">
                    @Html.Sitecore().Placeholder("media-downloads")
                </div>
            </div>*@
        </div>
    </div>
</section>

