@using Sitecore.Data.Fields
@using Sitecore.Feature.Media
@using Sitecore.Feature.Media.Repositories
@using Sitecore.Foundation.Alerts
@using Sitecore.Foundation.Alerts.Extensions
@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Foundation.Theming.Extensions
@using Sitecore.Resources.Media
@model Sitecore.Mvc.Presentation.RenderingModel
@{
    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var vidlist = Sitecore.Context.Database.GetItem(datasource);
    var i = 0;
}

<div class="section">
    <div class="container videos">
        <div class="row py-3">
            @foreach (var vid in vidlist.Children.ToList())
            {
                <div class="col-sm-4 video-thumb">
                    <a href="#video-01" data-toggle="modal" data-target="#video_@i">
                        @Html.Sitecore().ImageField(Templates.HasMedia.Fields.Thumbnail, vid, 480, 360, "img-fluid")
                    </a>
                    <p class="py-3"> @Html.Sitecore().Field(Templates.HasMedia.Fields.Title, vid)</p>
                    <!-- Video Modal -->
                    <div class="modal video" id="video_@i" style="display: none;" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <!-- Modal Header -->
                                <button type="button" class="close" data-dismiss="modal" onclick="CloseModal('@i')">×</button>
                                <!-- Modal body -->
                                @{
                                    Sitecore.Data.Fields.LinkField linkField = @vid.Fields[Templates.HasMediaVideo.Fields.VideoLink];
                                    var NavigateUrl = linkField.Url;
                                }
                                <div class="modal-body">
                                    <iframe width="100%" height="350" src="@NavigateUrl" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen=""></iframe>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /Video Modal -->
                </div>
                i++;
            }
        </div>
    </div>
</div>
