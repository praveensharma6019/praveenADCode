@using Sitecore.Data.Fields
@using Sitecore.Feature.Media
@using Sitecore.Feature.Media.Repositories
@using Sitecore.Foundation.Alerts
@using Sitecore.Foundation.Alerts.Extensions
@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Foundation.Theming.Extensions
@using Sitecore.Resources.Media
@model Sitecore.Mvc.Presentation.RenderingModel
@{
    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var vidlist = Sitecore.Context.Database.GetItem(datasource);
    var i = 1;
}

<section class="section bg-white" id="videos">
    <div class="container videos">
        <h3 class="sectionHeading leftAlign mt-0">Videos</h3>
        <div class="row py-3">
            @foreach (var vid in vidlist.Children.ToList())
            {
                <div class="col-sm-4 video-thumb">
                    <a href="#video-01" data-toggle="modal" data-target="#video_@i" class="img-res">
                        @Html.Sitecore().ImageField(Templates.HasMedia.Fields.Thumbnail, vid, 480, 360, "img-fluid")
                    </a>
                    <p class="py-3"> @Html.Sitecore().Field(Templates.HasMedia.Fields.Title, vid)</p>
                    <!-- Video Modal -->
                    <div class="modal video" id="video_@i">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <!-- Modal Header -->
                                <button type="button" class="close" data-dismiss="modal" onclick="CloseModal('video_@i')">X</button>
                                @{
                                    Sitecore.Data.Fields.LinkField linkField = @vid.Fields[Templates.HasMediaVideo.Fields.VideoLink];
                                    var NavigateUrl = linkField.Url;
                                }
                                <!-- Modal body -->
                                <div class="modal-body">
                                    <iframe width="100%" height="350" src="@NavigateUrl" frameborder="0" ; encrypted-media" allowfullscreen="" id="v-@i"></iframe>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /Video Modal -->
                </div>
                i++;
            }
        </div>
        @*<div class="row py-4">
                <a href="https://www.youtube.com/channel/UCE8NW823z35Fgj2ThH2aOxg/videos" class="btnBordered blueBtn my-3 my-md-0 box-center" target="_blank">Watch more</a>
            </div>*@
    </div>
</section>
