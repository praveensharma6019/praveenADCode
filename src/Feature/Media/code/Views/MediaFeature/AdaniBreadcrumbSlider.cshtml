@using Sitecore.Data.Fields
@using Sitecore.Feature.Media
@using Sitecore.Feature.Media.Repositories
@using Sitecore.Foundation.Alerts
@using Sitecore.Foundation.Alerts.Extensions
@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Foundation.Theming.Extensions
@using Sitecore.Resources.Media
@model Sitecore.Mvc.Presentation.RenderingModel
@{
    /**/

    /**/

    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var elements = Sitecore.Context.Database.GetItem(datasource);
    var ContentPath = Sitecore.Context.Item.Paths.ContentPath.Replace("/Adani/", "");
    var path = ContentPath.Replace("/Adani/", "");
    string[] pathArr = path.Split('/');
    var navPath = "/";

}

<section class="breadcrumb-slider">
    <div class="breadcrumb-sl-inner">
        <div class="container">
            <ul>
                @for (int i = 0; i <= pathArr.Count() - 1; i++)
                {
                    if (!string.IsNullOrEmpty(pathArr[i]))
                    {
                        if (System.Convert.ToString(pathArr[i]).ToLower() == "home")
                        {
                            <li><a href="@navPath">@pathArr[i]</a></li>
                        }
                        else
                        {
                            navPath = navPath + pathArr[i].Replace(" ", "-").ToLower();
                            <li><a href="@navPath">@pathArr[i].Replace("-", " ")</a></li>
                            navPath = navPath + "/";
                        }
                    }
                }
            </ul>
        </div>
    </div>
    <div class="mainBanner">
        <div class="owl-carousel owl-theme" id="about-banner">
            @foreach (var item in elements.Children.ToList())
            {

                <div class="item">
                    <div class="slider-content">
                        @Html.Sitecore().ImageField(Templates.HasMediaImage.Fields.Image, item, 0, 0, "img-fluid")
                        <div>
                            <div class="container">
                                <h2>@Html.Sitecore().Field(Templates.HasMedia.Fields.Title, item)</h2>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
        <div class="container position-relative">
            <div class="scroll-down">
                <a href="#sectionfirst"><span class="blink blink-infinite blink-1"></span><span class="blink blink-infinite blink-2"></span><span class="blink blink-infinite blink-3"></span><span class="blink blink-infinite blink-4"></span><span class="blink blink-infinite blink-5"></span></a>
            </div>
        </div>

    </div>
</section>