@using Sitecore.Feature.Media
@using Sitecore.Foundation.Alerts
@using Sitecore.Foundation.Alerts.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Resources.Media
@model Sitecore.Mvc.Presentation.RenderingModel

@{
    /**/

    var datasource = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.DataSource;
    var model = Sitecore.Context.Database.GetItem(datasource);

}
<style>
.video-gallery.flex {
    margin-bottom: 30px;
}
.video-gallery-thumbnail {
    width: 100%;
    margin-right: 30px;
    padding-bottom: 27.2%;
    overflow: hidden;
}
.iframe-wrapper {
    position: relative;
    padding-bottom: 56.2%;
}
.iframe-trigger, .iframe-wrapper>iframe {
    position: absolute;
    height: 100%;
    width: 100%;
    left: 0;
    top: 0;
}
.video-gallery-thumbnail p {
    position: absolute;
    pointer-events: none;
}
.photo-gallery>p, .video-gallery-thumbnail>p {
    position: absolute;
    bottom: 36px;
    margin: 0;
    padding: 9px 15px 9px 60px;
    background: rgba(0,0,0,.5);
    color: #fff;
}
.video-caption {
    width: 100%;
    
    background: #585858;
    color: #fff;
}
.video-caption span{

}
.flex>* {
    float: none;
}
.video-caption p {
    margin: 0;
}
section {
    padding-top: 60px;
    padding-bottom: 60px;
}
.gallery-navbar{ 
     background-color: #76b8e9; 
 } 
 .gallery-navbar a{color: #ffc727;font-size: 40px;font-weight: bold;text-decoration: none;background-color: #fff;padding: 10px;border-radius: 8px; } 
.gallery-navbar .row{text-align:center;} 

</style>

<section class="gallery-navbar">
<div class="container">
    <div class="row">
        <div class="col-lg-6 mb-lg-0 mb-5">
            <i class="fa fa-picture-o" aria-hidden="true"></i><a href="/season-1-highlights">Photos</a>
        </div>
        <div class="col-lg-6 mb-lg-0 mb-5">
            <i class="fa fa-video-camera" aria-hidden="true"></i><a href="#">Videos</a>
        </div>
    </div>
</div>
    
</section>
<section class="video-gallery-section">
    <div class="container">
        @foreach (var item in model.GetChildren().ToList())
        {
			<div class="row">
			<div class="col-lg-6">
			
            <div class="video-gallery flex">

                <div class="video-gallery-thumbnail iframe-wrapper" itemprop="video" itemscope itemtype="http://schema.org/VideoObject">
                    <!-- <meta itemprop="description" content="An initiative to show solidarity towards the Bravehearts of the India's Armed Forces. Support us in our step to honour the soldiers who guard our country's borders for our safety. Run for a cause at the Adani Ahmedabad Marathon."> -->
                    <!-- <meta itemprop="thumbnailURL" content="http://www.ahmedabadmarathon.com/images/banner-9_1.jpg"> -->
                    <!-- <meta itemprop="duration" content="40 Seconds"> -->
                    <!-- <meta itemprop="embedURL" content="https://www.youtube.com/embed/hNR9PSjjDMc"> -->
                    <!-- <link itemprop="url" href="https://www.youtube.com/watch?v=hNR9PSjjDMc" rel="author" /> -->
                    <!-- <a itemprop="url" href="https://www.youtube.com/watch?v=hNR9PSjjDMc"><span itemprop="name" style="display:block;"><strong>#iCan Challenge 2022</strong></span></a> -->
                    @{
                        Sitecore.Data.Fields.LinkField linkField = @item.Fields[Templates.HasMediaVideo.Fields.VideoLink];
                        var NavigateUrl = linkField.Url;
                    }
                    <iframe width="643" height="362" src="@NavigateUrl" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>										
                </div>


                <div class="video-caption">

                    <!-- <span>@Html.Sitecore().Field(Templates.HasMedia.Fields.Title, item) -->
                    <span class="pl-3">@Html.Sitecore().Field(Templates.HasMedia.Fields.Description, item)</span>





                </div>

            </div>
			</div>
			</div>

        }
        
    </div>
</section>

