@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@{





    var footerlinklink = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.Parameters["FooterMenu"];
    var footerlinklinkitem = Sitecore.Context.Database.GetItem(footerlinklink);
    var footerlinklinkdata = footerlinklinkitem.Children;
    var footersociallink = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.Parameters["FooterSocialMenu"];
    var footerSociallinkitem = Sitecore.Context.Database.GetItem(footersociallink);
    var footerSociallinkdata = footerSociallinkitem.Children;
    var footerlogo = Sitecore.Mvc.Presentation.RenderingContext.Current.Rendering.Parameters["FooterLogo"];


    var i = 1;
    var j = 1;
    var k = 5;
}

<div class="container">
    <div class="row footerPanel2">
        <div class="col-md-4 ft-submenu col-6 d-md-block d-none">
            @foreach (var item in footerlinklinkdata.ToList())
            {
                Sitecore.Data.Fields.LinkField linkvalues = item.Fields["Link"];
                var linkUrls = linkvalues.GetFriendlyUrl();
			  if (i == 1)
                {

                    <h5><a href="@linkUrls">@Html.Sitecore().Field("NavigationTitle", item)</a></h5>
                    if (item.HasChildren)
                    {
                        <ul class="ft-business">
                            @foreach (var items in item.GetChildren().ToList())
                            {
                                Sitecore.Data.Fields.LinkField linkvalue = items.Fields["Link"];
                                var link = linkvalue.GetFriendlyUrl();

                                <li><a href="@link">@Html.Sitecore().Field("NavigationTitle", items)</a></li>


                            }

                        </ul>

}
                }
               else if (i <= 2 && i>1)
                {

                    <h5><a href="@linkUrls">@Html.Sitecore().Field("NavigationTitle", item)</a></h5>


                }
                i++;

            }
        </div>


       
            <div class="col-md-4 col-6 d-md-block d-none">
                <div>
                    @foreach (var items in footerlinklinkdata.ToList())
                    {
                        Sitecore.Data.Fields.LinkField linkvaluess = items.Fields["Link"];
                        var linkUrlss = linkvaluess.GetFriendlyUrl();
                        if (j > 2)
                        {
                            <h5><a href="@linkUrlss">@Html.Sitecore().Field("NavigationTitle", items)</a></h5>
                        }
                        j++;
                    }
                        </div>
            </div>


            <div class="col-md-4">
                <div class="row ft-logo">
                    <div class="col-sm-12 mb-3 text-center">

                        <ul class="ft-social">
                            @foreach (var itemss in footerSociallinkdata.ToList())
                            {
                                var titles= itemss.Fields["NavigationTitle"];
                                var icons = itemss.Fields["Icon"];
                                        <li><a href="" target="_blank" title="" data-toggle="tooltip" data-placement="top" data-original-title=@titles><i class="@icons"> </i></a></li>
                               
                            }
                            </ul>
                    </div>
                    <div class="col-sm-12 mt-3 text-center">
                        <img src="@footerlogo" class="img-fluid">
                    </div>
                </div>
            </div>
        </div>
                </div>